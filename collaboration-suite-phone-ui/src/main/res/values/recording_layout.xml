<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.RecordingWidget">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_iconStyle" />
        <attr name="android:textViewStyle" />
    </declare-styleable>

    <style name="KaleyraCollaborationSuiteUI.RecordingWidget" parent="">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.RecordingWidget.RootLayout</item>
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.RecordingWidget.Icon</item>
        <item name="android:textViewStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.RecordingWidget</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.RecordingWidget.RootLayout" parent="KaleyraCollaborationSuiteUI.RecordingWidget">
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space4</item>
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space4</item>
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space6</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space6</item>
        <item name="android:background">@drawable/kaleyra_recording_widget_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space8</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space8</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.RecordingWidget.Icon" parent="">
        <item name="android:layout_width">@dimen/kaleyra_dimen_space20</item>
        <item name="android:layout_height">@dimen/kaleyra_dimen_space20</item>
        <item name="srcCompat">@drawable/kaleyra_recording_dot</item>
        <item name="tint">@color/kaleyra_recording_color</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.Subtitle.RecordingWidget" parent="KaleyraCollaborationSuiteUI.TextView.Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/kaleyra_call_info_rec</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>