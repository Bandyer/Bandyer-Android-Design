<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="KaleyraCollaborationSuiteUI.BottomSheetDialog.Snapshot" parent="KaleyraCollaborationSuiteUI.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" tools:targetApi="o_mr1">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/KaleyraCollaborationSuiteUI.BottomSheetModalStyle.Snapshot</item>
    </style>

    <declare-styleable name="KaleyraCollaborationSuiteUI.BottomSheetDialog.Snapshot.Layout">
        <attr name="kaleyra_collaborateButtonStyle" format="reference" />
        <attr name="kaleyra_negativeButtonStyle" />
        <attr name="kaleyra_positiveButtonStyle" />
    </declare-styleable>

    <style name="KaleyraCollaborationSuiteUI.BottomSheetDialog.Snapshot.Layout" parent="">
        <item name="kaleyra_collaborateButtonStyle">@style/KaleyraCollaborationSuiteUI.CollaborateButton</item>
        <item name="kaleyra_negativeButtonStyle">@style/KaleyraCollaborationSuiteUI.ImageButton.Close</item>
        <item name="kaleyra_positiveButtonStyle">@style/KaleyraCollaborationSuiteUI.ImageButton.Save</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.BottomSheetModalStyle.Snapshot" parent="KaleyraCollaborationSuiteUI.BottomSheetModalStyle">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

</resources>