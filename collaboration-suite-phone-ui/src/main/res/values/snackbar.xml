<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.SnackBarStyle">
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="kaleyra_iconStyle" />
    </declare-styleable>

    <style name="KaleyraCollaborationSuiteUI.SnackBarStyle" parent="">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.SnackBarStyle.RootLayout</item>
        <item name="kaleyra_titleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Title.SnackBarStyle</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.SnackBarStyle</item>
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.SnackBarStyle.Icon</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.SnackBarStyle.RootLayout" parent="">
        <item name="android:padding">@dimen/kaleyra_dimen_space8</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.Title.SnackBarStyle" parent="KaleyraCollaborationSuiteUI.TextView.Title">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space8</item>
        <item name="android:textColor">?attr/colorSurface</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_normal</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.Subtitle.SnackBarStyle" parent="KaleyraCollaborationSuiteUI.TextView.Subtitle">
        <item name="android:textColor">?attr/colorSurface</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_normal</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.SnackBarStyle.Icon" parent="">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="tint">?attr/colorSurface</item>
    </style>

</resources>