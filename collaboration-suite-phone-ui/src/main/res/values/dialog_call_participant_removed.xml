<resources>

    <style name="KaleyraCollaborationSuiteUI.FragmentDialog.CallParticipantRemoved" parent="KaleyraCollaborationSuiteUI.FragmentDialog">
        <item name="colorOnSecondary">@color/kaleyra_colorOnSecondary</item>
        <item name="android:padding">@dimen/kaleyra_dimen_space8</item>
        <item name="kaleyra_titleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Title.CallParticipantRemoved</item>
        <item name="kaleyra_positiveButtonStyle">@style/KaleyraCollaborationSuiteUI.FragmentDialog.CallParticipantRemoved.PositiveButton</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.Title.CallParticipantRemoved" parent="KaleyraCollaborationSuiteUI.TextView.Title">
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/kaleyra_dimen_space2</item>
        <item name="android:textColor">@color/kaleyra_color_on_surface_80</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.FragmentDialog.CallParticipantRemoved.PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space16</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_h3</item>
        <item name="android:text">@string/kaleyra_call_participant_removed_understood_message</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>