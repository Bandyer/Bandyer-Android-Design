<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.SmartGlassDialogMenu">
        <attr name="kaleyra_smartGlassMenuStyle" format="reference" />
    </declare-styleable>

    <style name="KaleyraCollaborationSuiteUI.SmartGlassDialogMenu" parent="KaleyraCollaborationSuiteUI.FullScreenDialog">
        <item name="kaleyra_smartGlassMenuStyle">@style/KaleyraCollaborationSuiteUI.SmartGlassMenu</item>
    </style>

    <declare-styleable name="KaleyraCollaborationSuiteUI.SmartGlassMenu">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_pagerIndicatorStyle" format="reference" />
        <attr name="kaleyra_smartGlassMicrophoneStyle" format="reference" />
        <attr name="kaleyra_smartGlassCameraStyle" format="reference" />
        <attr name="kaleyra_smartGlassParticipantsStyle" format="reference" />
    </declare-styleable>

    <style name="KaleyraCollaborationSuiteUI.SmartGlassDialogMenu.RootLayout">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.SmartGlassMenu" parent="">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.SmartGlassDialogMenu.RootLayout</item>
        <item name="kaleyra_smartGlassMicrophoneStyle">@style/KaleyraCollaborationSuiteUI.ActionButton.SmartGlass.Microphone</item>
        <item name="kaleyra_smartGlassCameraStyle">@style/KaleyraCollaborationSuiteUI.ActionButton.SmartGlass.Camera</item>
        <item name="kaleyra_smartGlassParticipantsStyle">@style/KaleyraCollaborationSuiteUI.ActionButton.SmartGlass.Participants</item>
        <item name="kaleyra_pagerIndicatorStyle">@style/KaleyraCollaborationSuiteUI.PagerIndicator</item>
    </style>
</resources>