<resources>

    <declare-styleable name="KaleyraCollaborationSuiteUI.UploadImage">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="kaleyra_progressTextStyle" />
        <attr name="kaleyra_progressStyle" />
        <attr name="kaleyra_errorIconStyle" />
    </declare-styleable>

    <style name="KaleyraCollaborationSuiteUI.BottomSheetDialog.Whiteboard.UploadImage" parent="">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.UploadImageRootLayout</item>
        <item name="kaleyra_titleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Title.UploadProgress</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.UploadProgress</item>
        <item name="kaleyra_progressTextStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.UploadProgressPercentage</item>
        <item name="kaleyra_progressStyle">@style/KaleyraCollaborationSuiteUI.UploadProgressIndicator</item>
        <item name="kaleyra_errorIconStyle">@style/KaleyraCollaborationSuiteUI.ImageButton.UploadError</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.UploadImageRootLayout" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/kaleyra_dimen_space3</item>
        <item name="cardCornerRadius">@dimen/kaleyra_dimen_space3</item>
        <item name="contentPaddingLeft">@dimen/kaleyra_dimen_space8</item>
        <item name="contentPaddingTop">@dimen/kaleyra_dimen_space6</item>
        <item name="contentPaddingBottom">@dimen/kaleyra_dimen_space6</item>
        <item name="contentPaddingRight">@dimen/kaleyra_dimen_space8</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.BottomSheetDialog.Whiteboard.UploadImage.Day" parent="KaleyraCollaborationSuiteUI.BottomSheetDialog.Whiteboard.UploadImage">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.UploadImageRootLayout.Day</item>
        <item name="kaleyra_titleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Title.UploadProgress.Day</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.UploadProgress.Day</item>
        <item name="kaleyra_progressTextStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.UploadProgressPercentage.Day</item>
        <item name="kaleyra_progressStyle">@style/KaleyraCollaborationSuiteUI.UploadProgressIndicator</item>
        <item name="kaleyra_errorIconStyle">@style/KaleyraCollaborationSuiteUI.ImageButton.UploadError</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.UploadImageRootLayout.Day" parent="KaleyraCollaborationSuiteUI.UploadImageRootLayout">
        <item name="cardBackgroundColor">@color/kaleyra_colorSurface</item>
    </style>

</resources>