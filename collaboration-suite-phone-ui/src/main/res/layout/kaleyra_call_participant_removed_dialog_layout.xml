<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context="feedback.FeedbackDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="?attr/kaleyra_rootLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/kaleyra_callParticipantRemovedStyle">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/kaleyra_title"
            style="?attr/kaleyra_titleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@plurals/kaleyra_call_participant_removed" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
