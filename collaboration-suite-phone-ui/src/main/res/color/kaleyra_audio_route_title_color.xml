<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- States common to all audio devices -->
    <item android:color="?attr/colorOnSurface" app:kaleyra_state_default="true" />
    <item android:color="?attr/colorSecondary" app:kaleyra_state_playing_audio="true" />
    <!-- States only for bluetooth devices -->
    <item android:color="?attr/colorOnSurface" app:kaleyra_state_disconnected="true" />
    <item android:color="?attr/colorOnSurface" app:kaleyra_state_connecting="true" />
    <item android:color="?attr/colorOnSurface" app:kaleyra_state_failed="true" />
    <item android:color="?attr/colorOnSurface" app:kaleyra_state_deactivating="true" />
    <item android:color="?attr/colorOnSurface" app:kaleyra_state_available="true" />
    <item android:color="?attr/colorOnSurface" app:kaleyra_state_connected="true" />
    <item android:color="?attr/colorOnSurface" app:kaleyra_state_active="true" />
    <item android:color="?attr/colorOnSurface" app:kaleyra_state_activating="true" />
    <item android:color="?attr/colorOnSurface" app:kaleyra_state_connecting_audio="true" />
</selector>