<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/bandyer_dimen_space4"
    tools:context=".rating.RateFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bandyer_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_bandyer_close"
        app:iconTint="?attr/colorOnSurface"
        app:iconSize="@dimen/bandyer_dimen_space20"
        style="@style/BandyerSDKDesign.ImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bandyer_dimen_space28"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/bandyer_dimen_space28"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="Valuta la qualità della video chiamata"
        android:textColor="@color/bandyer_color_on_surface_50"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bandyer_close"
        tools:text="Valuta la qualità della video chiamata" />

    <com.bandyer.sdk_design.rating.ScaleRatingBar
        android:id="@+id/bandyer_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bandyer_dimen_space28"
        android:layout_marginTop="@dimen/bandyer_dimen_space24"
        android:layout_marginEnd="@dimen/bandyer_dimen_space28"
        android:clickable="true"
        android:focusable="true"
        android:rating="1"
        app:bandyer_minRating="1"
        app:bandyer_numLevels="5"
        app:drawableSize="@dimen/bandyer_dimen_space24"
        app:drawableTint="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bandyer_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bandyer_dimen_space28"
        android:layout_marginTop="@dimen/bandyer_dimen_space8"
        android:layout_marginEnd="@dimen/bandyer_dimen_space28"
        android:gravity="center"
        android:letterSpacing="0.03"
        android:text="Molto male"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bandyer_rating"
        tools:text="Molto male" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bandyer_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bandyer_dimen_space16"
        android:layout_marginTop="@dimen/bandyer_dimen_space32"
        android:layout_marginEnd="@dimen/bandyer_dimen_space16"
        app:hintEnabled="false"
        app:boxBackgroundColor="@color/bandyer_rating_input_background_color"
        app:boxStrokeColor="@color/bandyer_rating_input_stroke_color"
        app:boxStrokeWidth="@dimen/bandyer_dimen_space1"
        app:boxStrokeWidthFocused="@dimen/bandyer_dimen_space1"
        android:inputType="textAutoCorrect|textCapSentences|textAutoComplete|textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bandyer_subtitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bandyer_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:textSize="14sp"
            android:scrollbars="vertical"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            android:scrollbarStyle="insideInset"
            android:scrollbarThumbVertical="@drawable/bandyer_rating_scrollbar_thumb"
            android:paddingTop="@dimen/bandyer_dimen_space8"
            android:paddingBottom="@dimen/bandyer_dimen_space8"
            android:paddingStart="@dimen/bandyer_dimen_space8"
            android:paddingEnd="@dimen/bandyer_dimen_space8"
            android:textColorHint="@color/bandyer_color_on_surface_50"
            android:textAppearance="@style/BandyerSDKDesign.TextAppearance.TextInputEditText"
            android:hint="Lascia un commento..."
            tools:text="Lascia un commento..." />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bandyer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bandyer_dimen_space16"
        android:layout_marginTop="@dimen/bandyer_dimen_space16"
        android:layout_marginEnd="@dimen/bandyer_dimen_space16"
        android:layout_marginBottom="@dimen/bandyer_dimen_space12"
        android:backgroundTint="?attr/colorSecondary"
        android:letterSpacing="0.04"
        android:text="Vota"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bandyer_input_layout"
        tools:text="Vota" />

</androidx.constraintlayout.widget.ConstraintLayout>