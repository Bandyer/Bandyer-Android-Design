<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/bandyer_rootLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="?attr/bandyer_feedbackSentLayoutStyle">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_title"
        style="?attr/bandyer_titleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Thank you for using our service" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_subtitle"
        style="?attr/bandyer_subtitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="See you soon" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bandyer_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Close" />

</LinearLayout>