<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="?attr/bandyer_smartGlassChatFragmentStyle">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bandyer_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bandyer_bottomActionBar"
        tools:listitem="@layout/bandyer_chat_item_layout"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/bandyer_counterStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bandyer_bottomActionBar"/>

    <com.bandyer.sdk_design.new_smartglass.bottom_action_bar.BottomActionBarView
        android:id="@+id/bandyer_bottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/bandyer_bottomActionBarStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>