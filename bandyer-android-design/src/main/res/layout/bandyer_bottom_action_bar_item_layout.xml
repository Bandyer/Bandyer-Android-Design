<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="?attr/bandyer_rootLayoutStyle">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bandyer_gesture_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        style="?attr/bandyer_itemGestureIconStyle"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_gesture_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Swipe"
        style="?attr/bandyer_itemGestureTextStyle"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="cancel"
        style="?attr/bandyer_itemActionTextStyle"/>

</LinearLayout>