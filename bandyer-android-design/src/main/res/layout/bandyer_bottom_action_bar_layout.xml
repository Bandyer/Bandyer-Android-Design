<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/BandyerSDKDesign.SmartGlass.MenuFragment.BottomActionBar"
    android:theme="@style/BandyerSDKDesign.SmartGlass.BottomActionBar">

    <com.bandyer.sdk_design.new_smartglass.bottom_action_bar.BottomActionBarItemView
        android:id="@+id/kaleyra_swipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="?attr/kaleyra_swipeItemStyle"/>

    <com.bandyer.sdk_design.new_smartglass.bottom_action_bar.BottomActionBarItemView
        android:id="@+id/kaleyra_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="?attr/kaleyra_tapItemStyle"/>

    <com.bandyer.sdk_design.new_smartglass.bottom_action_bar.BottomActionBarItemView
        android:id="@+id/kaleyra_swipe_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="?attr/kaleyra_swipeDownItemStyle"/>

</LinearLayout>