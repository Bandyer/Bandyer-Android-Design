<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/bandyer_rootLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/BandyerSDKDesign.SmartGlass.Chat.Notification">

    <com.bandyer.sdk_design.new_smartglass.chat.notification.BandyerContactAvatarGroupView
        android:id="@+id/bandyer_avatars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bandyer_dimen_space16"
        android:theme="?attr/bandyer_avatarStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_title"
        style="?attr/bandyer_titleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/bandyer_avatars"
        app:layout_constraintStart_toEndOf="@id/bandyer_avatars"
        app:layout_constraintTop_toTopOf="@id/bandyer_avatars"
        tools:text="Mario Rossi" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_time"
        style="?attr/bandyer_timestampStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/bandyer_avatars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bandyer_avatars"
        tools:text="10.36" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_message"
        style="?attr/bandyer_messageStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/bandyer_bottom_action_bar"
        app:layout_constraintEnd_toEndOf="@id/bandyer_time"
        app:layout_constraintStart_toStartOf="@id/bandyer_title"
        app:layout_constraintTop_toBottomOf="@id/bandyer_title"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="Hello there" />

    <com.bandyer.sdk_design.new_smartglass.bottom_action_bar.BandyerBottomActionBarView
        android:id="@+id/bandyer_bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/bandyer_bottomActionBarStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bandyer_message" />

</androidx.constraintlayout.widget.ConstraintLayout>