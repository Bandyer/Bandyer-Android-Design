<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bandyer_file_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="6dp"
        android:background="@color/md_red_700"
        app:layout_constraintBottom_toTopOf="@id/bandyer_file_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bandyer_file_type"
        app:layout_constraintLeft_toLeftOf="@id/bandyer_file_type"
        app:layout_constraintRight_toRightOf="@id/bandyer_file_type"
        app:layout_constraintStart_toStartOf="@id/bandyer_file_type"
        app:layout_constraintTop_toBottomOf="@id/bandyer_file_type"
        tools:text="78 MB" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bandyer_action"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="12dp"
        android:background="@color/md_blue_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="middle"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/bandyer_progress_bar"
        app:layout_constraintEnd_toStartOf="@+id/bandyer_action"
        app:layout_constraintLeft_toRightOf="@+id/bandyer_file_type"
        app:layout_constraintRight_toLeftOf="@+id/bandyer_action"
        app:layout_constraintStart_toEndOf="@+id/bandyer_file_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Contratto019_ginopino_90987_mario_848.pdf" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/bandyer_progress_bar"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@id/bandyer_file_action"
        app:layout_constraintEnd_toEndOf="@+id/bandyer_file_name"
        app:layout_constraintLeft_toLeftOf="@+id/bandyer_file_name"
        app:layout_constraintRight_toRightOf="@+id/bandyer_file_name"
        app:layout_constraintStart_toStartOf="@+id/bandyer_file_name"
        app:layout_constraintTop_toBottomOf="@id/bandyer_file_name" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bandyer_file_action"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@color/md_blue_700"
        app:layout_constraintBottom_toBottomOf="@id/bandyer_user"
        app:layout_constraintLeft_toLeftOf="@id/bandyer_file_name"
        app:layout_constraintStart_toStartOf="@id/bandyer_file_name"
        app:layout_constraintTop_toTopOf="@id/bandyer_user" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bandyer_file_action"
        app:layout_constraintStart_toEndOf="@id/bandyer_file_action"
        app:layout_constraintTop_toBottomOf="@id/bandyer_progress_bar"
        tools:text="Mario Draghi" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/bandyer_file_name"
        app:layout_constraintRight_toRightOf="@+id/bandyer_file_name"
        app:layout_constraintTop_toTopOf="@+id/bandyer_user"
        tools:text="85%" />

</androidx.constraintlayout.widget.ConstraintLayout>