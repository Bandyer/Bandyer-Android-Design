<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BOTTOM ACTION BAR -->
    <declare-styleable name="BandyerSDKDesign.SmartGlass.BottomActionBar">
        <attr name="bandyer_swipeItemStyle" format="reference"/>
        <attr name="bandyer_swipeDownItemStyle" format="reference"/>
        <attr name="bandyer_tapItemStyle" format="reference"/>
    </declare-styleable>

    <style name="BandyerSDKDesign.SmartGlass.BottomActionBar" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.SmartGlass.BottomActionBar.Root</item>
        <item name="bandyer_swipeItemStyle">@style/BandyerSDKDesign.SmartGlass.BottomActionBar.Item.Swipe</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.SmartGlass.BottomActionBar.Item.SwipeDown</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.SmartGlass.BottomActionBar.Item.Tap</item>
    </style>

    <style name="BandyerSDKDesign.SmartGlass.BottomActionBar.Root" parent="">
        <item name="android:minHeight">@dimen/bandyer_dimen_space32</item>
        <item name="android:maxHeight">@dimen/bandyer_dimen_space32</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- SWIPE ITEM -->
    <style name="BandyerSDKDesign.SmartGlass.BottomActionBar.Item.Swipe" parent="BandyerSDKDesign.SmartGlass.BottomActionBar.Item">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.SmartGlass.BottomActionBar.Item.Swipe.Root</item>
        <item name="bandyer_gestureIcon">@drawable/bandyer_close_icon</item>
        <item name="bandyer_gestureText">@string/bandyer_swipe</item>
    </style>

    <style name="BandyerSDKDesign.SmartGlass.BottomActionBar.Item.Swipe.Root" parent="">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space4</item>
    </style>

    <!-- SWIPE DOWN ITEM -->
    <style name="BandyerSDKDesign.SmartGlass.BottomActionBar.Item.SwipeDown" parent="BandyerSDKDesign.SmartGlass.BottomActionBar.Item">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.SmartGlass.BottomActionBar.Item.SwipeDown.Root</item>
        <item name="bandyer_gestureIcon">@drawable/bandyer_close_icon</item>
        <item name="bandyer_gestureText">@string/bandyer_tap</item>
    </style>

    <style name="BandyerSDKDesign.SmartGlass.BottomActionBar.Item.SwipeDown.Root" parent="">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space8</item>
    </style>

    <!-- TAP ITEM -->
    <style name="BandyerSDKDesign.SmartGlass.BottomActionBar.Item.Tap" parent="BandyerSDKDesign.SmartGlass.BottomActionBar.Item">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.SmartGlass.BottomActionBar.Item.Tap.Root</item>
        <item name="bandyer_gestureIcon">@drawable/bandyer_close_icon</item>
        <item name="bandyer_gestureText">@string/bandyer_swipe</item>
    </style>

    <style name="BandyerSDKDesign.SmartGlass.BottomActionBar.Item.Tap.Root" parent="">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space8</item>
    </style>
</resources>