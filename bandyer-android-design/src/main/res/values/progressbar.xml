<resources>

    <style name="BandyerSDKDesign.ChatNetworkProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/bandyer_dimen_space16</item>
        <item name="android:indeterminate">true</item>
        <item name="trackColor">?attr/colorOnBackground</item>
    </style>

    <style name="BandyerSDKDesign.UploadProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:layout_height">@dimen/bandyer_dimen_progress_bar_circular_size</item>
        <item name="android:layout_width">@dimen/bandyer_dimen_progress_bar_circular_size</item>
        <item name="indicatorSize">55dp</item>
        <item name="trackColor">@color/bandyer_color_grey</item>
        <item name="android:gravity">center</item>
        <item name="indicatorColor">?attr/colorSecondary</item>
    </style>

    <style name="BandyerSDKDesign.LoadingProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackThickness">@dimen/bandyer_dimen_space2</item>
        <item name="indicatorColor">?attr/colorSecondary</item>
    </style>

</resources>