<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BandyerSDKDesign.FileShare.ProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:layout_width">@dimen/bandyer_dimen_space0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space8</item>
        <item name="trackThickness">@dimen/bandyer_dimen_space4</item>
        <item name="indicatorColor">?attr/colorSecondary</item>
        <item name="trackColor">@color/bandyer_color_on_background_20</item>
        <item name="trackCornerRadius">@dimen/bandyer_dimen_space3</item>
    </style>

    <style name="BandyerSDKDesign.ImageButton.FileShareAction" parent="BandyerSDKDesign.ImageButton">
        <item name="android:layout_width">@dimen/bandyer_dimen_space28</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space28</item>
        <item name="backgroundTint">@color/bandyer_file_share_action_background_color</item>
        <item name="strokeWidth">@dimen/bandyer_dimen_space2</item>
        <item name="strokeColor">@color/bandyer_file_share_action_stroke_color</item>
        <item name="icon">@drawable/bandyer_file_share_action_icon</item>
        <item name="iconSize">@dimen/bandyer_dimen_space14</item>
        <item name="iconTint">@color/bandyer_file_share_action_icon_color</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FileShareError" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:textSize">@dimen/bandyer_dimen_space13</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FileShareProgress" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/bandyer_dimen_space12</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FileShareUser" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">@dimen/bandyer_dimen_space0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space8</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space24</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/bandyer_dimen_space12</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Title.FileName" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:layout_width">@dimen/bandyer_dimen_space0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space16</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/bandyer_dimen_space16</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FileSize" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/bandyer_dimen_space12</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space8</item>
    </style>

    <style name="BandyerSDKDesign.FileShare.OperationType" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="android:layout_width">@dimen/bandyer_dimen_space10</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space10</item>
        <item name="android:tint">@color/bandyer_op_type_icon_color</item>
        <item name="srcCompat">@drawable/bandyer_op_type_icon</item>
    </style>

    <style name="BandyerSDKDesign.FileShare.FileType" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="android:layout_width">@dimen/bandyer_dimen_space40</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space40</item>
        <item name="android:background">@color/bandyer_file_type_background_color</item>
        <item name="android:tint">@color/bandyer_file_type_icon_color</item>
        <item name="srcCompat">@drawable/bandyer_file_type_icon</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="contentPadding">@dimen/bandyer_dimen_space10</item>
        <item name="shapeAppearance">@style/BandyerSDKDesign.FileShare.FileType.ShapeAppearance</item>
    </style>

    <style name="BandyerSDKDesign.FileShare.FileType.ShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

</resources>