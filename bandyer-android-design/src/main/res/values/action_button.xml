<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ACTION BUTTON STYLEABLE -->

    <declare-styleable name="BandyerSDKDesign.ActionButton" tools:ignore="MissingDefaultResource">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="materialButtonStyle" />
        <attr name="android:textViewStyle" />
    </declare-styleable>

    <!-- ACTION BUTTON STYLES -->

    <style name="BandyerSDKDesign.ActionButton">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.ActionButton.RootLayout</item>
    </style>

    <style name="BandyerSDKDesign.ActionButton.SmartGlass" parent="BandyerSDKDesign.ActionButton">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.ActionButton.RootLayout.SmartGlass</item>
    </style>

    <style name="BandyerSDKDesign.ActionButton.RootLayout" parent="">
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space8</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space20</item>
    </style>

    <style name="BandyerSDKDesign.ActionButton.RootLayout.SmartGlass" parent="BandyerSDKDesign.ActionButton.RootLayout">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space0</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space0</item>
    </style>

    <style name="BandyerSDKDesign.ActionButton.ConfirmButton" parent="BandyerSDKDesign.ActionButton">
        <item name="materialButtonStyle">@style/BandyerSDKDesign.ImageButton.Confirm</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextAppearance.ButtonLabel.Confirm</item>
    </style>

    <style name="BandyerSDKDesign.ActionButton.CancelButton" parent="BandyerSDKDesign.ActionButton">
        <item name="materialButtonStyle">@style/BandyerSDKDesign.ImageButton.Cancel</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextAppearance.ButtonLabel.Cancel</item>
    </style>

    <!-- CALL ACTION BUTTONS -->

    <style name="BandyerSDKDesign.ActionButton.AudioRoute" parent="BandyerSDKDesign.ActionButton">
        <item name="materialButtonStyle">@style/BandyerSDKDesign.ImageButton.Call.AudioRoute</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.Subtitle.ButtonLabel.AudioRoute</item>
    </style>

    <style name="BandyerSDKDesign.ActionButton.Participants" parent="BandyerSDKDesign.ActionButton">
        <item name="materialButtonStyle">@style/BandyerSDKDesign.ImageButton.Call.Participants</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.Subtitle.ButtonLabel.Participants</item>
