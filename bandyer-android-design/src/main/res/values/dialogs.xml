<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="BandyerSDKDesign.FragmentDialog">
        <!-- Dialog auto dismiss time in milliseconds. The timer starts after the user has pressed the vote button. -->
        <attr name="bandyer_autoDismissTime" format="integer" />
    </declare-styleable>

    <style name="BandyerSDKDesign.FragmentDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bandyer_floating_dialog_background</item>
        <item name="android:windowAnimationStyle">@style/BandyerSDKDesign.FragmentDialog.Animation</item>
        <item name="bandyer_autoDismissTime">3000</item>
    </style>

    <style name="BandyerSDKDesign.FragmentDialog.Animation" parent="@style/Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/bandyer_slide_up</item>
        <item name="android:windowExitAnimation">@anim/bandyer_slide_down</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialog.V16" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="toolbarStyle">@style/BandyerSDKDesign.BottomSheetDialogToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/BandyerSDKDesign.BottomSheetDialog.V16.ToolbarNavigationButtonStyle</item>
        <item name="bottomSheetStyle">@style/BandyerSDKDesign.BottomSheetModalStyle</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialog.V16.Day" parent="BandyerSDKDesign.BottomSheetDialog.V16">
        <item name="toolbarStyle">@style/BandyerSDKDesign.BottomSheetDialogToolbarStyle.Day</item>
        <item name="toolbarNavigationButtonStyle">@style/BandyerSDKDesign.BottomSheetDialog.V16.ToolbarNavigationButtonStyle.Day</item>
        <item name="bottomSheetStyle">@style/BandyerSDKDesign.BottomSheetModalStyle.Day</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetModalStyle.Day" parent="BandyerSDKDesign.BottomSheetModalStyle">
        <item name="backgroundTint">@color/bandyer_colorSurface</item>
    </style>

    <style name="BandyerSDKDesign.FullScreenDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialog.V16.ToolbarNavigationButtonStyle" parent="">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialog.V16.ToolbarNavigationButtonStyle.Day" parent="">
        <item name="android:tint">@color/bandyer_colorOnPrimary</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialogToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/BandyerSDKDesign.BottomSheetDialogToolbarStyle.MaterialThemeOverlay</item>
        <item name="android:touchscreenBlocksFocus" tools:targetApi="lollipop">false</item>
        <item name="navigationIcon">@drawable/ic_bandyer_back_down</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space12</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialogToolbarStyle.Day" parent="BandyerSDKDesign.BottomSheetDialogToolbarStyle">
        <item name="materialThemeOverlay">@style/BandyerSDKDesign.BottomSheetDialogToolbarStyle.MaterialThemeOverlay.Day</item>
        <item name="android:background">@color/bandyer_colorPrimary</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialogToolbarStyle.MaterialThemeOverlay" parent="">
        <item name="drawableTint">@color/bandyer_whiteboard_toolbar_menu_color</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialogToolbarStyle.MaterialThemeOverlay.Day" parent="">
        <item name="drawableTint">@color/bandyer_whiteboard_toolbar_menu_color_day</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialog.Day" parent="BandyerSDKDesign.BottomSheetDialog.V16.Day"/>
    <style name="BandyerSDKDesign.BottomSheetDialog" parent="BandyerSDKDesign.BottomSheetDialog.V16"/>

</resources>