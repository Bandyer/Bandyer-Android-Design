<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BandyerSDKDesign.SmartGlass.Avatar">
        <attr name="bandyer_imageViewStyle" format="reference" />
    </declare-styleable>

    <style name="BandyerSDKDesign.SmartGlass.Avatar" parent="">
        <item name="bandyer_imageViewStyle">@style/BandyerSDKDesign.SmartGlass.RoundedImage</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.Avatar.Smartglass</item>
    </style>

    <!-- TEXT -->
    <style name="BandyerSDKDesign.TextView.Avatar.Smartglass" parent="BandyerSDKDesign.TextView">
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space0</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="autoSizeMaxTextSize">@dimen/bandyer_dimen_text_normal</item>
        <item name="autoSizeMinTextSize">@dimen/bandyer_dimen_text_2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>
</resources>