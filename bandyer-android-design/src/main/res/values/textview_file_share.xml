<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BandyerSDKDesign.TextView.Subtitle.FileShareError" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FileShareProgress" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bandyer_color_on_background_80</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FileShareUser" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">@dimen/bandyer_dimen_space0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space8</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space24</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/bandyer_color_on_background_80</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Title.FileName" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:layout_width">@dimen/bandyer_dimen_space0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space16</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/bandyer_dimen_space16</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FileSize" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:textColor">@color/bandyer_color_on_background_80</item>
    </style>
</resources>