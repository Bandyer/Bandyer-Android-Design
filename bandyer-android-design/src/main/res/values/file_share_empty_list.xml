<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BandyerSDKDesign.BottomSheetDialog.FileShare.EmptyListLayout">
        <attr name="bandyer_rootLayoutStyle"/>
        <attr name="bandyer_iconStyle"/>
        <attr name="bandyer_titleStyle" />
        <attr name="bandyer_subtitleStyle" />
    </declare-styleable>

    <style name="BandyerSDKDesign.BottomSheetModalStyle.FileShare.EmptyListLayout" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.BottomSheetModalStyle.FileShare.EmptyListLayout.RootLayout</item>
        <item name="bandyer_iconStyle">@style/BandyerSDKDesign.BottomSheetModalStyle.FileShare.EmptyListLayout.Icon</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.BottomSheetModalStyle.FileShare.EmptyListLayout.Title</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.BottomSheetModalStyle.FileShare.EmptyListLayout.Subtitle</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetModalStyle.FileShare.EmptyListLayout.RootLayout" parent="">
        <item name="android:paddingStart">@dimen/bandyer_dimen_space50</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space50</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetModalStyle.FileShare.EmptyListLayout.Icon" parent="">
        <item name="android:layout_width">@dimen/bandyer_dimen_space56</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space56</item>
        <item name="srcCompat">@drawable/ic_bandyer_close</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetModalStyle.FileShare.EmptyListLayout.Title" parent="">
        <item name="android:text">@string/bandyer_no_file_shared</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bandyer_dimen_space16</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space32</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetModalStyle.FileShare.EmptyListLayout.Subtitle" parent="">
        <item name="android:text">@string/bandyer_click_to_share_file</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/bandyer_dimen_space14</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>