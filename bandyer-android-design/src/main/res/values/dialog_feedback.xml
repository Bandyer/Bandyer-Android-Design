<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BandyerSDKDesign.FragmentDialog.Feedback">
        <attr name="bandyer_feedbackLayoutStyle" format="reference" />
        <attr name="bandyer_feedbackSentLayoutStyle" format="reference" />
    </declare-styleable>

    <style name="BandyerSDKDesign.FragmentDialog.Feedback" parent="BandyerSDKDesign.FragmentDialog">
        <item name="colorOnSecondary">@color/bandyer_colorOnSecondary</item>
        <item name="bandyer_feedbackLayoutStyle">@style/BandyerSDKDesign.FragmentDialog.FeedbackLayout</item>
        <item name="bandyer_feedbackSentLayoutStyle">@style/BandyerSDKDesign.FragmentDialog.FeedbackSentLayout</item>
    </style>

    <declare-styleable name="BandyerSDKDesign.FragmentDialog.FeedbackLayout">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="bandyer_closeButtonStyle" />
        <attr name="bandyer_ratingBarStyle" format="reference" />
        <attr name="bandyer_titleStyle" />
        <attr name="bandyer_subtitleStyle" />
        <attr name="textInputStyle" />
        <attr name="bandyer_positiveButtonStyle" />
    </declare-styleable>

    <style name="BandyerSDKDesign.FragmentDialog.FeedbackLayout" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.FragmentDialog.FeedbackLayout.RootLayout</item>
        <item name="bandyer_closeButtonStyle">@style/BandyerSDKDesign.ImageButton.FeedbackLayoutCloseButton</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.FeedbackLayout</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.Subtitle.FeedbackLayout</item>
        <item name="bandyer_ratingBarStyle">@style/BandyerSDKDesign.FragmentDialog.FeedbackLayout.RatingBarStyle</item>
        <item name="textInputStyle">@style/BandyerSDKDesign.FragmentDialog.FeedbackLayout.TextInputLayout</item>
        <item name="bandyer_positiveButtonStyle">@style/BandyerSDKDesign.FragmentDialog.FeedbackLayout.PositiveButton</item>
    </style>

    <style name="BandyerSDKDesign.FragmentDialog.FeedbackLayout.RootLayout" parent="">
        <item name="android:padding">@dimen/bandyer_dimen_space4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BandyerSDKDesign.ImageButton.FeedbackLayoutCloseButton" parent="BandyerSDKDesign.ImageButton">
        <item name="icon">@drawable/ic_bandyer_close</item>
        <item name="iconSize">@dimen/bandyer_dimen_space24</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="android:contentDescription">@string/bandyer_feedback_close</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space12</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space12</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space12</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space12</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Title.FeedbackLayout" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space28</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space2</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space28</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space2</item>
        <item name="android:text">@string/bandyer_feedback_evaluate_call</item>
        <item name="android:textColor">@color/bandyer_color_on_surface_80</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FeedbackLayout" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space28</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space28</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BandyerSDKDesign.FragmentDialog.FeedbackLayout.RatingBarStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space28</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space13</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space28</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="bandyer_minRating">1</item>
        <item name="bandyer_numLevels">5</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space10</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space10</item>
        <item name="android:contentDescription">@string/bandyer_feedback_rating_bar_descr</item>
        <item name="drawableSize">@dimen/bandyer_dimen_space28</item>
        <item name="drawableTint">?attr/colorSecondary</item>
    </style>

    <style name="BandyerSDKDesign.FragmentDialog.FeedbackLayout.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/BandyerSDKDesign.FragmentDialog.FeedbackLayout.TextInputLayout.MaterialThemeOverlay</item>
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space16</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space32</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:inputType">textAutoCorrect|textCapSentences|textAutoComplete|textMultiLine</item>
        <item name="boxBackgroundColor">@color/bandyer_rating_input_background_color</item>
        <item name="boxStrokeColor">@color/bandyer_rating_input_stroke_color</item>
        <item name="boxStrokeWidth">@dimen/bandyer_dimen_space1</item>
        <item name="boxStrokeWidthFocused">@dimen/bandyer_dimen_space1</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="BandyerSDKDesign.FragmentDialog.FeedbackLayout.TextInputLayout.MaterialThemeOverlay" parent="">
        <item name="editTextStyle">@style/BandyerSDKDesign.TextInputEditText.FeedbackLayout</item>
    </style>

    <style name="BandyerSDKDesign.TextInputEditText.FeedbackLayout" parent="BandyerSDKDesign.TextInputEditText">
        <item name="android:hint">@string/bandyer_feedback_leave_a_comment</item>
        <item name="android:maxLines">4</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbarThumbVertical">@drawable/bandyer_rating_scrollbar_thumb</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="BandyerSDKDesign.FragmentDialog.FeedbackLayout.PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space16</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space16</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:layout_marginBottom">@dimen/bandyer_dimen_space12</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:text">@string/bandyer_feedback_vote</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="BandyerSDKDesign.FragmentDialog.FeedbackSentLayout">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="bandyer_titleStyle" />
        <attr name="bandyer_subtitleStyle" />
        <attr name="bandyer_closeButtonStyle" />
    </declare-styleable>

    <style name="BandyerSDKDesign.FragmentDialog.FeedbackSentLayout" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.FragmentDialog.FeedbackSentLayout.RootLayout</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.FeedbackSentLayout</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.Subtitle.FeedbackSentLayout</item>
        <item name="bandyer_closeButtonStyle">@style/BandyerSDKDesign.FragmentDialog.FeedbackSentLayout.PositiveButton</item>
    </style>

    <style name="BandyerSDKDesign.FragmentDialog.FeedbackSentLayout.RootLayout" parent="">
        <item name="android:padding">@dimen/bandyer_dimen_space16</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Title.FeedbackSentLayout" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space4</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space32</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space4</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space2</item>
        <item name="android:text">@string/bandyer_feedback_thank_you</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FeedbackSentLayout" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space4</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space4</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space16</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space2</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space4</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space4</item>
        <item name="android:textColor">@color/bandyer_color_on_surface_50</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
        <item name="android:text">@string/bandyer_feedback_see_you_soon</item>
    </style>

    <style name="BandyerSDKDesign.FragmentDialog.FeedbackSentLayout.PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space32</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:text">@string/bandyer_feedback_close</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>