<resources>

    <declare-styleable name="BandyerSDKDesign.UploadImage">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="bandyer_titleStyle" />
        <attr name="bandyer_subtitleStyle" />
        <attr name="bandyer_progressTextStyle" />
        <attr name="bandyer_progressStyle" />
        <attr name="bandyer_errorIconStyle" />
    </declare-styleable>

    <style name="BandyerSDKDesign.BottomSheetDialog.Whiteboard.UploadImage" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.UploadImageRootLayout</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.UploadProgress</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.Subtitle.UploadProgress</item>
        <item name="bandyer_progressTextStyle">@style/BandyerSDKDesign.TextView.Subtitle.UploadProgressPercentage</item>
        <item name="bandyer_progressStyle">@style/BandyerSDKDesign.UploadProgressIndicator</item>
        <item name="bandyer_errorIconStyle">@style/BandyerSDKDesign.ImageButton.UploadError</item>
    </style>

    <style name="BandyerSDKDesign.UploadImageRootLayout" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/bandyer_dimen_space3</item>
        <item name="cardCornerRadius">@dimen/bandyer_dimen_space3</item>
        <item name="contentPaddingLeft">@dimen/bandyer_dimen_space8</item>
        <item name="contentPaddingTop">@dimen/bandyer_dimen_space6</item>
        <item name="contentPaddingBottom">@dimen/bandyer_dimen_space6</item>
        <item name="contentPaddingRight">@dimen/bandyer_dimen_space8</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialog.Whiteboard.UploadImage.Day" parent="BandyerSDKDesign.BottomSheetDialog.Whiteboard.UploadImage">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.UploadImageRootLayout.Day</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.UploadProgress.Day</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.Subtitle.UploadProgress.Day</item>
        <item name="bandyer_progressTextStyle">@style/BandyerSDKDesign.TextView.Subtitle.UploadProgressPercentage.Day</item>
        <item name="bandyer_progressStyle">@style/BandyerSDKDesign.UploadProgressIndicator</item>
        <item name="bandyer_errorIconStyle">@style/BandyerSDKDesign.ImageButton.UploadError</item>
    </style>

    <style name="BandyerSDKDesign.UploadImageRootLayout.Day" parent="BandyerSDKDesign.UploadImageRootLayout">
        <item name="cardBackgroundColor">@color/bandyer_colorSurface</item>
    </style>

</resources>