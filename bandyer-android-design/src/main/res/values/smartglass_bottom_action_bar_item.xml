<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BOTTOM ACTION BAR ITEM -->
    <declare-styleable name="BandyerSDKDesign.SmartGlass.BottomActionBar.Item">
        <attr name="bandyer_itemGestureIconStyle" format="reference"/>
        <attr name="bandyer_itemGestureTextStyle" format="reference"/>
        <attr name="bandyer_itemActionTextStyle" format="reference"/>
    </declare-styleable>

    <style name="BandyerSDKDesign.SmartGlass.BottomActionBar.Item" parent="">
        <item name="bandyer_itemGestureIconStyle">@style/BandyerSDKDesign.SmartGlass.BottomActionBar.Item.GestureIcon</item>
        <item name="bandyer_itemGestureTextStyle">@style/BandyerSDKDesign.TextView.BottomActionBar.Item.GestureText</item>
        <item name="bandyer_itemActionTextStyle">@style/BandyerSDKDesign.TextView.BottomActionBar.Item.ActionText</item>
    </style>

    <!-- GESTURE ICON -->
    <style name="BandyerSDKDesign.SmartGlass.BottomActionBar.Item.GestureIcon" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="tint">?attr/colorSecondary</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- GESTURE TEXT -->
    <style name="BandyerSDKDesign.TextView.BottomActionBar.Item.GestureText" parent="BandyerSDKDesign.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space0</item>
    </style>

    <!-- ACTION TEXT -->
    <style name="BandyerSDKDesign.TextView.BottomActionBar.Item.ActionText" parent="BandyerSDKDesign.TextView">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space4</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space0</item>
    </style>
</resources>