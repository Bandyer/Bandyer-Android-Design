<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RINGING FRAGMENT -->
    <style name="BandyerSDKDesign.SmartGlass.CallEndedFragment" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.SmartGlass.CallEndedFragment.Root</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.CallEndedFragment.SmartGlass.Title</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.CallEndedFragment.SmartGlass.Subtitle</item>
    </style>

    <style name="BandyerSDKDesign.SmartGlass.CallEndedFragment.Root" parent="">
        <item name="android:background">@color/bandyer_smartglass_background_color</item>
    </style>

    <!-- TITLE -->
    <style name="BandyerSDKDesign.TextView.CallEndedFragment.SmartGlass.Title" parent="BandyerSDKDesign.TextView">
        <item name="android:textSize">@dimen/bandyer_dimen_text_32sp</item>
        <item name="android:text">@string/bandyer_smartglass_call_ended</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- SUBTITLE -->
    <style name="BandyerSDKDesign.TextView.CallEndedFragment.SmartGlass.Subtitle" parent="BandyerSDKDesign.TextView">
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
        <item name="android:text">@string/bandyer_smartglass_thank_you</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>