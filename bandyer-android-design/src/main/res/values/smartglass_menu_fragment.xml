<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MENU FRAGMENT -->
    <style name="BandyerSDKDesign.SmartGlass.MenuFragment" parent="">
        <item name="recyclerViewStyle">@style/BandyerSDKDesign.SmartGlass.MenuFragment.RecyclerView</item>
        <item name="kaleyra_bottomActionBarStyle">@style/BandyerSDKDesign.SmartGlass.MenuFragment.BottomActionBar</item>
    </style>

    <!-- RECYCLER VIEW -->
    <style name="BandyerSDKDesign.SmartGlass.MenuFragment.RecyclerView" parent="">
        <item name="android:background">#63000000</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.SmartGlass.MenuFragment.BottomActionBar" parent="BandyerSDKDesign.SmartGlass.BottomActionBar">
        <item name="kaleyra_rootLayoutStyle">@style/BandyerSDKDesign.SmartGlass.MenuFragment.BottomActionBar.Root</item>
        <item name="kaleyra_swipeDownText">@string/kaleyra_close</item>
        <item name="kaleyra_swipeText">@string/kaleyra_browse</item>
        <item name="kaleyra_tapText">@string/kaleyra_select</item>
    </style>

    <style name="BandyerSDKDesign.SmartGlass.MenuFragment.BottomActionBar.Root" parent="">
        <item name="android:minHeight">@dimen/bandyer_dimen_space32</item>
        <item name="android:maxHeight">@dimen/bandyer_dimen_space32</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>