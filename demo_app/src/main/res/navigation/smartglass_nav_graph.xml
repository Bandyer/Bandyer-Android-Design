<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smartglass_nav_graph"
    app:startDestination="@id/ringingFragment">

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.bandyer.demo_sdk_design.smartglass.ChatFragment"
        android:label="ChatFragment" />
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.bandyer.demo_sdk_design.smartglass.MenuFragment"
        android:label="MenuFragment" >
        <action
            android:id="@+id/action_menuFragment_to_volumeFragment"
            app:destination="@id/volumeFragment" />
        <action
            android:id="@+id/action_menuFragment_to_zoomFragment"
            app:destination="@id/zoomFragment" />
        <action
            android:id="@+id/action_menuFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_menuFragment_to_participantsFragment"
            app:destination="@id/participantsFragment" />
    </fragment>
    <fragment
        android:id="@+id/volumeFragment"
        android:name="com.bandyer.demo_sdk_design.smartglass.VolumeFragment"
        android:label="VolumeFragment" />
    <fragment
        android:id="@+id/zoomFragment"
        android:name="com.bandyer.demo_sdk_design.smartglass.ZoomFragment"
        android:label="ZoomFragment" />
    <fragment
        android:id="@+id/callEndedFragment"
        android:name="com.bandyer.demo_sdk_design.smartglass.CallEndedFragment"
        android:label="CallEndedFragment" />
    <fragment
        android:id="@+id/endCallFragment"
        android:name="com.bandyer.demo_sdk_design.smartglass.EndCallFragment"
        android:label="EndCallFragment" >
        <action
            android:id="@+id/action_endCallFragment_to_callEndedFragment"
            app:destination="@id/callEndedFragment" />
    </fragment>
    <fragment
        android:id="@+id/ringingFragment"
        android:name="com.bandyer.demo_sdk_design.smartglass.RingingFragment"
        android:label="RingingFragment" >
        <action
            android:id="@+id/action_ringingFragment_to_callFragment"
            app:destination="@id/callFragment" />
    </fragment>
    <fragment
        android:id="@+id/callFragment"
        android:name="com.bandyer.demo_sdk_design.smartglass.CallFragment"
        android:label="CallFragment" >
        <action
            android:id="@+id/action_callFragment_to_endCallFragment"
            app:destination="@id/endCallFragment" />
        <action
            android:id="@+id/action_callFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/participantsFragment"
        android:name="com.bandyer.demo_sdk_design.smartglass.ParticipantsFragment"
        android:label="ParticipantsFragment">
        <action
            android:id="@+id/action_participantsFragment_to_participantDetailsFragment"
            app:destination="@id/participantDetailsFragment" >
        </action>
    </fragment>
    <fragment
        android:id="@+id/participantDetailsFragment"
        android:name="com.bandyer.demo_sdk_design.smartglass.ParticipantDetailsFragment"
        android:label="ParticipantDetailsFragment" >
        <argument
            android:name="participantData"
            app:argType="com.bandyer.sdk_design.new_smartglass.SmartGlassParticipantData"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>