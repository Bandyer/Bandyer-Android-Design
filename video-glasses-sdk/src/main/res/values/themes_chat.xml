<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.Theme.Glass.Chat">
        <attr name="kaleyra_statusBarStyle" />
        <attr name="kaleyra_chatStyle" format="reference" />
        <attr name="kaleyra_chatMenuStyle" format="reference" />
        <attr name="kaleyra_participantsStyle" />
    </declare-styleable>

    <style name="KaleyraCollaborationSuiteUI.Theme.DayNight.GlassChat" parent="KaleyraCollaborationSuiteUI.Theme.DayNight">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Theme.GlassChat.RootLayout</item>
        <item name="kaleyra_statusBarStyle">@style/KaleyraCollaborationSuiteUI.Glass.StatusBar</item>
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Chat</item>
        <item name="kaleyra_chatStyle">@style/KaleyraCollaborationSuiteUI.Glass.Chat</item>
        <item name="kaleyra_chatMenuStyle">@style/KaleyraCollaborationSuiteUI.Glass.DarkBackground.ChatMenu</item>
        <item name="kaleyra_participantsStyle">@style/KaleyraCollaborationSuiteUI.Glass.DarkBackground.Participants</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme.Day.GlassChat" parent="KaleyraCollaborationSuiteUI.Theme.Day">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Theme.GlassChat.RootLayout</item>
        <item name="kaleyra_statusBarStyle">@style/KaleyraCollaborationSuiteUI.Glass.StatusBar</item>
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Chat</item>
        <item name="kaleyra_chatStyle">@style/KaleyraCollaborationSuiteUI.Glass.Chat</item>
        <item name="kaleyra_chatMenuStyle">@style/KaleyraCollaborationSuiteUI.Glass.DarkBackground.ChatMenu</item>
        <item name="kaleyra_participantsStyle">@style/KaleyraCollaborationSuiteUI.Glass.DarkBackground.Participants</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme.Night.GlassChat" parent="KaleyraCollaborationSuiteUI.Theme.Night">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Theme.GlassChat.RootLayout</item>
        <item name="kaleyra_statusBarStyle">@style/KaleyraCollaborationSuiteUI.Glass.StatusBar</item>
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Chat</item>
        <item name="kaleyra_chatStyle">@style/KaleyraCollaborationSuiteUI.Glass.Chat</item>
        <item name="kaleyra_chatMenuStyle">@style/KaleyraCollaborationSuiteUI.Glass.DarkBackground.ChatMenu</item>
        <item name="kaleyra_participantsStyle">@style/KaleyraCollaborationSuiteUI.Glass.DarkBackground.Participants</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme.GlassChat.RootLayout" parent="">
        <item name="android:background">@color/kaleyra_glass_background_color</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme.GlassChat" parent="KaleyraCollaborationSuiteUI.Theme.DayNight.GlassChat" />

    <style name="KaleyraCollaborationSuiteUI.Theme.GlassChatNotification" parent="KaleyraCollaborationSuiteUI.Theme.GlassChat">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/KaleyraCollaborationSuiteUI.Theme.GlassChatNotification.Animation</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme.GlassChatNotification.Animation" parent="">
        <item name="android:activityOpenEnterAnimation">@anim/kaleyra_notification_slide_down</item>
        <item name="android:activityOpenExitAnimation">@anim/kaleyra_notification_slide_up</item>
    </style>


</resources>
