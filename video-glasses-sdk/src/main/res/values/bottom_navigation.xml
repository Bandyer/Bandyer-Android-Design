<resources>
    <!-- BOTTOM NAVIGATION BAR -->
    <declare-styleable name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation">
        <attr name="kaleyra_rootLayoutStyle"/>
        <attr name="kaleyra_firstItemStyle" format="reference"/>
        <attr name="kaleyra_secondItemStyle" format="reference"/>
        <attr name="kaleyra_thirdItemStyle" format="reference"/>
    </declare-styleable>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation" parent="KaleyraCollaborationSuiteUI.Glass">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.RootLayout</item>
        <item name="kaleyra_firstItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem</item>
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.RootLayout" parent="">
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space8</item>
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space8</item>
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/kaleyra_glass_bottom_bar_gradient</item>
    </style>

    <!-- FIRST ITEM -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem</item>
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.FirstItem</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassIconTip.FirstItem</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space4</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.FirstItem" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon">
        <item name="srcCompat">@drawable/ic_kaleyra_glas_swipe_arrow</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.FirstItem" parent="KaleyraCollaborationSuiteUI.TextView.GlassIconTip">
        <item name="android:text">@string/kaleyra_glass_swipe</item>
    </style>

    <!-- VOICE COMMANDS -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.VoiceCommand</item>
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.FirstItem.VoiceCommand</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassIconTip.FirstItem.VoiceCommand</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem"/>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.FirstItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.FirstItem">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_voice_command</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.FirstItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.FirstItem">
        <item name="android:visibility">gone</item>
    </style>

    <!-- SECOND ITEM -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem</item>
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.SecondItem</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassIconTip.SecondItem</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space8</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.SecondItem" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_select</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.SecondItem" parent="KaleyraCollaborationSuiteUI.TextView.GlassIconTip">
        <item name="android:text">@string/kaleyra_glass_tap</item>
    </style>

    <!-- VOICE COMMANDS -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.VoiceCommand</item>
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.SecondItem.VoiceCommand</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassIconTip.SecondItem.VoiceCommand</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem"/>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.SecondItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.SecondItem">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_voice_command</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.SecondItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.SecondItem">
        <item name="android:visibility">gone</item>
    </style>

    <!-- THIRD ITEM -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem</item>
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.ThirdItem</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassIconTip.ThirdItem</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space8</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.ThirdItem" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_close_arrow</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.ThirdItem" parent="KaleyraCollaborationSuiteUI.TextView.GlassIconTip">
        <item name="android:text">@string/kaleyra_glass_swipe</item>
    </style>

    <!-- VOICE COMMANDS -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.VoiceCommand</item>
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.ThirdItem.VoiceCommand</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassIconTip.ThirdItem.VoiceCommand</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem"/>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.ThirdItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.ThirdItem">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_voice_command</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.ThirdItem.VoiceCommand" parent="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.ThirdItem">
        <item name="android:visibility">gone</item>
    </style>
</resources>