<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="KaleyraCollaborationSuiteUI.Theme.Base.V16" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="fontFamily">@font/kaleyra_font</item>
        <item name="android:fontFamily">@font/kaleyra_font</item>

        <item name="colorPrimary">@color/kaleyra_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/kaleyra_colorPrimaryVariant</item>
        <item name="colorSecondary">@color/kaleyra_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/kaleyra_colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/kaleyra_colorOnSecondary</item>
        <item name="colorSurface">@color/kaleyra_colorSurface</item>
        <item name="colorOnPrimary">@color/kaleyra_colorOnPrimary</item>
        <item name="colorOnSurface">@color/kaleyra_colorOnSurface</item>
        <item name="colorOnBackground">@color/kaleyra_colorOnBackground</item>
        <item name="colorError">@color/kaleyra_colorError</item>
        <item name="colorOnError">@color/kaleyra_colorOnError</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>

        <item name="android:colorBackground">@color/kaleyra_colorBackground</item>
        <item name="colorBackgroundFloating">@color/kaleyra_colorBackground</item>
        <item name="android:windowBackground">@color/kaleyra_colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="elevationOverlayEnabled">false</item>
        <item name="toolbarStyle">@style/KaleyraCollaborationSuiteUI.ToolBarStyle</item>
        <item name="kaleyra_snackbarStyle">@style/KaleyraCollaborationSuiteUI.SnackBarStyle</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme.Base" parent="KaleyraCollaborationSuiteUI.Theme.Base.V16"/>

    <style name="KaleyraCollaborationSuiteUI.ToolBarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.ToolBarShadow" parent="">
        <item name="android:visibility">visible</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme.Base.Day" parent="KaleyraCollaborationSuiteUI.Theme" />

    <style name="KaleyraCollaborationSuiteUI.Theme.Base.Night" parent="KaleyraCollaborationSuiteUI.Theme">
        <item name="colorPrimary">@color/kaleyra_colorPrimary_night</item>
        <item name="colorPrimaryVariant">@color/kaleyra_colorPrimaryVariant_night</item>
        <item name="colorSecondary">@color/kaleyra_colorSecondary_night</item>
        <item name="colorSecondaryVariant">@color/kaleyra_colorSecondaryVariant_night</item>
        <item name="colorOnSecondary">@color/kaleyra_colorOnSecondary_night</item>
        <item name="colorSurface">@color/kaleyra_colorSurface_night</item>
        <item name="colorOnPrimary">@color/kaleyra_colorOnPrimary_night</item>
        <item name="colorOnSurface">@color/kaleyra_colorOnSurface_night</item>
        <item name="colorOnBackground">@color/kaleyra_colorOnBackground_night</item>
        <item name="android:colorBackground">@color/kaleyra_colorBackground_night</item>
        <item name="colorBackgroundFloating">@color/kaleyra_colorBackground_night</item>
        <item name="android:windowBackground">@color/kaleyra_colorBackground_night</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme" parent="KaleyraCollaborationSuiteUI.Theme.Base" />

    <style name="KaleyraCollaborationSuiteUI.Theme.Day" parent="KaleyraCollaborationSuiteUI.Theme.Base.Day" />

    <style name="KaleyraCollaborationSuiteUI.Theme.Night" parent="KaleyraCollaborationSuiteUI.Theme.Base.Night" />

    <style name="KaleyraCollaborationSuiteUI.Theme.DayNight" parent="KaleyraCollaborationSuiteUI.Theme.Day" />

</resources>