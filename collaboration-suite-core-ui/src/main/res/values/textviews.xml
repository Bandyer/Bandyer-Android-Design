<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="KaleyraCollaborationSuiteUI.TextAppearance" parent="">
        <item name="android:shadowDx">-2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_h3</item>
        <item name="android:shadowColor">@color/kaleyra_color_grey</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextAppearance.Large" parent="KaleyraCollaborationSuiteUI.TextAppearance">
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextAppearance.Subtitle" parent="KaleyraCollaborationSuiteUI.TextAppearance">
        <item name="android:textSize">@dimen/kaleyra_dimen_text_normal</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_normal</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.Title" parent="KaleyraCollaborationSuiteUI.TextView">
        <item name="android:textSize">@dimen/kaleyra_dimen_text_h3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.Subtitle" parent="KaleyraCollaborationSuiteUI.TextView">
        <item name="android:textSize">@dimen/kaleyra_dimen_text_small</item>
    </style>

</resources>