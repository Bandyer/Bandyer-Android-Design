<resources>
    <declare-styleable name="BandyerSDKDesign.SmartGlassDialogMenu">
        <attr name="bandyer_smartGlassMenuStyle" format="reference" />
    </declare-styleable>

    <style name="BandyerSDKDesign.SmartGlassDialogMenu" parent="BandyerSDKDesign.FullScreenDialog">
        <item name="bandyer_smartGlassMenuStyle">@style/BandyerSDKDesign.SmartGlassMenu</item>
    </style>

    <declare-styleable name="BandyerSDKDesign.SmartGlassMenu">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="bandyer_pagerIndicatorStyle" format="reference" />
        <attr name="bandyer_smartGlassMicrophoneStyle" format="reference" />
        <attr name="bandyer_smartGlassCameraStyle" format="reference" />
        <attr name="bandyer_smartGlassParticipantsStyle" format="reference" />
    </declare-styleable>

    <style name="BandyerSDKDesign.SmartGlassDialogMenu.RootLayout">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="BandyerSDKDesign.SmartGlassMenu" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.SmartGlassDialogMenu.RootLayout</item>
        <item name="bandyer_smartGlassMicrophoneStyle">@style/BandyerSDKDesign.ActionButton.SmartGlass.Microphone</item>
        <item name="bandyer_smartGlassCameraStyle">@style/BandyerSDKDesign.ActionButton.SmartGlass.Camera</item>
        <item name="bandyer_smartGlassParticipantsStyle">@style/BandyerSDKDesign.ActionButton.SmartGlass.Participants</item>
        <item name="bandyer_pagerIndicatorStyle">@style/BandyerSDKDesign.PagerIndicator</item>
    </style>
</resources>