<resources>
    <declare-styleable name="BandyerSDKDesign.BottomSheet.Ringing">
        <attr name="bandyer_lineStyle" />
        <attr name="bandyer_titleStyle" />
        <attr name="bandyer_recyclerViewStyle" />
        <attr name="materialCardViewStyle" />
        <attr name="bandyer_declineStyle" format="reference" />
        <attr name="bandyer_answerStyle" format="reference" />
    </declare-styleable>

    <style name="BandyerSDKDesign.BottomSheet.Ringing" parent="BandyerSDKDesign.BottomSheet">
        <item name="materialCardViewStyle">@style/BandyerSDKDesign.BottomSheetBackground.Ringing</item>
        <item name="bandyer_lineStyle">@style/BandyerSDKDesign.ImageButton.BottomSheetLine.Ringing</item>
        <item name="bandyer_declineStyle">@style/BandyerSDKDesign.ActionButton.Decline</item>
        <item name="bandyer_answerStyle">@style/BandyerSDKDesign.ActionButton.Answer</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheet.Ringing.Night" parent="BandyerSDKDesign.BottomSheet.Ringing">
        <item name="bandyer_declineStyle">@style/BandyerSDKDesign.ActionButton.Decline.Night</item>
        <item name="bandyer_answerStyle">@style/BandyerSDKDesign.ActionButton.Answer.Night</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetBackground.Ringing" parent="BandyerSDKDesign.BottomSheetBackground">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>
</resources>