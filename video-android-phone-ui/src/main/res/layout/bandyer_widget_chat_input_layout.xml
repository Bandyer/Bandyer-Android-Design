<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bandyer_input_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bandyer_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nextFocusRight="@id/bandyer_send_button"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bandyer_message_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bandyer_send_button"
        style="?attr/materialButtonStyle"
        android:nextFocusLeft="@id/bandyer_text_field"
        app:layout_constraintTop_toTopOf="@id/bandyer_text_field"
        app:layout_constraintBottom_toBottomOf="@id/bandyer_text_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</merge>
