<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="BandyerSDKDesign.Glass.StatusBar">
        <attr name="bandyer_camIconStyle" format="reference"/>
        <attr name="bandyer_micIconStyle" format="reference"/>
        <attr name="bandyer_chatIconStyle" format="reference"/>
        <attr name="bandyer_cellIconStyle" format="reference"/>
        <attr name="bandyer_wifiIconStyle" format="reference"/>
        <attr name="bandyer_batteryStyle" format="reference"/>
        <attr name="bandyer_recordingStyle" format="reference"/>
    </declare-styleable>

    <style name="BandyerSDKDesign.Glass.StatusBar" parent="BandyerSDKDesign.Glass">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.StatusBar.RootLayout</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.GlassStatusBar</item>
        <item name="bandyer_camIconStyle">@style/BandyerSDKDesign.GlassStatusBarIcon.Activable.Camera</item>
        <item name="bandyer_micIconStyle">@style/BandyerSDKDesign.GlassStatusBarIcon.Activable.Mic</item>
        <item name="bandyer_chatIconStyle">@style/BandyerSDKDesign.GlassStatusBarIcon.Chat</item>
        <item name="bandyer_cellIconStyle">@style/BandyerSDKDesign.GlassStatusBarIcon.Cell</item>
        <item name="bandyer_wifiIconStyle">@style/BandyerSDKDesign.GlassStatusBarIcon.Wifi</item>
        <item name="bandyer_batteryStyle">@style/BandyerSDKDesign.Glass.StatusBar.Battery</item>
        <item name="bandyer_recordingStyle">@style/BandyerSDKDesign.TextView.Title.GlassRec</item>
    </style>

    <style name="BandyerSDKDesign.Glass.StatusBar.RootLayout" parent="">
        <item name="android:paddingStart">@dimen/bandyer_dimen_space16</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space8</item>
        <item name="android:maxHeight">@dimen/bandyer_dimen_space48</item>
        <item name="android:minHeight">@dimen/bandyer_dimen_space48</item>
        <item name="android:background">@drawable/bandyer_glass_status_bar_gradient</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassStatusBar" parent="BandyerSDKDesign.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h1</item>
    </style>

    <style name="BandyerSDKDesign.GlassStatusBarIcon" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="android:tint">@android:color/white</item>
        <item name="android:layout_width">@dimen/bandyer_dimen_space32</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space32</item>
    </style>

    <style name="BandyerSDKDesign.GlassStatusBarIcon.Chat" parent="BandyerSDKDesign.GlassStatusBarIcon">
        <item name="srcCompat">@drawable/ic_bandyer_glass_badge_new_mess</item>
    </style>

    <style name="BandyerSDKDesign.GlassStatusBarIcon.Wifi" parent="BandyerSDKDesign.GlassStatusBarIcon">
        <item name="srcCompat">@drawable/bandyer_wifi_icon</item>
    </style>

    <style name="BandyerSDKDesign.GlassStatusBarIcon.Cell" parent="BandyerSDKDesign.GlassStatusBarIcon">
        <item name="srcCompat">@drawable/bandyer_glass_cell_icon</item>
    </style>

    <style name="BandyerSDKDesign.GlassStatusBarIcon.Activable.Camera" parent="BandyerSDKDesign.RoundedImageGlass.ActivableStatusBarIcon">
        <item name="srcCompat">@drawable/ic_bandyer_glass_cam_off</item>
    </style>

    <style name="BandyerSDKDesign.GlassStatusBarIcon.Activable.Mic" parent="BandyerSDKDesign.RoundedImageGlass.ActivableStatusBarIcon">
        <item name="srcCompat">@drawable/ic_bandyer_glass_mic_off</item>
    </style>

    <style name="BandyerSDKDesign.RoundedImageGlass.ActivableStatusBarIcon" parent="BandyerSDKDesign.RoundedImageGlass">
        <item name="android:layout_width">@dimen/bandyer_dimen_space32</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space32</item>
        <item name="android:background">@drawable/bandyer_glass_flat_white</item>
        <item name="android:backgroundTint">@color/bandyer_glass_input_background</item>
    </style>

    <style name="BandyerSDKDesign.Glass.StatusBar.Battery" parent="">
        <item name="android:layout_width">@dimen/bandyer_dimen_space48</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space32</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space5</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space7</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space7</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Title.GlassRec" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:drawableStart">@drawable/ic_bandyer_glass_rec</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/bandyer_recording_color</item>
        <item name="android:textColor">@color/bandyer_recording_color</item>
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space24</item>
        <item name="android:drawablePadding">@dimen/bandyer_dimen_space8</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:text">@string/bandyer_glass_rec</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>