<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BandyerSDKDesign.Glass.StatusBar">
        <attr name="bandyer_titleIconStyle" format="reference"/>
        <attr name="bandyer_chatIconStyle" format="reference"/>
        <attr name="bandyer_cellIconStyle" format="reference"/>
        <attr name="bandyer_wifiIconStyle" format="reference"/>
        <attr name="bandyer_batteryStyle" format="reference"/>
    </declare-styleable>

    <style name="BandyerSDKDesign.Glass.StatusBar" parent="BandyerSDKDesign.Glass">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.StatusBar.RootLayout</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.GlassStatusBar</item>
        <item name="bandyer_titleIconStyle">@style/BandyerSDKDesign.StatusBarIcon.TitleGlass</item>
        <item name="bandyer_chatIconStyle">@style/BandyerSDKDesign.StatusBarIcon.ChatGlass</item>
        <item name="bandyer_cellIconStyle">@style/BandyerSDKDesign.StatusBarIcon.CellGlass</item>
        <item name="bandyer_wifiIconStyle">@style/BandyerSDKDesign.StatusBarIcon.WifiGlass</item>
        <item name="bandyer_batteryStyle">@style/BandyerSDKDesign.Glass.StatusBar.Battery</item>
    </style>

    <style name="BandyerSDKDesign.Glass.StatusBar.RootLayout" parent="">
        <item name="android:paddingStart">@dimen/bandyer_dimen_space16</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space8</item>
        <item name="android:background">@drawable/bandyer_glass_status_bar_gradient</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassStatusBar" parent="BandyerSDKDesign.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h1</item>
    </style>

    <style name="BandyerSDKDesign.StatusBarIcon" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="android:tint">@android:color/white</item>
        <item name="srcCompat">@drawable/bandyer_glass_mic_off_icon</item>
        <item name="android:layout_width">@dimen/bandyer_dimen_space32</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space32</item>
    </style>

    <style name="BandyerSDKDesign.StatusBarIcon.TitleGlass" parent="BandyerSDKDesign.StatusBarIcon">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space24</item>
    </style>

    <style name="BandyerSDKDesign.StatusBarIcon.ChatGlass" parent="BandyerSDKDesign.StatusBarIcon">
    <item name="srcCompat">@drawable/ic_bandyer_glass_badge_new_mess</item>
    </style>

    <style name="BandyerSDKDesign.StatusBarIcon.WifiGlass" parent="BandyerSDKDesign.StatusBarIcon">
        <item name="srcCompat">@drawable/bandyer_wifi_icon</item>
    </style>

    <style name="BandyerSDKDesign.StatusBarIcon.CellGlass" parent="BandyerSDKDesign.StatusBarIcon">
        <item name="srcCompat">@drawable/bandyer_glass_cell_icon</item>
    </style>

    <style name="BandyerSDKDesign.Glass.StatusBar.Battery" parent="">
        <item name="android:layout_width">@dimen/bandyer_dimen_space48</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space32</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space7</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space5</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space6</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space6</item>
    </style>
</resources>