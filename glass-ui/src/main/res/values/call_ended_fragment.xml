<resources>
    <declare-styleable name="KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog.CallEnded">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="bottomNavigationStyle" />
    </declare-styleable>

    <!-- CALL ENDED FRAGMENT -->
    <style name="KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo.CallEnded" parent="KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo">
        <item name="android:horizontalScrollViewStyle">@style/KaleyraSDKDesign.Glass.HorizontalScrollView.FullScreenLogoDialog.CallEnded</item>
        <item name="linearProgressIndicatorStyle">@style/KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo.ProgressBar.CallEnded</item>
        <item name="kaleyra_titleStyle">@style/KaleyraSDKDesign.TextView.Title.FullScreenDialog.CallEnded</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraSDKDesign.TextView.Subtitle.FullScreenDialog.CallEnded</item>
        <item name="bottomNavigationStyle">@style/KaleyraSDKDesign.Glass.BottomNavigation.FullScreenDialog.Logo.CallEnded</item>
    </style>

    <!-- TITLE -->
    <style name="KaleyraSDKDesign.TextView.Title.FullScreenDialog.CallEnded" parent="KaleyraSDKDesign.TextView.Title.FullScreenDialog">
        <item name="android:text">@string/kaleyra_glass_call_ended</item>
    </style>

    <!-- SUBTITLE -->
    <style name="KaleyraSDKDesign.TextView.Subtitle.FullScreenDialog.CallEnded" parent="KaleyraSDKDesign.TextView.Subtitle.FullScreenDialog">
        <item name="android:textColor">@color/kaleyra_color_white_80</item>
    </style>

    <!-- SCROLLVIEW -->
    <style name="KaleyraSDKDesign.Glass.HorizontalScrollView.FullScreenLogoDialog.CallEnded" parent="KaleyraSDKDesign.Glass.HorizontalScrollView.FullScreenLogoDialog">
        <item name="android:visibility">gone</item>
    </style>

    <!-- PROGRESS BAR -->
    <style name="KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo.ProgressBar.CallEnded" parent="KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo.ProgressBar">
        <item name="android:visibility">gone</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraSDKDesign.Glass.BottomNavigation.FullScreenDialog.Logo.CallEnded" parent="KaleyraSDKDesign.Glass.BottomNavigation.FullScreenDialog.Logo">
        <item name="kaleyra_swipeHorizontalItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal.CallEnded</item>
        <item name="kaleyra_swipeDownItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.CallEnded</item>
        <item name="kaleyra_tapItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.Tap.CallEnded</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal.CallEnded" parent="KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="android:visibility">gone</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.CallEnded" parent="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="android:visibility">gone</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.Tap.CallEnded" parent="KaleyraSDKDesign.Glass.BottomActionItem.Tap">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap.CallEnded</item>
        <item name="kaleyra_labelStyle">@style/KaleyraSDKDesign.TextView.GlassLabel.TapCallEnded</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap.CallEnded" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassLabel.TapCallEnded" parent="KaleyraSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_close</item>
    </style>
</resources>