<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CALL ENDED FRAGMENT -->
    <style name="BandyerSDKDesign.Glass.FullScreenDialog.CallEnded" parent="BandyerSDKDesign.Glass.FullScreenDialog">
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.FullScreenDialog.CallEnded</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.Subtitle.FullScreenDialog.CallEnded</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.FullScreenDialog.CallEnded</item>
    </style>

    <!-- TITLE -->
    <style name="BandyerSDKDesign.TextView.Title.FullScreenDialog.CallEnded" parent="BandyerSDKDesign.TextView.Title.FullScreenDialog">
        <item name="android:text">@string/bandyer_glass_call_ended</item>
    </style>

    <!-- SUBTITLE -->
    <style name="BandyerSDKDesign.TextView.Subtitle.FullScreenDialog.CallEnded" parent="BandyerSDKDesign.TextView.Subtitle.FullScreenDialog">
        <item name="android:text">@string/bandyer_glass_thank_you</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.FullScreenDialog.CallEnded" parent="BandyerSDKDesign.Glass.BottomNavigation.FullScreenDialog">
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.CallEnded</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.CallEnded</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.CallEnded" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="android:visibility">gone</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.CallEnded" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap.CallEnded</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.TapCallEnded</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap.CallEnded" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_close</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.TapCallEnded" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_close</item>
    </style>
</resources>