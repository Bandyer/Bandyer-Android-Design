<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- SLIDER -->
    <style name="BandyerSDKDesign.Glass.Slider" parent="BandyerSDKDesign.Glass">
        <item name="seekBarStyle">@style/BandyerSDKDesign.Glass.Slider.SeekBar</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.GlassSlider</item>
    </style>

    <!-- SLIDER SEEKBAR -->
    <style name="BandyerSDKDesign.Glass.Slider.SeekBar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:paddingStart">@dimen/bandyer_dimen_space0</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space0</item>
        <item name="android:thumb">@null</item>
        <item name="tickMark">@null</item>
        <item name="android:progressDrawable">@drawable/bandyer_seekbar_track</item>
        <item name="android:background">@null</item>
    </style>

    <!-- SLIDER TEXT -->
    <style name="BandyerSDKDesign.TextView.GlassSlider" parent="BandyerSDKDesign.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_40sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space0</item>
    </style>
</resources>