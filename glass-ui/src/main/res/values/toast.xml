<resources>
    <!-- TOAST CONTAINER -->
    <declare-styleable name="BandyerSDKDesign.Theme.GlassCall.ToastContainerStyle">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="bandyer_toastStyle" format="reference" />
    </declare-styleable>

    <style name="BandyerSDKDesign.Theme.GlassCall.ToastContainer" parent="">
        <item name="android:gravity">center</item>
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Theme.GlassCall.ToastContainer.RootLayout</item>
        <item name="bandyer_toastStyle">@style/BandyerSDKDesign.Theme.GlassCall.Toast</item>
    </style>

    <style name="BandyerSDKDesign.Theme.GlassCall.ToastContainer.RootLayout" parent="">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space56</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <!-- TOAST -->
    <declare-styleable name="BandyerSDKDesign.Theme.GlassCall.ToastStyle">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="bandyer_iconStyle" />
        <attr name="android:textViewStyle" />
    </declare-styleable>

    <style name="BandyerSDKDesign.Theme.GlassCall.Toast" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Theme.GlassCall.Toast.RootLayout</item>
        <item name="bandyer_iconStyle">@style/BandyerSDKDesign.RoundedImageGlass.Toast</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.Title.Toast</item>
    </style>

    <style name="BandyerSDKDesign.Theme.GlassCall.Toast.RootLayout" parent="">
        <item name="android:background">@drawable/bandyer_glass_rounded_background</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/bandyer_dimen_space32</item>
        <item name="android:maxHeight">@dimen/bandyer_dimen_space32</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space4</item>
        <item name="android:layout_marginBottom">@dimen/bandyer_dimen_space4</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space2</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space12</item>
    </style>

    <style name="BandyerSDKDesign.RoundedImageGlass.Toast" parent="BandyerSDKDesign.RoundedImageGlass">
        <item name="android:layout_width">@dimen/bandyer_dimen_space28</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space28</item>
        <item name="android:padding">@dimen/bandyer_dimen_space2</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@color/bandyer_glass_toast_icon_color</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Title.Toast" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:textSize">@dimen/bandyer_dimen_text_h2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space0</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/bandyer_color_white_80</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space8</item>
    </style>
</resources>