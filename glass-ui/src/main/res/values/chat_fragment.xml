<resources>
    <declare-styleable name="KaleyraSDKDesign.Glass.Chat">
        <attr name="recyclerViewStyle" />
        <attr name="kaleyra_recyclerViewItemStyle" />
        <attr name="kaleyra_counterStyle" format="reference" />
        <attr name="bottomNavigationStyle" />
    </declare-styleable>

    <!-- CHAT FRAGMENT -->
    <style name="KaleyraSDKDesign.Glass.Chat" parent="KaleyraSDKDesign.Glass">
        <item name="recyclerViewStyle">@style/KaleyraSDKDesign.Glass.RecyclerView</item>
        <item name="kaleyra_recyclerViewItemStyle">@style/KaleyraSDKDesign.Glass.Chat.RecyclerViewItem</item>
        <item name="kaleyra_counterStyle">@style/KaleyraSDKDesign.TextView.CounterGlassChat</item>
        <item name="bottomNavigationStyle">@style/KaleyraSDKDesign.Glass.BottomNavigation.Chat</item>
    </style>

    <!-- RECYCLER VIEW ITEM -->
    <style name="KaleyraSDKDesign.Glass.Chat.RecyclerViewItem" parent="">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.Chat.RecyclerViewItem.RootLayout</item>
        <item name="kaleyra_avatarStyle">@style/KaleyraSDKDesign.Glass.Avatar</item>
        <item name="kaleyra_titleStyle">@style/KaleyraSDKDesign.TextView.Title.GlassChat.RecyclerViewItem</item>
        <item name="kaleyra_messageStyle">@style/KaleyraSDKDesign.TextView.MessageGlassChat.RecyclerViewItem</item>
        <item name="kaleyra_timestampStyle">@style/KaleyraSDKDesign.TextView.TimestampGlassChat</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.Chat.RecyclerViewItem.RootLayout" parent="">
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space8</item>
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space16</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Title.GlassChat.RecyclerViewItem" parent="KaleyraSDKDesign.TextView.Title.GlassChat">
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.MessageGlassChat.RecyclerViewItem" parent="KaleyraSDKDesign.TextView.MessageGlassChat">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space56</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_glass_chat_right_margin</item>
    </style>

    <!-- COUNTER -->
    <style name="KaleyraSDKDesign.TextView.CounterGlassChat" parent="KaleyraSDKDesign.TextView">
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginBottom">@dimen/kaleyra_dimen_space8</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_h1</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraSDKDesign.Glass.BottomNavigation.Chat" parent="KaleyraSDKDesign.Glass.BottomNavigation">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomNavigation.RootLayout.Chat</item>
        <item name="kaleyra_swipeHorizontalItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Chat</item>
        <item name="kaleyra_swipeDownItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.Chat</item>
        <item name="kaleyra_tapItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.Tap.Chat</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomNavigation.RootLayout.Chat" parent="KaleyraSDKDesign.Glass.BottomNavigation.RootLayout">
        <item name="android:background">@color/kaleyra_glass_dimmed_background_color</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Chat" parent="KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.Chat</item>
        <item name="kaleyra_labelStyle">@style/KaleyraSDKDesign.TextView.GlassLabel.SwipeChat</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.Chat" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_browse</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassLabel.SwipeChat" parent="KaleyraSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_browse</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.Chat" parent="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.Chat</item>
        <item name="kaleyra_labelStyle">@style/KaleyraSDKDesign.TextView.GlassLabel.SwipeDownChat</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.Chat" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassLabel.SwipeDownChat" parent="KaleyraSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.Tap.Chat" parent="KaleyraSDKDesign.Glass.BottomActionItem.Tap">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap.Chat</item>
        <item name="kaleyra_labelStyle">@style/KaleyraSDKDesign.TextView.GlassLabel.TapChat</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap.Chat" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_contact_info</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassLabel.TapChat" parent="KaleyraSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_contact_info</item>
    </style>
</resources>