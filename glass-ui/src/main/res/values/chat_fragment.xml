<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BandyerSDKDesign.Glass.Chat">
        <attr name="recyclerViewStyle" />
        <attr name="bandyer_recyclerViewItemStyle" />
        <attr name="bandyer_counterStyle" format="reference" />
        <attr name="bottomNavigationStyle" />
    </declare-styleable>

    <!-- MENU FRAGMENT -->
    <style name="BandyerSDKDesign.Glass.Chat" parent="BandyerSDKDesign.Glass">
        <item name="recyclerViewStyle">@style/BandyerSDKDesign.Glass.RecyclerView</item>
        <item name="bandyer_recyclerViewItemStyle">@style/BandyerSDKDesign.Glass.Chat.RecyclerViewItem</item>
        <item name="bandyer_counterStyle">@style/BandyerSDKDesign.TextView.CounterGlassChat</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.Chat</item>
    </style>

    <!-- RECYCLER VIEW ITEM -->
    <style name="BandyerSDKDesign.Glass.Chat.RecyclerViewItem" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.Chat.RecyclerViewItem.RootLayout</item>
        <item name="bandyer_avatarStyle">@style/BandyerSDKDesign.Glass.Avatar</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.GlassChat.RecyclerViewItem</item>
        <item name="bandyer_messageStyle">@style/BandyerSDKDesign.TextView.MessageGlassChat.RecyclerViewItem</item>
        <item name="bandyer_timestampStyle">@style/BandyerSDKDesign.TextView.TimestampGlassChat</item>
    </style>

    <style name="BandyerSDKDesign.Glass.Chat.RecyclerViewItem.RootLayout" parent="">
        <item name="android:paddingTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space16</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space16</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space16</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Title.GlassChat.RecyclerViewItem" parent="BandyerSDKDesign.TextView.Title.GlassChat">
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space16</item>
    </style>

    <style name="BandyerSDKDesign.TextView.MessageGlassChat.RecyclerViewItem" parent="BandyerSDKDesign.TextView.MessageGlassChat">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space56</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_glass_chat_right_margin</item>
    </style>

    <!-- COUNTER -->
    <style name="BandyerSDKDesign.TextView.CounterGlassChat" parent="BandyerSDKDesign.TextView">
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:layout_marginBottom">@dimen/bandyer_dimen_space8</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h1</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.Chat" parent="BandyerSDKDesign.Glass.BottomNavigation">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.RootLayout.Chat</item>
        <item name="bandyer_swipeHorizontalItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Chat</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Chat</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.Chat</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomNavigation.RootLayout.Chat" parent="BandyerSDKDesign.Glass.BottomNavigation.RootLayout">
        <item name="android:background">@color/bandyer_glass_background_color</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Chat" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.Chat</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeChat</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.Chat" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_browse</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeChat" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_browse</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Chat" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.Chat</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeDownChat</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.Chat" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_close</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeDownChat" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_close</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.Chat" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap.Chat</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.TapChat</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap.Chat" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_contact_info</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.TapChat" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_contact_info</item>
    </style>
</resources>