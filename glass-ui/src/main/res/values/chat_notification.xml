<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BandyerSDKDesign.ChatMessage.GlassNotification" parent="BandyerSDKDesign.ChatMessage">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.ChatMessage.GlassNotification.RootLayout</item>
        <item name="bandyer_avatarStyle">@style/BandyerSDKDesign.Glass.Avatar</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.GlassChat</item>
        <item name="bandyer_messageStyle">@style/BandyerSDKDesign.TextView.MessageGlassChat.Notification</item>
        <item name="bandyer_timestampStyle">@style/BandyerSDKDesign.TextView.TimestampGlassChat.Notification</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.ChatNotification</item>
    </style>

    <!-- ROOT -->
    <style name="BandyerSDKDesign.ChatMessage.GlassNotification.RootLayout" parent="">
        <item name="android:paddingTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space8</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space16</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:background">@color/bandyer_glass_background_color</item>
    </style>

    <!-- MESSAGE -->
    <style name="BandyerSDKDesign.TextView.MessageGlassChat.Notification" parent="BandyerSDKDesign.TextView.MessageGlassChat">
        <item name="android:minHeight">@dimen/bandyer_dimen_space0</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <!-- TIMESTAMP -->
    <style name="BandyerSDKDesign.TextView.TimestampGlassChat.Notification" parent="BandyerSDKDesign.TextView.TimestampGlassChat">
        <item name="android:text">@string/bandyer_glass_now</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.ChatNotification" parent="BandyerSDKDesign.Glass.BottomNavigation">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.RootLayout.ChatNotification</item>
        <item name="bandyer_swipeHorizontalItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.ChatNotification</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.ChatNotification</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.ChatNotification</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomNavigation.RootLayout.ChatNotification" parent="BandyerSDKDesign.Glass.BottomNavigation.RootLayout">
        <item name="android:paddingStart">@dimen/bandyer_dimen_space0</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space0</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.ChatNotification" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="android:visibility">gone</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.ChatNotification" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeDownChatNotification</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeDownChatNotification" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_hide_notification</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.ChatNotification" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.TapChatNotification</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.TapChatNotification" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_read</item>
    </style>
</resources>