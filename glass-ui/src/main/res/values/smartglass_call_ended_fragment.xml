<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RINGING FRAGMENT -->
    <style name="BandyerSDKDesign.GlassCallEndedFragment" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.GlassCallEndedFragment.RootLayout</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.GlassCallEndedFragment</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.Subtitle.GlassCallEndedFragment</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.GlassBottomNavigation.GlassCallEndedFragment</item>
    </style>

    <style name="BandyerSDKDesign.GlassCallEndedFragment.RootLayout" parent="">
        <item name="android:background">@color/bandyer_glass_background_color</item>
    </style>

    <!-- TITLE -->
    <style name="BandyerSDKDesign.TextView.Title.GlassCallEndedFragment" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:textSize">@dimen/bandyer_dimen_text_32sp</item>
        <item name="android:text">@string/bandyer_smartglass_call_ended</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- SUBTITLE -->
    <style name="BandyerSDKDesign.TextView.Subtitle.GlassCallEndedFragment" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
        <item name="android:text">@string/bandyer_smartglass_thank_you</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.GlassBottomNavigation.GlassCallEndedFragment" parent="BandyerSDKDesign.GlassBottomNavigation">
        <item name="bandyer_tapText">@string/bandyer_smartglass_close</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.GlassBottomActionItem.Tap</item>
    </style>

    <style name="BandyerSDKDesign.GlassBottomActionItem.Tap" parent="BandyerSDKDesign.GlassBottomActionItem.Tap">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.GlassBottomActionItem.Tap.RootLayout</item>
        <item name="bandyer_iconStyle">@style/BandyerSDKDesign.GlassBottomActionItemIcon.Tap</item>
        <item name="bandyer_iconTipStyle">@style/BandyerSDKDesign.TextView.IconTip.Tap</item>
    </style>

</resources>