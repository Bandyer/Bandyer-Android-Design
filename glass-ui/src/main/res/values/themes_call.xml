    <!-- RECYCLER VIEW ITEM -->
    <declare-styleable name="KaleyraSDKDesign.Theme.GlassCall.RecyclerViewItem">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_avatarStyle" />
        <attr name="android:textViewStyle" />
        <attr name="kaleyra_iconStyle" />
        <attr name="kaleyra_bigCamIconStyle" format="reference" />
        <attr name="kaleyra_bigMicIconStyle"  format="reference" />
    </declare-styleable>

    <style name="KaleyraSDKDesign.Theme.GlassCall.RecyclerViewItem" parent="">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Theme.GlassCall.RecyclerViewItem.RootLayout</item>
        <item name="android:textViewStyle">@style/KaleyraSDKDesign.TextView.Subtitle.GlassCallRecyclerViewItem</item>
        <item name="kaleyra_iconStyle">@style/KaleyraSDKDesign.Theme.GlassCall.RecyclerViewItem.MicIcon</item>
        <item name="kaleyra_bigCamIconStyle">@style/KaleyraSDKDesign.Theme.GlassCall.RecyclerViewItem.ActivableIcon.Camera</item>
        <item name="kaleyra_bigMicIconStyle">@style/KaleyraSDKDesign.Theme.GlassCall.RecyclerViewItem.ActivableIcon.Mic</item>
        <item name="kaleyra_avatarStyle">@style/KaleyraSDKDesign.Glass.Avatar.Big.GlassCallRecyclerViewItem</item>
    </style>

    <style name="KaleyraSDKDesign.Theme.GlassCall.RecyclerViewItem.RootLayout" parent="">
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space48</item>
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space48</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.Avatar.Big.GlassCallRecyclerViewItem" parent="KaleyraSDKDesign.Glass.Avatar.Big">
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space4</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <style name="KaleyraSDKDesign.Theme.GlassCall.RecyclerViewItem.ActivableIcon.Camera" parent="KaleyraSDKDesign.RoundedImageGlass.ActivableCallRecyclerViewItemIcon">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_cam_off</item>
    </style>

    <style name="KaleyraSDKDesign.Theme.GlassCall.RecyclerViewItem.ActivableIcon.Mic" parent="KaleyraSDKDesign.RoundedImageGlass.ActivableCallRecyclerViewItemIcon">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_mic_off</item>
    </style>

