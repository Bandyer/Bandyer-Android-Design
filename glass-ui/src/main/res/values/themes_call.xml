    <style name="BandyerSDKDesign.Theme.GlassCall.RootLayout" parent="">
        <item name="android:background">@color/bandyer_glass_background_color</item>
    </style>

    <!-- RECYCLER VIEW ITEM -->
    <declare-styleable name="BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="bandyer_avatarStyle" />
        <attr name="android:textViewStyle" />
        <attr name="bandyer_iconStyle" />
        <attr name="bandyer_bigCamIconStyle" format="reference" />
        <attr name="bandyer_bigMicIconStyle"  format="reference" />
    </declare-styleable>

    <style name="BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem.RootLayout</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.Subtitle.GlassCallRecyclerViewItem</item>
        <item name="bandyer_iconStyle">@style/BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem.MicIcon</item>
        <item name="bandyer_bigCamIconStyle">@style/BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem.ActivableIcon.Camera</item>
        <item name="bandyer_bigMicIconStyle">@style/BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem.ActivableIcon.Mic</item>
        <item name="bandyer_avatarStyle">@style/BandyerSDKDesign.Glass.Avatar.Big.GlassCallRecyclerViewItem</item>
    </style>

    <style name="BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem.RootLayout" parent="">
        <item name="android:paddingStart">@dimen/bandyer_dimen_space16</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space48</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space48</item>
    </style>

    <style name="BandyerSDKDesign.Glass.Avatar.Big.GlassCallRecyclerViewItem" parent="BandyerSDKDesign.Glass.Avatar.Big">
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space4</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <style name="BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem.ActivableIcon.Camera" parent="BandyerSDKDesign.RoundedImageGlass.ActivableCallRecyclerViewItemIcon">
        <item name="srcCompat">@drawable/ic_bandyer_glass_cam_off</item>
    </style>

    <style name="BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem.ActivableIcon.Mic" parent="BandyerSDKDesign.RoundedImageGlass.ActivableCallRecyclerViewItemIcon">
        <item name="srcCompat">@drawable/ic_bandyer_glass_mic_off</item>
    </style>

    <style name="BandyerSDKDesign.RoundedImageGlass.ActivableCallRecyclerViewItemIcon" parent="BandyerSDKDesign.RoundedImageGlass">
        <item name="android:backgroundTint">@color/bandyer_glass_input_background</item>
        <item name="android:background">@drawable/bandyer_glass_flat_white</item>
        <item name="android:layout_width">@dimen/bandyer_dimen_space48</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space48</item>
    </style>

    <style name="BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem.MicIcon" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="android:tint">@android:color/white</item>
        <item name="srcCompat">@drawable/ic_bandyer_glass_mic_off</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space4</item>
        <item name="android:layout_width">@dimen/bandyer_dimen_space32</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space32</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.GlassCallRecyclerViewItem" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="paddingStart">@dimen/bandyer_dimen_space6</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BandyerSDKDesign.Theme.GlassCall" parent="BandyerSDKDesign.Theme.DayNight.GlassCall"/>
