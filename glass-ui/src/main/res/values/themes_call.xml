    <style name="BandyerSDKDesign.Theme.DayNight.GlassCall" parent="BandyerSDKDesign.Theme.DayNight">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Theme.GlassCall.RootLayout</item>
        <item name="bandyer_statusBarStyle">@style/BandyerSDKDesign.Glass.StatusBar</item>
        <item name="bandyer_recyclerViewItemStyle">@style/BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem</item>
        <item name="bandyer_menuStyle">@style/BandyerSDKDesign.Glass.Menu</item>
        <item name="bandyer_volumeStyle">@style/BandyerSDKDesign.Glass.Volume</item>
        <item name="bandyer_zoomStyle">@style/BandyerSDKDesign.Glass.Zoom</item>
        <item name="bandyer_ringingStyle">@style/BandyerSDKDesign.Glass.DarkBackground.FullScreenLogoDialog.Ringing</item>
        <item name="bandyer_dialingStyle">@style/BandyerSDKDesign.Glass.DarkBackground.FullScreenLogoDialog.Dialing</item>
        <item name="bandyer_reconnectingStyle">@style/BandyerSDKDesign.Glass.DarkBackground.FullScreenLogoDialog.Reconnecting</item>
        <item name="bandyer_endCallStyle">@style/BandyerSDKDesign.Glass.DarkBackground.FullScreenDialog.EndCall</item>
