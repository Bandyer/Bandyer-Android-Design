        <attr name="bandyer_rootLayoutStyle" />
        <attr name="bandyer_statusBarStyle" />
        <attr name="recyclerViewStyle" />
        <attr name="bandyer_recyclerViewItemStyle" />
        <attr name="bandyer_menuStyle" format="reference" />
        <attr name="bandyer_volumeStyle" format="reference" />
        <attr name="bandyer_zoomStyle" format="reference" />
