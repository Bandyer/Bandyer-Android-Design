        <item name="bandyer_reconnectingStyle">@style/BandyerSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo.Reconnecting</item>
        <item name="bandyer_endCallStyle">@style/BandyerSDKDesign.Glass.DarkBackground.FullScreenDialog.EndCall</item>
        <item name="bandyer_callEndedStyle">@style/BandyerSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo.CallEnded</item>
        <item name="bandyer_emptyStyle">@style/BandyerSDKDesign.Glass.Empty</item>
        <item name="bandyer_participantsStyle">@style/BandyerSDKDesign.Glass.DarkBackground.Participants</item>
