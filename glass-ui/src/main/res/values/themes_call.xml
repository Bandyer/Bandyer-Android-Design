        <item name="bandyer_emptyStyle">@style/BandyerSDKDesign.Glass.Empty</item>
        <item name="bandyer_participantsStyle">@style/BandyerSDKDesign.Glass.DarkBackground.Participants</item>
    </style>

    <style name="BandyerSDKDesign.Theme.Night.GlassCall" parent="BandyerSDKDesign.Theme.Night">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Theme.GlassCall.RootLayout</item>
        <item name="bandyer_statusBarStyle">@style/BandyerSDKDesign.Glass.StatusBar</item>
        <item name="bandyer_recyclerViewItemStyle">@style/BandyerSDKDesign.Theme.GlassCall.RecyclerViewItem</item>
        <item name="bandyer_menuStyle">@style/BandyerSDKDesign.Glass.Menu</item>
        <item name="bandyer_volumeStyle">@style/BandyerSDKDesign.Glass.Volume</item>
