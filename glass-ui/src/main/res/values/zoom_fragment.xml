<resources>
    <declare-styleable name="KaleyraSDKDesign.Glass.Zoom">
        <attr name="bottomNavigationStyle" />
        <attr name="sliderStyle" />
    </declare-styleable>

    <!-- ZOOM FRAGMENT -->
    <style name="KaleyraSDKDesign.Glass.Zoom" parent="KaleyraSDKDesign.Glass">
        <item name="bottomNavigationStyle">@style/KaleyraSDKDesign.Glass.BottomNavigation.Zoom</item>
        <item name="sliderStyle">@style/KaleyraSDKDesign.Glass.Slider</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraSDKDesign.Glass.BottomNavigation.Zoom" parent="KaleyraSDKDesign.Glass.BottomNavigation">
        <item name="kaleyra_swipeHorizontalItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Zoom</item>
        <item name="kaleyra_swipeDownItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.Zoom</item>
        <item name="kaleyra_tapItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.Tap.Zoom</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Zoom" parent="KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.Zoom</item>
        <item name="kaleyra_labelStyle">@style/KaleyraSDKDesign.TextView.GlassLabel.SwipeZoom</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.Zoom" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_change</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassLabel.SwipeZoom" parent="KaleyraSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_change</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.Zoom" parent="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.Zoom</item>
        <item name="kaleyra_labelStyle">@style/KaleyraSDKDesign.TextView.GlassLabel.SwipeDownZoom</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.Zoom" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_cancel</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassLabel.SwipeDownZoom" parent="KaleyraSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_cancel</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.Tap.Zoom" parent="KaleyraSDKDesign.Glass.BottomActionItem.Tap">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap.Zoom</item>
        <item name="kaleyra_labelStyle">@style/KaleyraSDKDesign.TextView.GlassLabel.TapZoom</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap.Zoom" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_confirm</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassLabel.TapZoom" parent="KaleyraSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_confirm</item>
    </style>
</resources>