<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BandyerSDKDesign.Glass.Zoom">
        <attr name="bottomNavigationStyle" />
        <attr name="sliderStyle" />
    </declare-styleable>

    <!-- ZOOM FRAGMENT -->
    <style name="BandyerSDKDesign.Glass.Zoom" parent="BandyerSDKDesign.Glass">
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.Zoom</item>
        <item name="sliderStyle">@style/BandyerSDKDesign.Glass.Slider</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.Zoom" parent="BandyerSDKDesign.Glass.BottomNavigation">
        <item name="bandyer_swipeHorizontalItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Zoom</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Zoom</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.Zoom</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Zoom" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.Zoom</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeZoom</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.Zoom" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_change</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeZoom" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_change</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Zoom" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.Zoom</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeDownZoom</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.Zoom" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_cancel</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeDownZoom" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_cancel</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.Zoom" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap.Zoom</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.TapZoom</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap.Zoom" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_confirm</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.TapZoom" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_confirm</item>
    </style>
</resources>