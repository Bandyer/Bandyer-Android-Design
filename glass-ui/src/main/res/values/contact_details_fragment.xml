<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CONTACT DETAILS FRAGMENT -->
    <style name="BandyerSDKDesign.Glass.ContactDetails" parent="BandyerSDKDesign.Glass">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.ContactDetails.RootLayout</item>
        <item name="bandyer_avatarStyle">@style/BandyerSDKDesign.Glass.Avatar.ContactDetails</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.ContactDetails</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.SubTitle.ContactDetails</item>
        <item name="bandyer_contactStateDotStyle">@style/BandyerSDKDesign.GlassRoundedImage.ContactDetailsState</item>
        <item name="recyclerViewStyle">@style/BandyerSDKDesign.Glass.RecyclerView</item>
        <item name="bandyer_recyclerViewItemStyle">@style/BandyerSDKDesign.Glass.RecyclerViewItem</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.ContactDetails</item>
    </style>

    <style name="BandyerSDKDesign.Glass.ContactDetails.RootLayout" parent="">
        <item name="android:background">@color/bandyer_glass_background_color</item>
    </style>

    <style name="BandyerSDKDesign.Glass.ContactDetails.RecyclerViewItem.RootLayout" parent="">
        <item name="android:paddingStart">@dimen/bandyer_dimen_space64</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space64</item>
    </style>

    <style name="BandyerSDKDesign.TextView.ContactDetailsRecyclerViewItem" parent="BandyerSDKDesign.TextView">
        <item name="android:minHeight">@dimen/bandyer_dimen_glass_menu_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bandyer_glass_menu_item_color</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_40sp</item>
    </style>

    <!-- AVATAR -->
    <style name="BandyerSDKDesign.Glass.Avatar.ContactDetails" parent="BandyerSDKDesign.Glass.Avatar">
        <item name="bandyer_imageViewStyle">@style/BandyerSDKDesign.GlassRoundedImage.ContactDetailsAvatar</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.Title.GlassAvatar.ContactDetails</item>
    </style>

    <style name="BandyerSDKDesign.GlassRoundedImage.ContactDetailsAvatar" parent="BandyerSDKDesign.GlassRoundedImage">
        <item name="android:layout_width">@dimen/bandyer_dimen_space72</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space72</item>
        <item name="strokeWidth">@dimen/bandyer_dimen_space0</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Title.GlassAvatar.ContactDetails" parent="BandyerSDKDesign.TextView.Title.GlassAvatar">
        <item name="autoSizeMaxTextSize">@dimen/bandyer_dimen_text_32sp</item>
    </style>

    <!-- CONTACT STATE DOT -->
    <style name="BandyerSDKDesign.GlassRoundedImage.ContactDetailsState" parent="BandyerSDKDesign.GlassRoundedImage">
        <item name="android:layout_width">@dimen/bandyer_dimen_space20</item>
        <item name="android:layout_height">@dimen/bandyer_dimen_space20</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:backgroundTint">@color/bandyer_glass_color_contact_state</item>
        <item name="strokeColor">@android:color/white</item>
    </style>

    <!-- NAME -->
    <style name="BandyerSDKDesign.TextView.Title.ContactDetails" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space0</item>
    </style>

    <!-- CONTACT STATE TEXT -->
    <style name="BandyerSDKDesign.TextView.SubTitle.ContactDetails" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space4</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space0</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.ContactDetails" parent="BandyerSDKDesign.Glass.BottomNavigation">
        <item name="bandyer_swipeHorizontalItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.ContactDetails</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.ContactDetails</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.ContactDetails</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.ContactDetails" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.Label.SwipeContactDetails</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Label.SwipeContactDetails" parent="BandyerSDKDesign.TextView.Label">
        <item name="android:text">@string/bandyer_smartglass_browse</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.ContactDetails" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.Label.SwipeDownContactDetails</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Label.SwipeDownContactDetails" parent="BandyerSDKDesign.TextView.Label">
        <item name="android:text">@string/bandyer_smartglass_close</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.ContactDetails" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.Label.TapContactDetails</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Label.TapContactDetails" parent="BandyerSDKDesign.TextView.Label">
        <item name="android:text">@string/bandyer_smartglass_select</item>
    </style>
</resources>