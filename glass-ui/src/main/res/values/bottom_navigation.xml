<resources>
    <!-- BOTTOM NAVIGATION BAR -->
    <declare-styleable name="KaleyraSDKDesign.Glass.BottomNavigation">
        <attr name="kaleyra_rootLayoutStyle"/>
        <attr name="kaleyra_swipeHorizontalItemStyle" format="reference"/>
        <attr name="kaleyra_swipeDownItemStyle" format="reference"/>
        <attr name="kaleyra_tapItemStyle" format="reference"/>
    </declare-styleable>

    <style name="KaleyraSDKDesign.Glass.BottomNavigation" parent="KaleyraSDKDesign.Glass">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomNavigation.RootLayout</item>
        <item name="kaleyra_swipeHorizontalItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal</item>
        <item name="kaleyra_swipeDownItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown</item>
        <item name="kaleyra_tapItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.Tap</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomNavigation.RootLayout" parent="">
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space8</item>
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space8</item>
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/kaleyra_glass_bottom_bar_gradient</item>
    </style>

    <!-- SWIPE HORIZONTAL ITEM -->
    <style name="KaleyraSDKDesign.Glass.BottomActionItem.SwipeHorizontal" parent="KaleyraSDKDesign.Glass.BottomActionItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal</item>
        <item name="kaleyra_iconStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.Icon.SwipeHorizontal</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraSDKDesign.TextView.GlassIconTip.SwipeHorizontal</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space4</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.Icon.SwipeHorizontal" parent="KaleyraSDKDesign.Glass.BottomActionItem.Icon">
        <item name="srcCompat">@drawable/ic_kaleyra_glas_swipe_arrow</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassIconTip.SwipeHorizontal" parent="KaleyraSDKDesign.TextView.GlassIconTip">
        <item name="android:text">@string/kaleyra_glass_swipe</item>
    </style>

    <!-- SWIPE DOWN ITEM -->
    <style name="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown" parent="KaleyraSDKDesign.Glass.BottomActionItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown</item>
        <item name="kaleyra_iconStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.Icon.SwipeDown</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraSDKDesign.TextView.GlassIconTip.SwipeDown</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space8</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.Icon.SwipeDown" parent="KaleyraSDKDesign.Glass.BottomActionItem.Icon">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_close_arrow</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassIconTip.SwipeDown" parent="KaleyraSDKDesign.TextView.GlassIconTip">
        <item name="android:text">@string/kaleyra_glass_swipe</item>
    </style>

    <!-- TAP ITEM -->
    <style name="KaleyraSDKDesign.Glass.BottomActionItem.Tap" parent="KaleyraSDKDesign.Glass.BottomActionItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap</item>
        <item name="kaleyra_iconStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.Icon.Tap</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraSDKDesign.TextView.GlassIconTip.Tap</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space8</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.Icon.Tap" parent="KaleyraSDKDesign.Glass.BottomActionItem.Icon">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_select</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassIconTip.Tap" parent="KaleyraSDKDesign.TextView.GlassIconTip">
        <item name="android:text">@string/kaleyra_glass_tap</item>
    </style>
</resources>