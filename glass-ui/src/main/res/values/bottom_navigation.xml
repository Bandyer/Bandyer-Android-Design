<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BOTTOM ACTION BAR -->
    <declare-styleable name="BandyerSDKDesign.Glass.BottomNavigation">
        <attr name="bandyer_rootLayoutStyle"/>
        <attr name="bandyer_swipeHorizontalItemStyle" format="reference"/>
        <attr name="bandyer_swipeDownItemStyle" format="reference"/>
        <attr name="bandyer_tapItemStyle" format="reference"/>
    </declare-styleable>

    <style name="BandyerSDKDesign.Glass.BottomNavigation" parent="BandyerSDKDesign.Glass">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.RootLayout</item>
        <item name="bandyer_swipeHorizontalItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomNavigation.RootLayout" parent="">
        <item name="android:paddingTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space8</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space16</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bandyer_bottom_bar_gradient</item>
    </style>

    <!-- SWIPE HORIZONTAL ITEM -->
    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal" parent="BandyerSDKDesign.Glass.BottomActionItem">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.RootLayout</item>
        <item name="bandyer_iconStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Icon.SwipeHorizontal</item>
        <item name="bandyer_iconTipStyle">@style/BandyerSDKDesign.TextView.IconTip.SwipeHorizontal</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.RootLayout" parent="">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space4</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Icon.SwipeHorizontal" parent="BandyerSDKDesign.Glass.BottomActionItem.Icon">
        <item name="srcCompat">@drawable/ic_bandyer_swipe_arrow</item>
    </style>

    <style name="BandyerSDKDesign.TextView.IconTip.SwipeHorizontal" parent="BandyerSDKDesign.TextView.IconTip">
        <item name="android:text">@string/bandyer_smartglass_swipe</item>
    </style>

    <!-- SWIPE DOWN ITEM -->
    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown" parent="BandyerSDKDesign.Glass.BottomActionItem">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.RootLayout</item>
        <item name="bandyer_iconStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Icon.SwipeDown</item>
        <item name="bandyer_iconTipStyle">@style/BandyerSDKDesign.TextView.IconTip.SwipeDown</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.RootLayout" parent="">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space8</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Icon.SwipeDown" parent="BandyerSDKDesign.Glass.BottomActionItem.Icon">
        <item name="srcCompat">@drawable/ic_bandyer_close_arrow</item>
    </style>

    <style name="BandyerSDKDesign.TextView.IconTip.SwipeDown" parent="BandyerSDKDesign.TextView.IconTip">
        <item name="android:text">@string/bandyer_smartglass_swipe</item>
    </style>

    <!-- TAP ITEM -->
    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap" parent="BandyerSDKDesign.Glass.BottomActionItem">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.RootLayout</item>
        <item name="bandyer_iconStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Icon.Tap</item>
        <item name="bandyer_iconTipStyle">@style/BandyerSDKDesign.TextView.IconTip.Tap</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.RootLayout" parent="">
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space8</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Icon.Tap" parent="BandyerSDKDesign.Glass.BottomActionItem.Icon">
        <item name="srcCompat">@drawable/ic_bandyer_select</item>
    </style>

    <style name="BandyerSDKDesign.TextView.IconTip.Tap" parent="BandyerSDKDesign.TextView.IconTip">
        <item name="android:text">@string/bandyer_smartglass_tap</item>
    </style>
</resources>