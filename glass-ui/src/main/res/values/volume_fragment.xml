<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BandyerSDKDesign.Glass.Volume">
        <attr name="bottomNavigationStyle" />
        <attr name="sliderStyle" />
    </declare-styleable>

    <!-- VOLUME FRAGMENT -->
    <style name="BandyerSDKDesign.Glass.Volume" parent="BandyerSDKDesign.Glass">
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.Volume</item>
        <item name="sliderStyle">@style/BandyerSDKDesign.Glass.Slider</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.Volume" parent="BandyerSDKDesign.Glass.BottomNavigation">
        <item name="bandyer_swipeHorizontalItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Volume</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Volume</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.Volume</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Volume" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.Volume</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeVolume</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.Volume" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_change</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeVolume" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_change</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Volume" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.Volume</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeDownVolume</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.Volume" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_cancel</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeDownVolume" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_cancel</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.Volume" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap.Volume</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.TapVolume</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap.Volume" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_confirm</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.TapVolume" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_confirm</item>
    </style>
</resources>