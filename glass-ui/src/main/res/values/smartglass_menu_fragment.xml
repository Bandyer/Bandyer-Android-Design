<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MENU FRAGMENT -->
    <style name="BandyerSDKDesign.SmartGlass.MenuFragment" parent="">
        <item name="recyclerViewStyle">@style/BandyerSDKDesign.SmartGlass.MenuRecyclerView</item>
        <item name="bandyer_recyclerViewItemStyle">@style/BandyerSDKDesign.SmartGlass.MenuRecyclerViewItem</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.SmartGlass.MenuFragment.BottomActionBar</item>
    </style>

    <!-- RECYCLER VIEW -->
    <style name="BandyerSDKDesign.SmartGlass.MenuRecyclerView" parent="">
        <item name="android:background">@color/bandyer_glass_background_color</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space4</item>
    </style>

    <!-- RECYCLER VIEW ITEM -->
    <style name="BandyerSDKDesign.SmartGlass.MenuRecyclerViewItem" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.SmartGlass.MenuRecyclerViewItem.Root</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.MenuRecyclerViewItem.SmartGlass</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="BandyerSDKDesign.SmartGlass.MenuRecyclerViewItem.Root" parent="">
        <item name="android:paddingStart">@dimen/bandyer_dimen_space64</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space64</item>
    </style>

    <style name="BandyerSDKDesign.TextView.MenuRecyclerViewItem.SmartGlass" parent="BandyerSDKDesign.TextView">
        <item name="android:minHeight">@dimen/bandyer_dimen_sg_menu_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bandyer_smartglass_menu_item_color</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_40sp</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.SmartGlass.MenuFragment.BottomActionBar" parent="BandyerSDKDesign.SmartGlass.BottomActionBar">
        <item name="bandyer_swipeDownText">@string/bandyer_smartglass_close</item>
        <item name="bandyer_swipeText">@string/bandyer_smartglass_browse</item>
        <item name="bandyer_tapText">@string/bandyer_smartglass_select</item>
    </style>
</resources>