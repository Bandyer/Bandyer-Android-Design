<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RINGING FRAGMENT -->
    <style name="BandyerSDKDesign.Glass.Ringing" parent="BandyerSDKDesign.Glass">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.SmartGlass.RingingFragment.Root</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.RingingFragment.SmartGlass.Title</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.RingingFragment.SmartGlass.Subtitle</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.SmartGlass.RingingFragment.BottomActionBar</item>
    </style>

    <style name="BandyerSDKDesign.SmartGlass.RingingFragment.Root" parent="">
        <item name="android:background">@color/bandyer_glass_background_color</item>
    </style>

    <!-- TITLE -->
    <style name="BandyerSDKDesign.TextView.RingingFragment.SmartGlass.Title" parent="BandyerSDKDesign.TextView">
        <item name="android:textSize">@dimen/bandyer_dimen_text_32sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- SUBTITLE -->
    <style name="BandyerSDKDesign.TextView.RingingFragment.SmartGlass.Subtitle" parent="BandyerSDKDesign.TextView">
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
        <item name="android:text">@string/bandyer_smartglass_is_calling</item>
        <item name="android:textColor">@color/bandyer_color_white_80</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.SmartGlass.RingingFragment.BottomActionBar" parent="BandyerSDKDesign.SmartGlass.BottomActionBar">
        <item name="bandyer_swipeDownText">@string/bandyer_smartglass_decline</item>
        <item name="bandyer_tapText">@string/bandyer_smartglass_accept</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.Call" parent="BandyerSDKDesign.Glass.BottomNavigation">
        <item name="bandyer_swipeItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Swipe.Call</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Call</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.Call</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Swipe.Call" parent="BandyerSDKDesign.Glass.BottomActionItem.Swipe">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.Label.SwipeCall</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Label.SwipeCall" parent="BandyerSDKDesign.TextView.Label">
        <item name="android:text">@string/bandyer_smartglass_end_call</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Call" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.Label.SwipeDownCall</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Label.SwipeDownCall" parent="BandyerSDKDesign.TextView.Label">
        <item name="android:text">@string/bandyer_smartglass_participants_camera</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.Call" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.Label.TapCall</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Label.TapCall" parent="BandyerSDKDesign.TextView.Label">
        <item name="android:text">@string/bandyer_smartglass_open_menu</item>
    </style>
</resources>