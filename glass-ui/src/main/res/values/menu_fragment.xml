<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BandyerSDKDesign.Glass.Menu">
        <attr name="bottomNavigationStyle" />
        <attr name="bandyer_recyclerViewItemStyle" format="reference" />
        <attr name="bandyer_contactStateDotStyle" format="reference" />
    </declare-styleable>

    <!-- MENU FRAGMENT -->
    <style name="BandyerSDKDesign.Glass.Menu" parent="BandyerSDKDesign.Glass">
        <item name="recyclerViewStyle">@style/BandyerSDKDesign.Glass.RecyclerView</item>
        <item name="bandyer_recyclerViewItemStyle">@style/BandyerSDKDesign.Glass.RecyclerViewItem</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.Menu</item>
    </style>

    <style name="BandyerSDKDesign.Glass.Menu.RecyclerViewItem.RootLayout" parent="">
        <item name="android:paddingStart">@dimen/bandyer_dimen_space64</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space64</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.Menu" parent="BandyerSDKDesign.Glass.BottomNavigation">
        <item name="bandyer_swipeHorizontalItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Menu</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Menu</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.Menu</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Menu" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeMenu</item>
        <item name="android:contentDescription">@string/bandyer_glass_browse</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeMenu" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_browse</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Menu" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeDownMenu</item>
        <item name="android:contentDescription">@string/bandyer_glass_close</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeDownMenu" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_close</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.Menu" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.TapMenu</item>
        <item name="android:contentDescription">@string/bandyer_glass_select</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.TapMenu" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_select</item>
    </style>
</resources>