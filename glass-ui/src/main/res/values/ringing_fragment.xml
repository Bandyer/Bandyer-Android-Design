<resources>
    <declare-styleable name="KaleyraSDKDesign.Glass.DarkBackground.FullScreenLogoDialog.Ringing">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_callWatermarkStyle" />
        <attr name="recyclerViewStyle" />
        <attr name="kaleyra_recyclerViewItemStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="bottomNavigationStyle" />
    </declare-styleable>

    <!-- RINGING FRAGMENT -->
    <style name="KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo.Ringing" parent="KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo">
        <item name="kaleyra_titleStyle">@style/KaleyraSDKDesign.TextView.Title.FullScreenDialog.Ringing</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraSDKDesign.TextView.Subtitle.FullScreenDialog.Ringing</item>
        <item name="bottomNavigationStyle">@style/KaleyraSDKDesign.Glass.BottomNavigation.FullScreenDialog.Logo.Ringing</item>
    </style>

    <!-- TITLE -->
    <style name="KaleyraSDKDesign.TextView.Title.FullScreenDialog.Ringing" parent="KaleyraSDKDesign.TextView.Title.FullScreenDialog">
        <item name="android:visibility">gone</item>
    </style>

    <!-- SUBTITLE -->
    <style name="KaleyraSDKDesign.TextView.Subtitle.FullScreenDialog.Ringing" parent="KaleyraSDKDesign.TextView.Subtitle.FullScreenDialog">
        <item name="android:text">@string/kaleyra_glass_ringing</item>
    </style>

    <!-- BOTTOM NAVIGATION -->
    <style name="KaleyraSDKDesign.Glass.BottomNavigation.FullScreenDialog.Logo.Ringing" parent="KaleyraSDKDesign.Glass.BottomNavigation.FullScreenDialog.Logo">
        <item name="kaleyra_swipeDownItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.FullScreenLogoDialog.Ringing</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.FullScreenLogoDialog.Ringing" parent="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.FullScreenLogoDialog">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.FullScreenLogoDialog.Ringing</item>
        <item name="kaleyra_labelStyle">@style/KaleyraSDKDesign.TextView.GlassLabel.SwipeDownFullScreenLogoDialog.Ringing</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.FullScreenLogoDialog.Ringing" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.FullScreenLogoDialog">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_decline</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassLabel.SwipeDownFullScreenLogoDialog.Ringing" parent="KaleyraSDKDesign.TextView.GlassLabel.SwipeDownFullScreenLogoDialog">
        <item name="android:text">@string/kaleyra_glass_decline</item>
    </style>
</resources>

