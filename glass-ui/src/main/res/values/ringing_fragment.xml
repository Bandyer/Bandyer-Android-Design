<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- RINGING FRAGMENT -->
    <style name="BandyerSDKDesign.Glass.Ringing" parent="BandyerSDKDesign.Glass">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.Ringing.RootLayout</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.GlassRinging</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.Subtitle.GlassRinging</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.Ringing</item>
    </style>

    <style name="BandyerSDKDesign.Glass.Ringing.RootLayout" parent="">
        <item name="android:background">@color/bandyer_glass_background_color</item>
    </style>

    <!-- TITLE -->
    <style name="BandyerSDKDesign.TextView.Title.GlassRinging" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:textSize">@dimen/bandyer_dimen_text_32sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- SUBTITLE -->
    <style name="BandyerSDKDesign.TextView.Subtitle.GlassRinging" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
        <item name="android:text">@string/bandyer_glass_is_calling</item>
        <item name="android:textColor">@color/bandyer_color_white_80</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.Ringing" parent="BandyerSDKDesign.Glass.BottomNavigation">
        <item name="bandyer_swipeHorizontalItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Ringing</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Ringing</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.Ringing</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.Ringing" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="android:visibility">gone</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.Ringing" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.RootLayout.Ringing</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeDownRinging</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.RootLayout.Ringing" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.RootLayout">
        <item name="android:contentDescription">@string/bandyer_glass_decline</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeDownRinging" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_decline</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.Ringing" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.RootLayout.Ringing</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.TapRinging</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.RootLayout.Ringing" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap.RootLayout">
        <item name="android:contentDescription">@string/bandyer_glass_accept</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.TapRinging" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_accept</item>
    </style>
</resources>