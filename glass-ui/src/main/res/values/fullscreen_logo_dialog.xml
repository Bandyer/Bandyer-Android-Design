<resources>
    <declare-styleable name="BandyerSDKDesign.Glass.DarkBackground.FullScreenLogoDialog">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="bandyer_callWatermarkStyle" format="reference" />
        <attr name="android:horizontalScrollViewStyle" />
        <attr name="bandyer_participantsStyle" />
        <attr name="linearProgressIndicatorStyle" />
        <attr name="bandyer_titleStyle" />
        <attr name="bandyer_subtitleStyle" />
        <attr name="bandyer_counterStyle" />
        <attr name="bottomNavigationStyle" />
    </declare-styleable>

    <!-- FULL SCREEN LOGO DIALOG FRAGMENT -->
    <style name="BandyerSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo" parent="BandyerSDKDesign.Glass.DarkBackground.FullScreenDialog">
        <item name="bandyer_callWatermarkStyle">@style/BandyerSDKDesign.CallWatermark</item>
        <item name="android:horizontalScrollViewStyle">@style/BandyerSDKDesign.Glass.HorizontalScrollView.FullScreenLogoDialog</item>
        <item name="bandyer_participantsStyle">@style/BandyerSDKDesign.TextView.Title.FullScreenLogoDialogParticipants</item>
        <item name="linearProgressIndicatorStyle">@style/BandyerSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo.ProgressBar</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.FullScreenDialog</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.Subtitle.FullScreenDialog</item>
        <item name="bandyer_counterStyle">@style/BandyerSDKDesign.TextView.Subtitle.FullScreenDialog.Counter</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.FullScreenDialog.Logo</item>
    </style>

    <!-- SCROLLVIEW -->
    <style name="BandyerSDKDesign.Glass.HorizontalScrollView.FullScreenLogoDialog" parent="">
        <item name="android:fillViewport">true</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Title.FullScreenLogoDialogParticipants" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/bandyer_glass_menu_item_color</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_40sp</item>
        <item name="android:minHeight">@dimen/bandyer_dimen_space0</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space0</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">@dimen/bandyer_dimen_space32</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space32</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- PROGRESS BAR -->
    <style name="BandyerSDKDesign.Glass.DarkBackground.FullScreenDialog.Logo.ProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">?attr/colorSecondary</item>
    </style>

    <!-- COUNTER -->
    <style name="BandyerSDKDesign.TextView.Subtitle.FullScreenDialog.Counter" parent="BandyerSDKDesign.TextView.Subtitle.FullScreenDialog">
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space16</item>
        <item name="android:layout_marginBottom">@dimen/bandyer_dimen_space16</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.FullScreenDialog.Logo" parent="BandyerSDKDesign.Glass.BottomNavigation.FullScreenDialog">
        <item name="bandyer_swipeHorizontalItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.FullScreenLogoDialog</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.FullScreenLogoDialog</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.FullScreenLogoDialog</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.FullScreenLogoDialog" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.FullScreenLogoDialog</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeHorizontalFullScreenLogoDialog</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeHorizontal.FullScreenLogoDialog" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_browse</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeHorizontalFullScreenLogoDialog" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_browse</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.FullScreenLogoDialog" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.FullScreenLogoDialog</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.SwipeDownFullScreenLogoDialog</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.FullScreenLogoDialog" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_close</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.SwipeDownFullScreenLogoDialog" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_close</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.FullScreenLogoDialog" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap.FullScreenLogoDialog</item>
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.GlassLabel.TapFullScreenLogoDialog</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap.FullScreenLogoDialog" parent="BandyerSDKDesign.Glass.BottomActionItem.RootLayout.Tap">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/bandyer_glass_accept</item>
    </style>

    <style name="BandyerSDKDesign.TextView.GlassLabel.TapFullScreenLogoDialog" parent="BandyerSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/bandyer_glass_accept</item>
    </style>
</resources>