<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- END CALL FRAGMENT -->
    <style name="BandyerSDKDesign.Glass.EndCall" parent="BandyerSDKDesign.Glass">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.Glass.EndCall.RootLayout</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.EndCall</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.Subtitle.EndCall</item>
        <item name="bottomNavigationStyle">@style/BandyerSDKDesign.Glass.BottomNavigation.EndCall</item>
    </style>

    <style name="BandyerSDKDesign.Glass.EndCall.RootLayout" parent="">
        <item name="android:background">@color/bandyer_glass_background_color</item>
    </style>

    <!-- TITLE -->
    <style name="BandyerSDKDesign.TextView.Title.EndCall" parent="BandyerSDKDesign.TextView.Title">
        <item name="android:textSize">@dimen/bandyer_dimen_text_32sp</item>
        <item name="android:text">@string/bandyer_smartglass_want_end_call</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- SUBTITLE -->
    <style name="BandyerSDKDesign.TextView.Subtitle.EndCall" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:textSize">@dimen/bandyer_dimen_text_h3</item>
        <item name="android:text">@string/bandyer_smartglass_confirm_end_call</item>
        <item name="android:textColor">@color/bandyer_color_white_80</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- BOTTOM ACTION BAR -->
    <style name="BandyerSDKDesign.Glass.BottomNavigation.EndCall" parent="BandyerSDKDesign.Glass.BottomNavigation">
        <item name="bandyer_swipeHorizontalItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.EndCall</item>
        <item name="bandyer_swipeDownItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.EndCall</item>
        <item name="bandyer_tapItemStyle">@style/BandyerSDKDesign.Glass.BottomActionItem.Tap.EndCall</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal.EndCall" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeHorizontal">
        <item name="android:visibility">gone</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown.EndCall" parent="BandyerSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.Label.SwipeDownEndCall</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Label.SwipeDownEndCall" parent="BandyerSDKDesign.TextView.Label">
        <item name="android:text">@string/bandyer_smartglass_cancel</item>
    </style>

    <style name="BandyerSDKDesign.Glass.BottomActionItem.Tap.EndCall" parent="BandyerSDKDesign.Glass.BottomActionItem.Tap">
        <item name="bandyer_labelStyle">@style/BandyerSDKDesign.TextView.Label.TapEndCall</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Label.TapEndCall" parent="BandyerSDKDesign.TextView.Label">
        <item name="android:text">@string/bandyer_smartglass_confirm</item>
    </style>
</resources>