<resources>
    <declare-styleable name="KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog.EndCall">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="bottomNavigationStyle" />
    </declare-styleable>

    <!-- END CALL FRAGMENT -->
    <style name="KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog.EndCall" parent="KaleyraSDKDesign.Glass.DarkBackground.FullScreenDialog">
        <item name="kaleyra_titleStyle">@style/KaleyraSDKDesign.TextView.Title.FullScreenDialog.EndCall</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraSDKDesign.TextView.Subtitle.FullScreenDialog.EndCall</item>
        <item name="bottomNavigationStyle">@style/KaleyraSDKDesign.Glass.BottomNavigation.FullScreenDialog.EndCall</item>
    </style>

    <!-- TITLE -->
    <style name="KaleyraSDKDesign.TextView.Title.FullScreenDialog.EndCall" parent="KaleyraSDKDesign.TextView.Title.FullScreenDialog">
        <item name="android:text">@string/kaleyra_glass_want_end_call</item>
    </style>

    <!-- SUBTITLE -->
    <style name="KaleyraSDKDesign.TextView.Subtitle.FullScreenDialog.EndCall" parent="KaleyraSDKDesign.TextView.Subtitle.FullScreenDialog">
        <item name="android:text">@string/kaleyra_glass_confirm_end_call</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraSDKDesign.Glass.BottomNavigation.FullScreenDialog.EndCall" parent="KaleyraSDKDesign.Glass.BottomNavigation.FullScreenDialog">
        <item name="kaleyra_swipeDownItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.EndCall</item>
        <item name="kaleyra_tapItemStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.Tap.EndCall</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown.EndCall" parent="KaleyraSDKDesign.Glass.BottomActionItem.SwipeDown">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.EndCall</item>
        <item name="kaleyra_labelStyle">@style/KaleyraSDKDesign.TextView.GlassLabel.SwipeDownEndCall</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown.EndCall" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.SwipeDown">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_cancel</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassLabel.SwipeDownEndCall" parent="KaleyraSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_cancel</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.Tap.EndCall" parent="KaleyraSDKDesign.Glass.BottomActionItem.Tap">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap.EndCall</item>
        <item name="kaleyra_labelStyle">@style/KaleyraSDKDesign.TextView.GlassLabel.TapEndCall</item>
    </style>

    <style name="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap.EndCall" parent="KaleyraSDKDesign.Glass.BottomActionItem.RootLayout.Tap">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_end</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.GlassLabel.TapEndCall" parent="KaleyraSDKDesign.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_end</item>
    </style>
</resources>