<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="?attr/bandyer_zoomStyle">

        <com.bandyer.video_android_glass_ui.settings.zoom.ZoomSlider
            android:id="@+id/bandyer_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?attr/sliderStyle"
            app:layout_constraintBottom_toTopOf="@+id/bandyer_bottom_navigation"
            app:layout_constraintStart_toStartOf="parent" />

        <com.bandyer.video_android_glass_ui.bottom_navigation.BottomNavigationView
            android:id="@+id/bandyer_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?attr/bottomNavigationStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>