<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/bandyer_video_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/bandyer_user_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            style="?attr/bandyer_rootLayoutStyle"
            android:theme="?attr/bandyer_recyclerViewItemStyle" >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/bandyer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="?attr/bandyer_titleStyle" />

            <com.bandyer.video_android_glass_ui.common.AvatarView
                android:id="@+id/bandyer_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="?attr/bandyer_avatarStyle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/bandyer_mic_icon"
                    style="?attr/bandyer_iconStyle"
                    android:theme="?attr/bandyer_iconStyle" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/bandyer_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="?attr/bandyer_subtitleStyle"
                    tools:text="Felice Trapasso" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
