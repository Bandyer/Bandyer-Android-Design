<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="?attr/bandyer_rootLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <collaboration_suite_glass_ui.bottom_navigation.BottomNavigationItemView
            android:id="@+id/bandyer_swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="?attr/bandyer_swipeHorizontalItemStyle" />

        <collaboration_suite_glass_ui.bottom_navigation.BottomNavigationItemView
            android:id="@+id/bandyer_tap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="?attr/bandyer_tapItemStyle" />

        <collaboration_suite_glass_ui.bottom_navigation.BottomNavigationItemView
            android:id="@+id/bandyer_swipe_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="?attr/bandyer_swipeDownItemStyle" />

    </LinearLayout>
</layout>