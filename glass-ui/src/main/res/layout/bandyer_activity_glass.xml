<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="?attr/bandyer_rootLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bandyer_streams"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.bandyer.video_android_glass_ui.status_bar_views.StatusBarView
            android:id="@+id/bandyer_status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bandyer.video_android_glass_ui.ToastContainer
            android:id="@+id/bandyer_toast_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?attr/bandyer_toastContainerStyle"
            style="?attr/bandyer_rootLayoutStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/bandyer_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bandyer_status_bar">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/bandyer_nav_host_fragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:defaultNavHost="true"
                app:navGraph="@navigation/bandyer_glass_nav_graph" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
