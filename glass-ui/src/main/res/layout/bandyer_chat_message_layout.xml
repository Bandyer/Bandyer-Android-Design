<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/bandyer_rootLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bandyer.video_android_glass_ui.common.AvatarView
        android:id="@+id/bandyer_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="?attr/bandyer_avatarStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_name"
        style="?attr/bandyer_titleStyle"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/bandyer_time"
        app:layout_constraintStart_toEndOf="@id/bandyer_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mario Rossi" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_time"
        style="?attr/bandyer_timestampStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/bandyer_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bandyer_avatar"
        tools:text="10.36" />

    <com.bandyer.video_android_glass_ui.utils.PaginatedTextView
        android:id="@+id/bandyer_message"
        style="?attr/bandyer_messageStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bandyer_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Hello there" />

</androidx.constraintlayout.widget.ConstraintLayout>