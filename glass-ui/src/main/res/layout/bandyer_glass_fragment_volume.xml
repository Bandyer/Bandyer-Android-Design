<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="?attr/bandyer_volumeStyle">

    <com.bandyer.video_android_glass_ui.settings.volume.VolumeSlider
        android:id="@+id/bandyer_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bandyer_bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="?attr/sliderStyle"/>

    <com.bandyer.video_android_glass_ui.bottom_navigation.BottomNavigationView
        android:id="@+id/bandyer_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/bottomNavigationStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>