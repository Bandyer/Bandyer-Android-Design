<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.bandyer.video_android_glass_ui.common.AvatarView
            android:id="@+id/bandyer_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="?attr/bandyer_avatarStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bandyer_user_state_dot"
            style="?attr/bandyer_contactStateDotStyle"
            app:layout_constraintEnd_toEndOf="@id/bandyer_avatar"
            app:layout_constraintTop_toTopOf="@id/bandyer_avatar" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bandyer_name"
            style="?attr/bandyer_titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/bandyer_avatar"
            app:layout_constraintStart_toStartOf="@id/bandyer_avatar"
            app:layout_constraintTop_toBottomOf="@id/bandyer_avatar"
            tools:text="Gianmarco" />

        <com.bandyer.video_android_glass_ui.participants.ParticipantStateTextView
            android:id="@+id/bandyer_user_state_text"
            style="?attr/bandyer_subtitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/bandyer_avatar"
            app:layout_constraintStart_toStartOf="@id/bandyer_avatar"
            app:layout_constraintTop_toBottomOf="@id/bandyer_name"
            tools:text="Online" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
