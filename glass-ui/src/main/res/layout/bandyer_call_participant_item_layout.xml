<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="?attr/bandyer_recyclerViewItemStyle">

        <FrameLayout
            android:id="@+id/bandyer_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bandyer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="?attr/bandyer_titleStyle" />

        <com.bandyer.video_android_glass_ui.common.AvatarView
            android:id="@+id/bandyer_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="?attr/bandyer_avatarStyle" />

    </FrameLayout>

</layout>
