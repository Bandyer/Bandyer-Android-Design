<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smartglass_nav_graph"
    app:startDestination="@id/dialingFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.bandyer.video_android_glass_ui.menu.MenuFragment"
        android:label="MenuFragment">
        <action
            android:id="@+id/action_menuFragment_to_volumeFragment"
            app:destination="@id/volumeFragment" />
        <action
            android:id="@+id/action_menuFragment_to_zoomFragment"
            app:destination="@id/zoomFragment" />
        <action
            android:id="@+id/action_menuFragment_to_participantsFragment"
            app:destination="@id/participantsFragment" />
        <action
            android:id="@+id/action_menuFragment_to_smartglass_nav_graph_chat"
            app:destination="@id/smartglass_nav_graph_chat" />
    </fragment>
    <fragment
        android:id="@+id/volumeFragment"
        android:name="com.bandyer.video_android_glass_ui.settings.volume.VolumeFragment"
        android:label="VolumeFragment" />
    <fragment
        android:id="@+id/zoomFragment"
        android:name="com.bandyer.video_android_glass_ui.settings.zoom.ZoomFragment"
        android:label="ZoomFragment" />
    <fragment
        android:id="@+id/callEndedFragment"
        android:name="com.bandyer.video_android_glass_ui.call.CallEndedFragment"
        android:label="CallEndedFragment" />
    <fragment
        android:id="@+id/endCallFragment"
        android:name="com.bandyer.video_android_glass_ui.call.EndCallFragment"
        android:label="EndCallFragment">
        <action
            android:id="@+id/action_endCallFragment_to_callEndedFragment"
            app:destination="@id/callEndedFragment" />
    </fragment>
    <fragment
        android:id="@+id/ringingFragment"
        android:name="com.bandyer.video_android_glass_ui.call.RingingFragment"
        android:label="RingingFragment">
        <action
            android:id="@+id/action_ringingFragment_to_emptyFragment"
            app:destination="@id/emptyFragment"
            app:popUpTo="@id/ringingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/dialingFragment"
        android:name="com.bandyer.video_android_glass_ui.call.DialingFragment"
        android:label="DialingFragment">
        <action
            android:id="@+id/action_dialingFragment_to_emptyFragment"
            app:destination="@id/emptyFragment"
            app:popUpTo="@id/ringingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/emptyFragment"
        android:name="com.bandyer.video_android_glass_ui.call.EmptyFragment"
        android:label="EmptyFragment">
        <action
            android:id="@+id/action_emptyFragment_to_endCallFragment"
            app:destination="@id/endCallFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/participantsFragment"
        android:name="com.bandyer.video_android_glass_ui.call.participants.ParticipantsFragment"
        android:label="ParticipantsFragment"/>
    <include app:graph="@navigation/bandyer_glass_nav_graph_chat" />
    <fragment
        android:id="@+id/connectingFragment"
        android:name="com.bandyer.video_android_glass_ui.call.ConnectingFragment"
        android:label="ConnectingFragment" />
</navigation>