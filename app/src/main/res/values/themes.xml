<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseDesignDemoApp.V21" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSecondary">@color/kaleyra_colorSecondary</item>
        <item name="colorOnSecondary">@color/kaleyra_colorOnSecondary</item>
        <item name="colorError">@color/kaleyra_colorError</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/kaleyra_font</item>
        <item name="android:fontFamily">@font/kaleyra_font</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="toolbarStyle">@style/KaleyraCollaborationSuiteUI.ToolBarStyle</item>
    </style>

    <style name="BaseDesignDemoApp" parent="BaseDesignDemoApp.V21"/>

    <style name="DesignDemoApp" parent="BaseDesignDemoApp">
        <item name="colorPrimary">@color/kaleyra_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/kaleyra_colorPrimaryVariant</item>
        <item name="colorSecondary">@color/kaleyra_colorSecondary</item>
        <item name="colorSurface">@color/kaleyra_colorSurface</item>
        <item name="colorOnPrimary">@color/kaleyra_colorOnPrimary</item>
        <item name="colorOnSurface">@color/kaleyra_colorOnSurface</item>
        <item name="colorOnBackground">@color/kaleyra_colorOnBackground</item>
        <item name="android:colorBackground">@color/kaleyra_colorBackground</item>
        <item name="android:windowBackground">@color/kaleyra_colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme.Call" parent="KaleyraCollaborationSuiteUI.Theme.Call.DayNight"/>

    <!-- CALL WATERMARK CUSTOMIZATION -->

    <style name="KaleyraCollaborationSuiteUI.CallWatermark" parent="">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.CallWatermark.RootLayout</item>
        <item name="kaleyra_iconStyle">@style/CallWatermark</item>
        <item name="kaleyra_titleStyle">@style/TitleWatermark</item>
    </style>

    <style name="CallWatermark" parent="KaleyraCollaborationSuiteUI.CallWatermarkImageView">
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="TitleWatermark" parent="KaleyraCollaborationSuiteUI.TextView.CallWatermark">
        <item name="android:text">@string/kaleyra</item>
    </style>

</resources>