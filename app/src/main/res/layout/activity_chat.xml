<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

   <com.google.android.material.appbar.AppBarLayout
       android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <com.bandyer.video_android_phone_ui.chat.widgets.BandyerChatInfoWidget
                android:id="@+id/chat_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="?attr/bandyer_chatInfoWidgetStyle"/>

        </com.google.android.material.appbar.MaterialToolbar>

   </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include layout="@layout/bandyer_toolbar_shadow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ongoing_call_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BandyerSDKDesign.OngoingCallButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <include
            layout="@layout/bandyer_chat_timestamp_message_item"
            android:id="@+id/timestamp_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/bandyer_dimen_space12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ongoing_call_label"
            app:layout_constraintBottom_toTopOf="@id/message_recycler_view"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/message_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:descendantFocusability="afterDescendants"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timestamp_message"
            app:layout_constraintBottom_toTopOf="@id/chat_input_layout" />

        <com.bandyer.video_android_phone_ui.chat.widgets.BandyerChatInputLayoutWidget
            android:id="@+id/chat_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?attr/bandyer_chatInputWidgetStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.bandyer.video_android_phone_ui.chat.widgets.BandyerChatUnreadMessagesWidget
            android:id="@+id/unread_messages_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/bandyer_dimen_space16"
            android:layout_marginRight="@dimen/bandyer_dimen_space16"
            android:layout_marginBottom="@dimen/bandyer_dimen_space16"
            app:layout_constraintBottom_toBottomOf="@id/message_recycler_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>