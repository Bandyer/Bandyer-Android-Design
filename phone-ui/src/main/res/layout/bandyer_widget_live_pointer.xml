<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bandyer_horizontal_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        tools:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bandyer_vertical_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:layout_constraintGuide_percent="0.5"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bandyer_pointer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/bandyer_horizontal_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/bandyer_horizontal_guideline"
        app:layout_constraintStart_toStartOf="@+id/bandyer_vertical_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/bandyer_vertical_guideline"
        app:layout_constraintEnd_toEndOf="@+id/bandyer_vertical_guideline"
        app:layout_constraintRight_toRightOf="@+id/bandyer_vertical_guideline"/>

    <com.bandyer.video_android_phone_ui.textviews.BandyerAutoHideTextView
        android:id="@+id/bandyer_pointer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/textViewStyle"
        app:layout_constraintEnd_toEndOf="@id/bandyer_pointer_button"
        app:layout_constraintRight_toRightOf="@id/bandyer_pointer_button"
        app:layout_constraintStart_toStartOf="@id/bandyer_pointer_button"
        app:layout_constraintLeft_toLeftOf="@id/bandyer_pointer_button"
        app:layout_constraintTop_toBottomOf="@id/bandyer_pointer_button"
        tools:text="requester" />

</merge>