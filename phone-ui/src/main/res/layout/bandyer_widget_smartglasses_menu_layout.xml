<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bandyer_smart_glass_menu_recyclerview"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <com.bandyer.video_android_phone_ui.smartglass.call.menu.SmartGlassMenuPagerIndicator
        style="?attr/bandyer_pagerIndicatorStyle"
        android:id="@+id/bandyer_smart_glass_menu_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</merge>