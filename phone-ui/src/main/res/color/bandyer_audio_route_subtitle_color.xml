<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- States common to all audio devices -->
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_default="true" />
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_playing_audio="true" />
    <!-- States only for bluetooth devices -->
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_disconnected="true" />
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_deactivating="true" />
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_connecting="true" />
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_failed="true" />
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_available="true" />
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_connected="true" />
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_active="true" />
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_activating="true" />
    <item android:alpha="0.50" android:color="?attr/colorOnSurface" app:bandyer_state_connecting_audio="true" />
</selector>