<resources>
    <declare-styleable name="BandyerSDKDesign.CallInfo">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="bandyer_iconStyle" />
        <attr name="bandyer_titleStyle" />
        <attr name="bandyer_subtitleStyle" />
        <attr name="bandyer_recordingStyle" format="reference" />
    </declare-styleable>

    <style name="BandyerSDKDesign.CallInfo" parent="">
        <item name="bandyer_rootLayoutStyle">@style/BandyerSDKDesign.CallInfo.RootLayout</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.CallInfo</item>
        <item name="bandyer_subtitleStyle">@style/BandyerSDKDesign.TextView.Subtitle.CallInfo</item>
        <item name="bandyer_recordingStyle">@style/BandyerSDKDesign.TextView.Subtitle.Recording</item>
        <item name="bandyer_iconStyle">@style/BandyerSDKDesign.CallWatermark</item>
    </style>

    <style name="BandyerSDKDesign.CallInfo.RootLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bandyer_shape_transparent_black_background</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space8</item>
    </style>

</resources>