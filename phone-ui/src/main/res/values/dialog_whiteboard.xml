<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="KaleyraSDKDesign.BottomSheetDialog.Whiteboard">
        <attr name="kaleyra_textEditorDialogStyle" format="reference" />
        <attr name="kaleyra_progressStyle" />
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_reloadStyle" format="reference" />
        <attr name="kaleyra_uploadStyle" format="reference" />
    </declare-styleable>

    <style name="KaleyraSDKDesign.BottomSheetDialog.Whiteboard" parent="KaleyraSDKDesign.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/KaleyraSDKDesign.BottomSheetModalStyle.Whiteboard</item>
        <item name="kaleyra_textEditorDialogStyle">@style/KaleyraSDKDesign.BottomSheetDialog.TextEditor</item>
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.BottomSheetDialog.Whiteboard.RootLayout</item>
        <item name="kaleyra_progressStyle">@style/KaleyraSDKDesign.LoadingProgressIndicator</item>
        <item name="kaleyra_reloadStyle">@style/KaleyraSDKDesign.BottomSheetDialog.Whiteboard.LoadingError</item>
        <item name="kaleyra_uploadStyle">@style/KaleyraSDKDesign.BottomSheetDialog.Whiteboard.UploadImage</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialog.Whiteboard.Day" parent="KaleyraSDKDesign.BottomSheetDialog.Day">
        <item name="bottomSheetStyle">@style/KaleyraSDKDesign.BottomSheetModalStyle.Whiteboard</item>
        <item name="kaleyra_textEditorDialogStyle">@style/KaleyraSDKDesign.BottomSheetDialog.TextEditor.Day</item>
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.BottomSheetDialog.Whiteboard.RootLayout</item>
        <item name="kaleyra_progressStyle">@style/KaleyraSDKDesign.LoadingProgressIndicator</item>
        <item name="kaleyra_reloadStyle">@style/KaleyraSDKDesign.BottomSheetDialog.Whiteboard.LoadingError</item>
        <item name="kaleyra_uploadStyle">@style/KaleyraSDKDesign.BottomSheetDialog.Whiteboard.UploadImage.Day</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialog.Whiteboard.RootLayout" parent="">
        <item name="android:background">@color/kaleyra_color_loading_whiteboard_background</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetModalStyle.Whiteboard" parent="KaleyraSDKDesign.BottomSheetModalStyle">
        <item name="android:background">@color/kaleyra_color_loading_whiteboard_background</item>
    </style>

</resources>