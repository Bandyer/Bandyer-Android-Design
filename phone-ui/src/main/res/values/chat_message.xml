<resources>

    <style name="KaleyraSDKDesign.ChatMessage.LoggedUser" parent="KaleyraSDKDesign.ChatMessage">
        <item name="materialCardViewStyle">@style/KaleyraSDKDesign.ChatMessageBackground.LoggedUser</item>
        <item name="kaleyra_timestampStyle">@style/KaleyraSDKDesign.TextView.Subtitle.ChatMessageTimestamp.LoggedUser</item>
        <item name="kaleyra_messageStyle">@style/KaleyraSDKDesign.TextView.ChatMessage.LoggedUser</item>
        <item name="kaleyra_iconStyle">@style/KaleyraSDKDesign.ChatMessageStatusImageView</item>
    </style>

    <style name="KaleyraSDKDesign.ChatMessage.OtherUser" parent="KaleyraSDKDesign.ChatMessage">
        <item name="materialCardViewStyle">@style/KaleyraSDKDesign.ChatMessageBackground.OtherUser</item>
        <item name="kaleyra_timestampStyle">@style/KaleyraSDKDesign.TextView.Subtitle.ChatMessageTimestamp.OtherUser</item>
        <item name="kaleyra_messageStyle">@style/KaleyraSDKDesign.TextView.ChatMessage.OtherUser</item>
    </style>

    <!-- Chat Message Text Data View Container -->

    <style name="KaleyraSDKDesign.ChatMessageBackground" parent="Widget.MaterialComponents.CardView">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPaddingTop">@dimen/kaleyra_dimen_space8</item>
        <item name="contentPaddingBottom">@dimen/kaleyra_dimen_space8</item>
        <item name="contentPaddingLeft">@dimen/kaleyra_dimen_space16</item>
        <item name="contentPaddingRight">@dimen/kaleyra_dimen_space16</item>
        <item name="cardElevation">@dimen/kaleyra_dimen_space0</item>
        <item name="android:layout_marginLeft">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginRight">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
    </style>

    <style name="KaleyraSDKDesign.ChatMessageBackground.LoggedUser" parent="KaleyraSDKDesign.ChatMessageBackground">
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
        <item name="shapeAppearance">@style/KaleyraSDKDesign.ChatMessageBackground.LoggedUser.ShapeAppereanceOverlay</item>
    </style>

    <style name="KaleyraSDKDesign.ChatMessageBackground.OtherUser" parent="KaleyraSDKDesign.ChatMessageBackground">
        <item name="cardBackgroundColor">?attr/colorPrimaryVariant</item>
        <item name="shapeAppearance">@style/KaleyraSDKDesign.ChatMessageBackground.OtherUser.ShapeAppearanceOverlay</item>
    </style>

    <style name="KaleyraSDKDesign.ChatMessageBackground.LoggedUser.ShapeAppereanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/kaleyra_dimen_space12</item>
        <item name="cornerSizeTopLeft">@dimen/kaleyra_dimen_space24</item>
        <item name="cornerSizeBottomRight">@dimen/kaleyra_dimen_space0</item>
        <item name="cornerSizeBottomLeft">@dimen/kaleyra_dimen_space24</item>
    </style>

    <style name="KaleyraSDKDesign.ChatMessageBackground.OtherUser.ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/kaleyra_dimen_space24</item>
        <item name="cornerSizeTopLeft">@dimen/kaleyra_dimen_space0</item>
        <item name="cornerSizeBottomRight">@dimen/kaleyra_dimen_space24</item>
        <item name="cornerSizeBottomLeft">@dimen/kaleyra_dimen_space12</item>
    </style>

</resources>