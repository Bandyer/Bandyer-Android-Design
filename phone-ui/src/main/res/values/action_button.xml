<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ACTION BUTTON STYLEABLE -->

    <declare-styleable name="KaleyraSDKDesign.ActionButton" tools:ignore="MissingDefaultResource">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="materialButtonStyle" />
        <attr name="android:textViewStyle" />
    </declare-styleable>

    <!-- ACTION BUTTON STYLES -->

    <style name="KaleyraSDKDesign.ActionButton">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.ActionButton.RootLayout</item>
    </style>

    <style name="KaleyraSDKDesign.ActionButton.SmartGlass" parent="KaleyraSDKDesign.ActionButton">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.ActionButton.RootLayout.SmartGlass</item>
    </style>

    <style name="KaleyraSDKDesign.ActionButton.RootLayout" parent="">
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space8</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space20</item>
    </style>

    <style name="KaleyraSDKDesign.ActionButton.RootLayout.SmartGlass" parent="KaleyraSDKDesign.ActionButton.RootLayout">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space0</item>
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space0</item>
    </style>

    <style name="KaleyraSDKDesign.ActionButton.ConfirmButton" parent="KaleyraSDKDesign.ActionButton">
        <item name="materialButtonStyle">@style/KaleyraSDKDesign.ImageButton.Confirm</item>
        <item name="android:textViewStyle">@style/KaleyraSDKDesign.TextAppearance.ButtonLabel.Confirm</item>
    </style>

    <style name="KaleyraSDKDesign.ActionButton.CancelButton" parent="KaleyraSDKDesign.ActionButton">
        <item name="materialButtonStyle">@style/KaleyraSDKDesign.ImageButton.Cancel</item>
        <item name="android:textViewStyle">@style/KaleyraSDKDesign.TextAppearance.ButtonLabel.Cancel</item>
    </style>

    <!-- CALL ACTION BUTTONS -->

    <style name="KaleyraSDKDesign.ActionButton.AudioRoute" parent="KaleyraSDKDesign.ActionButton">
        <item name="materialButtonStyle">@style/KaleyraSDKDesign.ImageButton.Call.AudioRoute</item>
        <item name="android:textViewStyle">@style/KaleyraSDKDesign.TextView.Subtitle.ButtonLabel.AudioRoute</item>
    </style>

