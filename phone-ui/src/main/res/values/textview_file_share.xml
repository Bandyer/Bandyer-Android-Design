        <item name="android:text">@string/bandyer_click_to_share_file</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/bandyer_color_on_background_30</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.EmptyListLayout.Day" parent="BandyerSDKDesign.TextView.Subtitle.EmptyListLayout">
        <item name="android:textColor">@color/bandyer_color_on_background_30_day</item>
    </style>

