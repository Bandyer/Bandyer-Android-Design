        <item name="android:text">@string/bandyer_no_file_shared</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/bandyer_color_on_background_30</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space20</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Title.EmptyListLayout.Day" parent="BandyerSDKDesign.TextView.Title.EmptyListLayout">
        <item name="android:textColor">@color/bandyer_color_on_background_30_day</item>
    </style>

