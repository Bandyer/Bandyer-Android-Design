    <style name="BandyerSDKDesign.TextView.Subtitle.FileShareProgress" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bandyer_color_on_background_50</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space0</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FileShareProgress.Day" parent="BandyerSDKDesign.TextView.Subtitle.FileShareProgress">
        <item name="android:textColor">@color/bandyer_color_on_background_50_day</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FileShareUser" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">@dimen/bandyer_dimen_space0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/bandyer_dimen_space8</item>
        <item name="android:layout_marginTop">@dimen/bandyer_dimen_space6</item>
        <item name="android:layout_marginEnd">@dimen/bandyer_dimen_space24</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
