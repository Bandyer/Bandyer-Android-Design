        <item name="android:paddingStart">@dimen/bandyer_dimen_space0</item>
        <item name="android:paddingEnd">@dimen/bandyer_dimen_space20</item>
        <item name="android:text">@string/bandyer_fileshare_add</item>
        <item name="android:textColor">?android:attr/colorBackground</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/bandyer_dimen_space0</item>
        <item name="android:letterSpacing">0.0892857143</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.FileShareFabText.Day" parent="BandyerSDKDesign.TextView.Subtitle.FileShareFabText">
        <item name="android:textColor">@color/bandyer_colorBackground</item>
    </style>
</resources>