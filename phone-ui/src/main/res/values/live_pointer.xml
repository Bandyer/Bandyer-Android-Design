<resources>

    <declare-styleable name="BandyerSDKDesign.LivePointer">
        <attr name="bandyer_rootLayoutStyle" />
        <attr name="materialButtonStyle" />
        <attr name="android:textViewStyle" />
    </declare-styleable>

    <style name="BandyerSDKDesign.LivePointer" parent="">
        <item name="materialButtonStyle">@style/BandyerSDKDesign.ImageButton.LivePointer</item>
        <item name="android:textViewStyle">@style/BandyerSDKDesign.TextView.Subtitle.LivePointer</item>
    </style>

    <style name="BandyerSDKDesign.ImageButton.LivePointer" parent="BandyerSDKDesign.ImageButton">
        <item name="android:minWidth">@dimen/bandyer_dimen_normal_image_button</item>
        <item name="android:minHeight">@dimen/bandyer_dimen_normal_image_button</item>
        <item name="icon">@drawable/bandyer_circular_background</item>
        <item name="iconTint">?attr/colorSecondary</item>
        <item name="iconSize">@dimen/bandyer_dimen_space16</item>
    </style>

    <style name="BandyerSDKDesign.TextView.Subtitle.LivePointer" parent="BandyerSDKDesign.TextView.Subtitle">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/BandyerSDKDesign.TextAppearance</item>
    </style>

</resources>