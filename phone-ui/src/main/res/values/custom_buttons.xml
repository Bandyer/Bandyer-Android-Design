<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Ongoing call button -->
    <style name="BandyerSDKDesign.OngoingCallButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:text">@string/bandyer_ongoing_call_label</item>
        <item name="backgroundTint">@color/bandyer_color_answer_button</item>
        <item name="cornerRadius">@dimen/bandyer_dimen_space0</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:insetTop">@dimen/bandyer_dimen_space0</item>
        <item name="android:insetBottom">@dimen/bandyer_dimen_space0</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:paddingTop">@dimen/bandyer_dimen_space8</item>
        <item name="android:paddingBottom">@dimen/bandyer_dimen_space8</item>
        <item name="android:minHeight">@dimen/bandyer_dimen_space0</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- Fullscreen info -->
    <style name="BandyerSDKDesign.FullscreenToastButton" parent="Widget.MaterialComponents.Button">
        <item name="android:text">@string/bandyer_fullscreen_info</item>
        <item name="backgroundTint">@color/bandyer_color_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="icon">@drawable/ic_bandyer_enter_fullscreen</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/bandyer_dimen_space48</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="shapeAppearanceOverlay">@style/BandyerSDKDesign.FullscreenToastButton.ShapeAppearance
        </item>
    </style>

    <style name="BandyerSDKDesign.FullscreenToastButton.ShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BandyerSDKDesign.CollaborateButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_margin">@dimen/bandyer_dimen_space16</item>
        <item name="android:text">@string/bandyer_collaborate_button</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/bandyer_dimen_text_normal</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="icon">@drawable/ic_bandyer_nav_share_whiteboard</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">@dimen/bandyer_dimen_space24</item>
        <item name="iconTint">@android:color/black</item>
        <item name="elevation">@dimen/bandyer_dimen_space6</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/bandyer_dimen_space6</item>
    </style>

</resources>