<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="KaleyraSDKDesign.FragmentDialog">
        <!-- Dialog auto dismiss time in milliseconds. The timer starts after the user has pressed the vote button. Setting a value of -1 will not dismiss the dialog. -->
        <attr name="kaleyra_autoDismissTime" format="integer" />
    </declare-styleable>

    <style name="KaleyraSDKDesign.FragmentDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/kaleyra_floating_dialog_background</item>
        <item name="android:windowAnimationStyle">@style/KaleyraSDKDesign.FragmentDialog.Animation</item>
        <item name="kaleyra_autoDismissTime">3000</item>
    </style>

    <style name="KaleyraSDKDesign.FragmentDialog.Animation" parent="@style/Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/kaleyra_slide_up</item>
        <item name="android:windowExitAnimation">@anim/kaleyra_slide_down</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialog.V16" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="toolbarStyle">@style/KaleyraSDKDesign.BottomSheetDialogToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/KaleyraSDKDesign.BottomSheetDialog.V16.ToolbarNavigationButtonStyle</item>
        <item name="bottomSheetStyle">@style/KaleyraSDKDesign.BottomSheetModalStyle</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialog.V16.Day" parent="KaleyraSDKDesign.BottomSheetDialog.V16">
        <item name="toolbarStyle">@style/KaleyraSDKDesign.BottomSheetDialogToolbarStyle.Day</item>
        <item name="toolbarNavigationButtonStyle">@style/KaleyraSDKDesign.BottomSheetDialog.V16.ToolbarNavigationButtonStyle.Day</item>
        <item name="bottomSheetStyle">@style/KaleyraSDKDesign.BottomSheetModalStyle.Day</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetModalStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetModalStyle.Day" parent="KaleyraSDKDesign.BottomSheetModalStyle">
        <item name="backgroundTint">@color/kaleyra_colorSurface</item>
    </style>

    <style name="KaleyraSDKDesign.FullScreenDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialog.V16.ToolbarNavigationButtonStyle" parent="">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialog.V16.ToolbarNavigationButtonStyle.Day" parent="">
        <item name="android:tint">@color/kaleyra_colorOnPrimary</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialogToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/KaleyraSDKDesign.BottomSheetDialogToolbarStyle.MaterialThemeOverlay</item>
        <item name="android:touchscreenBlocksFocus" tools:targetApi="lollipop">false</item>
        <item name="navigationIcon">@drawable/ic_kaleyra_back_down</item>
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space12</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialogToolbarStyle.Day" parent="KaleyraSDKDesign.BottomSheetDialogToolbarStyle">
        <item name="materialThemeOverlay">@style/KaleyraSDKDesign.BottomSheetDialogToolbarStyle.MaterialThemeOverlay.Day</item>
        <item name="android:background">@color/kaleyra_colorPrimary</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialogToolbarStyle.MaterialThemeOverlay" parent="">
        <item name="drawableTint">@color/kaleyra_whiteboard_toolbar_menu_color</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialogToolbarStyle.MaterialThemeOverlay.Day" parent="">
        <item name="drawableTint">@color/kaleyra_whiteboard_toolbar_menu_color_day</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetDialog.Day" parent="KaleyraSDKDesign.BottomSheetDialog.V16.Day"/>
    <style name="KaleyraSDKDesign.BottomSheetDialog" parent="KaleyraSDKDesign.BottomSheetDialog.V16"/>

</resources>