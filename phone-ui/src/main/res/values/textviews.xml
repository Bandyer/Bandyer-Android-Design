<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TEXT VIEW STYLE -->

    <style name="KaleyraSDKDesign.TextView.Stream.UserDetails" parent="KaleyraSDKDesign.TextView">
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space56</item>
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginLeft">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginRight">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginBottom">@dimen/kaleyra_dimen_space16</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Title.AudioRoute" parent="KaleyraSDKDesign.TextView">
        <item name="android:textColor">@color/kaleyra_audio_route_title_color</item>
        <item name="android:layout_marginBottom">@dimen/kaleyra_dimen_space2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textAppearance">@style/KaleyraSDKDesign.TextView.Title.AudioRoute.TextAppearance</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Subtitle.AudioRoute" parent="KaleyraSDKDesign.TextView.Subtitle">
        <item name="android:textColor">@color/kaleyra_audio_route_subtitle_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Title.AudioRoute.TextAppearance.Active" parent="KaleyraSDKDesign.TextView.Title.AudioRoute.TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Title.AudioRoute.TextAppearance" parent="">
        <item name="android:textStyle">normal</item>
    </style>

    <!-- BOUNCING DOTS -->

    <declare-styleable name="KaleyraSDKDesign.TextView.Subtitle.BouncingDots">
        <attr name="kaleyra_period" />
        <attr name="kaleyra_animationHeight" />
        <attr name="kaleyra_autoplay" />
    </declare-styleable>

    <style name="KaleyraSDKDesign.TextView.Subtitle.BouncingDots" parent="KaleyraSDKDesign.TextView.Subtitle">
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="kaleyra_autoplay">false</item>
        <item name="kaleyra_animationHeight">@dimen/kaleyra_dimen_space2</item>
        <item name="kaleyra_period">1000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_bouncing_dots</item>
        <item name="android:textColor">@color/kaleyra_color_on_primary_50</item>
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space2</item>
        <item name="android:layout_marginLeft">@dimen/kaleyra_dimen_space2</item>
        <item name="android:lineSpacingExtra">@dimen/kaleyra_dimen_space0</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- ANSWER CALL HELPER TEXTVIEW -->

    <style name="KaleyraSDKDesign.TextView.Subtitle.AnswerCallHelperText" parent="KaleyraSDKDesign.TextView.Subtitle">
        <item name="android:textAppearance">@style/KaleyraSDKDesign.TextAppearance.Large</item>
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginLeft">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginRight">@dimen/kaleyra_dimen_space16</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:visibility">gone</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- BUTTON LABEL STYLE -->

    <style name="KaleyraSDKDesign.TextView.Title.ConfirmDataLoss" parent="KaleyraSDKDesign.TextView.Title">
        <item name="android:paddingRight">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingLeft">@dimen/kaleyra_dimen_space16</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:text">@string/kaleyra_data_loss_confirm_message</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Title.ConfirmDataLoss.Day" parent="KaleyraSDKDesign.TextView.Title.ConfirmDataLoss">
        <item name="android:textColor">@color/kaleyra_colorOnSurface</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Subtitle.Decline" parent="KaleyraSDKDesign.TextView.Subtitle">
        <item name="android:text">@string/kaleyra_ringing_decline</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/kaleyra_dimen_space16</item>
        <item name="android:textAppearance">@style/KaleyraSDKDesign.TextAppearance</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Subtitle.Answer" parent="KaleyraSDKDesign.TextView.Subtitle">
        <item name="android:text">@string/kaleyra_ringing_answer</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/kaleyra_dimen_space16</item>
        <item name="android:textAppearance">@style/KaleyraSDKDesign.TextAppearance</item>
    </style>

    <!-- Title style -->
    <style name="KaleyraSDKDesign.TextView.Title.BottomSheet" parent="KaleyraSDKDesign.TextView.Title">
        <item name="android:visibility">gone</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Subtitle.Recording" parent="KaleyraSDKDesign.TextView.Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space8</item>
        <item name="android:paddingRight">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingLeft">@dimen/kaleyra_dimen_space16</item>
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:drawablePadding">@dimen/kaleyra_dimen_space8</item>
        <item name="android:drawableStart">@drawable/ic_kaleyra_record</item>
        <item name="drawableTint">@color/kaleyra_recording_color</item>
        <item name="android:textAppearance">@style/KaleyraSDKDesign.TextAppearance</item>
    </style>

    <!-- Call User Info -->
    <style name="KaleyraSDKDesign.TextView.Title.UserInfo" parent="KaleyraSDKDesign.TextView.Title">
        <item name="android:textAppearance">@style/KaleyraSDKDesign.TextAppearance</item>
        <item name="android:text">@string/kaleyra_call_hangup</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginLeft">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginBottom">@dimen/kaleyra_dimen_space16</item>
    </style>

    <!-- User Status -->
    <style name="KaleyraSDKDesign.TextView.Title.UserStatus" parent="KaleyraSDKDesign.TextView.Title">
        <item name="android:background">@color/kaleyra_color_grey</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">@dimen/kaleyra_dimen_space8</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Title.Reload" parent="KaleyraSDKDesign.TextView.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space20</item>
        <item name="android:text">@string/kaleyra_error_title</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Subtitle.Reload" parent="KaleyraSDKDesign.TextView.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/kaleyra_error_subtitle</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/kaleyra_dimen_space56</item>
    </style>

</resources>