<resources>

    <declare-styleable name="BandyerSDKDesign.TextEditorStyle">
        <attr name="bandyer_titleStyle" />
        <attr name="bandyer_negativeButtonStyle" />
        <attr name="bandyer_positiveButtonStyle" />
    </declare-styleable>

    <style name="BandyerSDKDesign.TextEditorStyle" parent="">
        <item name="textInputStyle">@style/BandyerSDKDesign.TextInputLayout.Dialog</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.ConfirmDataLoss</item>
        <item name="bandyer_negativeButtonStyle">@style/BandyerSDKDesign.ActionButton.CancelButton</item>
        <item name="bandyer_positiveButtonStyle">@style/BandyerSDKDesign.ActionButton.ConfirmButton</item>
    </style>

    <style name="BandyerSDKDesign.TextEditorStyle.Day" parent="">
        <item name="textInputStyle">@style/BandyerSDKDesign.TextInputLayout.Dialog.Day</item>
        <item name="bandyer_titleStyle">@style/BandyerSDKDesign.TextView.Title.ConfirmDataLoss.Day</item>
        <item name="bandyer_negativeButtonStyle">@style/BandyerSDKDesign.ActionButton.CancelButton.Day</item>
        <item name="bandyer_positiveButtonStyle">@style/BandyerSDKDesign.ActionButton.ConfirmButton.Day</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialog.TextEditor.V16" parent="BandyerSDKDesign.BottomSheetDialog.V16">
        <item name="bandyer_textEditorStyle">@style/BandyerSDKDesign.TextEditorStyle</item>
    </style>

    <style name="BandyerSDKDesign.BottomSheetDialog.TextEditor.V16.Day" parent="BandyerSDKDesign.BottomSheetDialog.V16.Day">
        <item name="bandyer_textEditorStyle">@style/BandyerSDKDesign.TextEditorStyle.Day</item>
    </style>

    <declare-styleable name="BandyerSDKDesign.BottomSheetDialog.TextEditor">
        <attr name="bandyer_textEditorStyle" format="reference" />
    </declare-styleable>

    <style name="BandyerSDKDesign.BottomSheetDialog.TextEditor" parent="BandyerSDKDesign.BottomSheetDialog.TextEditor.V16"/>
    <style name="BandyerSDKDesign.BottomSheetDialog.TextEditor.Day" parent="BandyerSDKDesign.BottomSheetDialog.TextEditor.V16.Day"/>

</resources>