<resources>

    <style name="KaleyraCollaborationSuiteUI.ImageViewAvatar" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="android:background">@color/kaleyra_color_background_dark</item>
        <item name="android:src">@drawable/kaleyra_chat_avatar_icon</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="shapeAppearance">@style/KaleyraCollaborationSuiteUI.ImageViewAvatar.ShapeAppearance</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.ImageViewAvatar.ShapeAppearance" parent=""/>

    <style name="KaleyraCollaborationSuiteUI.ChatMessageStatusImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="android:tint">?attr/colorOnSecondary</item>
        <item name="android:src">@drawable/kaleyra_chat_status_icon</item>
        <item name="android:padding">@dimen/kaleyra_dimen_space2</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.ImageViewAvatar.Chat" parent="KaleyraCollaborationSuiteUI.ImageViewAvatar">
        <item name="android:background">@color/kaleyra_color_grey_light</item>
        <item name="android:src">@drawable/ic_kaleyra_avatar</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="android:layout_width">@dimen/kaleyra_dimen_chat_avatar_size</item>
        <item name="android:layout_height">@dimen/kaleyra_dimen_chat_avatar_size</item>
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space4</item>
        <item name="android:layout_marginBottom">@dimen/kaleyra_dimen_space4</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginRight">@dimen/kaleyra_dimen_space16</item>
    </style>
</resources>