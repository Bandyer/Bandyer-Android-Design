<resources>
    <declare-styleable name="KaleyraSDKDesign.FragmentDialog.Feedback">
        <attr name="kaleyra_feedbackLayoutStyle" format="reference" />
        <attr name="kaleyra_feedbackSentLayoutStyle" format="reference" />
    </declare-styleable>

    <style name="KaleyraSDKDesign.FragmentDialog.Feedback" parent="KaleyraSDKDesign.FragmentDialog">
        <item name="colorOnSecondary">@color/kaleyra_colorOnSecondary</item>
        <item name="kaleyra_feedbackLayoutStyle">@style/KaleyraSDKDesign.FragmentDialog.FeedbackLayout</item>
        <item name="kaleyra_feedbackSentLayoutStyle">@style/KaleyraSDKDesign.FragmentDialog.FeedbackSentLayout</item>
    </style>

    <declare-styleable name="KaleyraSDKDesign.FragmentDialog.FeedbackLayout">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_closeButtonStyle" />
        <attr name="kaleyra_ratingBarStyle" format="reference" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="textInputStyle" />
        <attr name="kaleyra_positiveButtonStyle" />
    </declare-styleable>

    <style name="KaleyraSDKDesign.FragmentDialog.FeedbackLayout" parent="">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.FragmentDialog.FeedbackLayout.RootLayout</item>
        <item name="kaleyra_closeButtonStyle">@style/KaleyraSDKDesign.ImageButton.FeedbackLayoutCloseButton</item>
        <item name="kaleyra_titleStyle">@style/KaleyraSDKDesign.TextView.Title.FeedbackLayout</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraSDKDesign.TextView.Subtitle.FeedbackLayout</item>
        <item name="kaleyra_ratingBarStyle">@style/KaleyraSDKDesign.FragmentDialog.FeedbackLayout.RatingBarStyle</item>
        <item name="textInputStyle">@style/KaleyraSDKDesign.FragmentDialog.FeedbackLayout.TextInputLayout</item>
        <item name="kaleyra_positiveButtonStyle">@style/KaleyraSDKDesign.FragmentDialog.FeedbackLayout.PositiveButton</item>
    </style>

    <style name="KaleyraSDKDesign.FragmentDialog.FeedbackLayout.RootLayout" parent="">
        <item name="android:padding">@dimen/kaleyra_dimen_space4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="KaleyraSDKDesign.ImageButton.FeedbackLayoutCloseButton" parent="KaleyraSDKDesign.ImageButton">
        <item name="icon">@drawable/ic_kaleyra_close_bold</item>
        <item name="iconSize">@dimen/kaleyra_dimen_space20</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="android:minHeight">@dimen/kaleyra_dimen_space48</item>
        <item name="android:minWidth">@dimen/kaleyra_dimen_space48</item>
        <item name="android:contentDescription">@string/kaleyra_feedback_close</item>
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space12</item>
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space12</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space12</item>
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space12</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Title.FeedbackLayout" parent="KaleyraSDKDesign.TextView.Title">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space28</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space28</item>
        <item name="android:layout_marginBottom">@dimen/kaleyra_dimen_space16</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/kaleyra_dimen_space2</item>
        <item name="android:text">@string/kaleyra_feedback_evaluate_call</item>
        <item name="android:textColor">@color/kaleyra_color_on_surface_80</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Subtitle.FeedbackLayout" parent="KaleyraSDKDesign.TextView.Subtitle">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space28</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space28</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:focusable">true</item>
        <item name="android:ems">1000</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_h3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="KaleyraSDKDesign.FragmentDialog.FeedbackLayout.RatingBarStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space28</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space28</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="kaleyra_minRating">1</item>
        <item name="kaleyra_numLevels">5</item>
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space10</item>
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space10</item>
        <item name="android:contentDescription">@string/kaleyra_feedback_rating_bar_descr</item>
        <item name="drawableSize">@dimen/kaleyra_dimen_space28</item>
        <item name="drawableTint">?attr/colorSecondary</item>
    </style>

    <style name="KaleyraSDKDesign.FragmentDialog.FeedbackLayout.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/KaleyraSDKDesign.FragmentDialog.FeedbackLayout.TextInputLayout.MaterialThemeOverlay</item>
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space24</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:minHeight">@dimen/kaleyra_dimen_space56</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textAutoCorrect|textCapSentences|textAutoComplete|textMultiLine</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="KaleyraSDKDesign.FragmentDialog.FeedbackLayout.TextInputLayout.MaterialThemeOverlay" parent="">
        <item name="editTextStyle">@style/KaleyraSDKDesign.TextInputEditText.FeedbackLayout</item>
    </style>

    <style name="KaleyraSDKDesign.TextInputEditText.FeedbackLayout" parent="KaleyraSDKDesign.TextInputEditText">
        <item name="android:hint">@string/kaleyra_feedback_leave_a_comment</item>
        <item name="android:maxLines">4</item>
        <item name="android:background">@drawable/kaleyra_edittext_background</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbarThumbVertical">@drawable/kaleyra_feedback_scrollbar_thumb</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/kaleyra_dimen_space10</item>
        <item name="android:paddingBottom">@dimen/kaleyra_dimen_space10</item>
        <item name="android:textAppearance">@style/KaleyraSDKDesign.TextAppearance.TextInputEditText.FeedbackLayout</item>
    </style>

    <style name="KaleyraSDKDesign.TextAppearance.TextInputEditText.FeedbackLayout" parent="KaleyraSDKDesign.TextAppearance.TextInputEditText">
        <item name="android:textSize">@dimen/kaleyra_dimen_text_normal</item>
    </style>

    <style name="KaleyraSDKDesign.FragmentDialog.FeedbackLayout.PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space8</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginBottom">@dimen/kaleyra_dimen_space12</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:text">@string/kaleyra_feedback_vote</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_h3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="KaleyraSDKDesign.FragmentDialog.FeedbackSentLayout">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="kaleyra_closeButtonStyle" />
    </declare-styleable>

    <style name="KaleyraSDKDesign.FragmentDialog.FeedbackSentLayout" parent="">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraSDKDesign.FragmentDialog.FeedbackSentLayout.RootLayout</item>
        <item name="kaleyra_titleStyle">@style/KaleyraSDKDesign.TextView.Title.FeedbackSentLayout</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraSDKDesign.TextView.Subtitle.FeedbackSentLayout</item>
        <item name="kaleyra_closeButtonStyle">@style/KaleyraSDKDesign.FragmentDialog.FeedbackSentLayout.PositiveButton</item>
    </style>

    <style name="KaleyraSDKDesign.FragmentDialog.FeedbackSentLayout.RootLayout" parent="">
        <item name="android:padding">@dimen/kaleyra_dimen_space16</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Title.FeedbackSentLayout" parent="KaleyraSDKDesign.TextView.Title">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space32</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:ems">1000</item>
        <item name="android:lineSpacingExtra">@dimen/kaleyra_dimen_space2</item>
        <item name="android:text">@string/kaleyra_feedback_thank_you</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_h3</item>
    </style>

    <style name="KaleyraSDKDesign.TextView.Subtitle.FeedbackSentLayout" parent="KaleyraSDKDesign.TextView.Subtitle">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space16</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">@dimen/kaleyra_dimen_space2</item>
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space4</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space4</item>
        <item name="android:textColor">@color/kaleyra_color_on_surface_80</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_h3</item>
        <item name="android:text">@string/kaleyra_feedback_see_you_soon</item>
    </style>

    <style name="KaleyraSDKDesign.FragmentDialog.FeedbackSentLayout.PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space32</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:text">@string/kaleyra_feedback_close</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_h3</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>