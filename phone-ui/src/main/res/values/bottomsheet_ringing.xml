<resources>
    <declare-styleable name="KaleyraSDKDesign.BottomSheet.Ringing">
        <attr name="kaleyra_lineStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_recyclerViewStyle" />
        <attr name="materialCardViewStyle" />
        <attr name="kaleyra_declineStyle" format="reference" />
        <attr name="kaleyra_answerStyle" format="reference" />
    </declare-styleable>

    <style name="KaleyraSDKDesign.BottomSheet.Ringing" parent="KaleyraSDKDesign.BottomSheet">
        <item name="materialCardViewStyle">@style/KaleyraSDKDesign.BottomSheetBackground.Ringing</item>
        <item name="kaleyra_lineStyle">@style/KaleyraSDKDesign.ImageButton.BottomSheetLine.Ringing</item>
        <item name="kaleyra_declineStyle">@style/KaleyraSDKDesign.ActionButton.Decline</item>
        <item name="kaleyra_answerStyle">@style/KaleyraSDKDesign.ActionButton.Answer</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheet.Ringing.Night" parent="KaleyraSDKDesign.BottomSheet.Ringing">
        <item name="kaleyra_declineStyle">@style/KaleyraSDKDesign.ActionButton.Decline.Night</item>
        <item name="kaleyra_answerStyle">@style/KaleyraSDKDesign.ActionButton.Answer.Night</item>
    </style>

    <style name="KaleyraSDKDesign.BottomSheetBackground.Ringing" parent="KaleyraSDKDesign.BottomSheetBackground">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>
</resources>