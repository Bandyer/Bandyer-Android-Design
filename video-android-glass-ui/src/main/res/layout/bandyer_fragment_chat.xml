<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="?attr/bandyer_smartGlassChatFragmentStyle">

    <com.bandyer.video_android_glass_ui.chat.BandyerChatMessageView
        android:id="@+id/bandyer_chat_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:theme="?attr/bandyer_recyclerViewItemStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bandyer_messages"
        app:layout_constraintBottom_toBottomOf="@id/bandyer_messages"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bandyer_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bandyer_bottom_action_bar"
        tools:listitem="@layout/bandyer_chat_item_layout"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bandyer_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/bandyer_counterStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bandyer_bottom_action_bar"/>

    <com.bandyer.video_android_glass_ui.bottom_action_bar.BandyerBottomActionBarView
        android:id="@+id/bandyer_bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/bandyer_bottomActionBarStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>