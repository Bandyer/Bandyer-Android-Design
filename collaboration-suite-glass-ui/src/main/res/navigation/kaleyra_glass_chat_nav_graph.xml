<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smartglass_nav_graph_chat"
    app:startDestination="@id/chatFragment">

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.kaleyra.collaboration_suite_glass_ui.chat.ChatFragment"
        android:label="ChatFragment">
        <action
            android:id="@+id/action_chatFragment_to_chatMenuFragment"
            app:destination="@id/chatMenuFragment" />
        <argument
            android:name="enableTilt"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
    <fragment
        android:id="@+id/chatMenuFragment"
        android:name="com.kaleyra.collaboration_suite_glass_ui.chat.menu.ChatMenuFragment"
        android:label="ChatMenuFragment">
        <argument
            android:name="enableTilt"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>
</navigation>