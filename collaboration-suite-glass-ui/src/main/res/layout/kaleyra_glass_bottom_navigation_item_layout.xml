<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/kaleyra_rootLayoutStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/kaleyra_gesture_icon"
        style="?attr/kaleyra_iconStyle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/kaleyra_gesture_text"
        style="?attr/kaleyra_iconTipStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Swipe" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/kaleyra_action_text"
        style="?attr/kaleyra_labelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="cancel" />

</LinearLayout>
