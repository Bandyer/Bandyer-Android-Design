<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenLogoDialog.Dialing">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_callWatermarkStyle" />
        <attr name="recyclerViewStyle" />
        <attr name="kaleyra_recyclerViewItemStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="bottomNavigationStyle" />
    </declare-styleable>

    <!-- DIALING FRAGMENT -->
    <style name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.Logo.Dialing" parent="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.Logo">
        <item name="kaleyra_titleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Title.FullScreenDialog.Dialing</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog.Dialing</item>
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo.Dialing</item>
    </style>

    <!-- TITLE -->
    <style name="KaleyraCollaborationSuiteUI.TextView.Title.FullScreenDialog.Dialing" parent="KaleyraCollaborationSuiteUI.TextView.Title.FullScreenDialog">
        <item name="android:visibility">gone</item>
    </style>

    <!-- SUBTITLE -->
    <style name="KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog.Dialing" parent="KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog">
        <item name="android:text">@string/kaleyra_glass_dialing</item>
    </style>

    <!-- BOTTOM NAVIGATION -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo.Dialing" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo">
        <item name="kaleyra_tapItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Tap.FullScreenLogoDialog.Dialing</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Tap.FullScreenLogoDialog.Dialing" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Tap.FullScreenLogoDialog">
        <item name="android:visibility">gone</item>
    </style>
</resources>