<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.Glass.Volume">
        <attr name="bottomNavigationStyle" />
        <attr name="kaleyra_bottomNavigationVoiceStyle" />
        <attr name="sliderStyle" />
    </declare-styleable>

    <!-- VOLUME FRAGMENT -->
    <style name="KaleyraCollaborationSuiteUI.Glass.Volume" parent="KaleyraCollaborationSuiteUI.Glass">
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Volume</item>
        <item name="kaleyra_bottomNavigationVoiceStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Volume.VoiceCommand</item>
        <item name="sliderStyle">@style/KaleyraCollaborationSuiteUI.Glass.Slider</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation">
        <item name="kaleyra_firstItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.Volume</item>
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.Volume</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.Volume</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem">
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.FirstItem.Volume</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeVolume</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.FirstItem.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.FirstItem">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_arrow_left</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeVolume" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_decrease</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem">
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemVolume</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemVolume" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_back</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem">
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.SecondItem.Volume</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassIconTip.SecondItem.Volume</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemVolume</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.SecondItem.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.SecondItem">
        <item name="srcCompat">@drawable/ic_kaleyra_glass_arrow_right</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.SecondItem.Volume" parent="KaleyraCollaborationSuiteUI.TextView.GlassIconTip.SecondItem">
        <item name="android:text">@string/kaleyra_glass_swipe</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemVolume" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_increase</item>
    </style>

    <!-- VOICE COMMANDS -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Volume.VoiceCommand" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Volume">
        <item name="kaleyra_firstItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.VoiceCommand.Volume</item>
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.VoiceCommand.Volume</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.VoiceCommand.Volume</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.VoiceCommand.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.VoiceCommand">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.VoiceCommand.Volume</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeVolume.VoiceCommand</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.VoiceCommand.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.VoiceCommand">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_decrease</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeVolume.VoiceCommand" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeVolume">
        <item name="android:text">@string/kaleyra_glass_decrease</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.VoiceCommand.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.VoiceCommand">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.VoiceCommand.Volume</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemVolume.VoiceCommand</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.VoiceCommand.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.VoiceCommand">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_back</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemVolume.VoiceCommand" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemVolume">
        <item name="android:text">@string/kaleyra_glass_back</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.VoiceCommand.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.VoiceCommand">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.VoiceCommand.Volume</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemVolume.VoiceCommand</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.VoiceCommand.Volume" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.VoiceCommand">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_increase</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemVolume.VoiceCommand" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemVolume">
        <item name="android:text">@string/kaleyra_glass_increase</item>
    </style>
</resources>