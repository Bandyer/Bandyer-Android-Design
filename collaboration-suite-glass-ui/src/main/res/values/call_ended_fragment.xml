<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.CallEnded">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="bottomNavigationStyle" />
        <attr name="kaleyra_bottomNavigationVoiceStyle" />
    </declare-styleable>

    <!-- CALL ENDED FRAGMENT -->
    <style name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.Logo.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.Logo">
        <item name="android:horizontalScrollViewStyle">@style/KaleyraCollaborationSuiteUI.Glass.HorizontalScrollView.FullScreenLogoDialog.CallEnded</item>
        <item name="linearProgressIndicatorStyle">@style/KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.Logo.ProgressBar.CallEnded</item>
        <item name="kaleyra_titleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Title.FullScreenDialog.CallEnded</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog.CallEnded</item>
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo.CallEnded</item>
        <item name="kaleyra_bottomNavigationVoiceStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo.VoiceCommand.CallEnded</item>
    </style>

    <!-- TITLE -->
    <style name="KaleyraCollaborationSuiteUI.TextView.Title.FullScreenDialog.CallEnded" parent="KaleyraCollaborationSuiteUI.TextView.Title.FullScreenDialog">
        <item name="android:text">@string/kaleyra_glass_call_ended</item>
    </style>

    <!-- SUBTITLE -->
    <style name="KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog.CallEnded" parent="KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog">
        <item name="android:textColor">@color/kaleyra_color_white_80</item>
    </style>

    <!-- SCROLLVIEW -->
    <style name="KaleyraCollaborationSuiteUI.Glass.HorizontalScrollView.FullScreenLogoDialog.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.HorizontalScrollView.FullScreenLogoDialog">
        <item name="android:visibility">gone</item>
    </style>

    <!-- PROGRESS BAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.Logo.ProgressBar.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.Logo.ProgressBar">
        <item name="android:visibility">gone</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo">
        <item name="kaleyra_firstItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.CallEnded</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.CallEnded</item>
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.CallEnded</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem">
        <item name="android:visibility">gone</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem">
        <item name="android:visibility">gone</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem">
        <item name="android:visibility">gone</item>
    </style>

    <!-- VOICE COMMAND -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo.VoiceCommand.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo.VoiceCommand">
        <item name="kaleyra_firstItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.VoiceCommand.FullScreenLogoDialog.CallEnded</item>
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.VoiceCommand.FullScreenLogoDialog.CallEnded</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.VoiceCommand.FullScreenLogoDialog.CallEnded</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.VoiceCommand.FullScreenLogoDialog.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.VoiceCommand.FullScreenLogoDialog">
        <item name="android:visibility">gone</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.VoiceCommand.FullScreenLogoDialog.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.VoiceCommand.FullScreenLogoDialog">
        <item name="android:visibility">gone</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.VoiceCommand.FullScreenLogoDialog.CallEnded" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.VoiceCommand.FullScreenLogoDialog">
        <item name="android:visibility">gone</item>
    </style>

</resources>