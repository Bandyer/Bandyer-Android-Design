<resources>
    <style name="KaleyraCollaborationSuiteUI.RoundedImageGlass" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">@dimen/kaleyra_dimen_space40</item>
        <item name="android:layout_height">@dimen/kaleyra_dimen_space40</item>
        <item name="shapeAppearanceOverlay">@style/KaleyraCollaborationSuiteUI.RoundedImageGlass.ShapeAppearanceOverlay</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.RoundedImageGlass.Bordered" parent="KaleyraCollaborationSuiteUI.RoundedImageGlass">
        <item name="strokeWidth">@dimen/kaleyra_dimen_space1</item>
        <item name="android:padding">@dimen/kaleyra_dimen_space1</item>
        <item name="strokeColor">@android:color/black</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.RoundedImageGlass.ShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>