<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.EndCall">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="bottomNavigationStyle" />
        <attr name="kaleyra_bottomNavigationVoiceStyle" />
    </declare-styleable>

    <!-- END CALL FRAGMENT -->
    <style name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.EndCall" parent="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog">
        <item name="kaleyra_titleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Title.FullScreenDialog.EndCall</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog.EndCall</item>
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.EndCall</item>
        <item name="kaleyra_bottomNavigationVoiceStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.VoiceCommand.EndCall</item>
    </style>

    <!-- TITLE -->
    <style name="KaleyraCollaborationSuiteUI.TextView.Title.FullScreenDialog.EndCall" parent="KaleyraCollaborationSuiteUI.TextView.Title.FullScreenDialog">
        <item name="android:text">@string/kaleyra_glass_want_end_call</item>
    </style>

    <!-- SUBTITLE -->
    <style name="KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog.EndCall" parent="KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog">
        <item name="android:text">@string/kaleyra_glass_confirm_end_call</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.EndCall" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog">
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.EndCall</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.EndCall</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.EndCall" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem">
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemEndCall</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemEndCall" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_cancel</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.EndCall" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.EndCall</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemEndCall</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.EndCall" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space4</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemEndCall" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_confirm</item>
    </style>

    <!-- VOICE COMMANDS -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.VoiceCommand.EndCall" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.VoiceCommand">
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.VoiceCommand.EndCall</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.VoiceCommand.EndCall</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.VoiceCommand.EndCall" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.VoiceCommand">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.VoiceCommand.EndCall</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemEndCall.VoiceCommand</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.VoiceCommand.EndCall" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.VoiceCommand">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_cancel</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemEndCall.VoiceCommand" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemEndCall">
        <item name="android:text">@string/kaleyra_glass_cancel</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.VoiceCommand.EndCall" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.VoiceCommand">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.VoiceCommand.EndCall</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemEndCall.VoiceCommand</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.VoiceCommand.EndCall" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.VoiceCommand">
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space4</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_confirm</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemEndCall.VoiceCommand" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemEndCall">
        <item name="android:text">@string/kaleyra_glass_confirm</item>
    </style>
</resources>