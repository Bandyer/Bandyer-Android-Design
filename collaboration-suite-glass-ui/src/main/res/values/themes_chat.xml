        <item name="kaleyra_chatMenuStyle">@style/KaleyraCollaborationSuiteUI.Glass.DarkBackground.ChatMenu</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme.GlassChat.RootLayout" parent="">
        <item name="android:background">@color/kaleyra_glass_background_color</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Theme.GlassChat" parent="KaleyraCollaborationSuiteUI.Theme.DayNight.GlassChat"/>
