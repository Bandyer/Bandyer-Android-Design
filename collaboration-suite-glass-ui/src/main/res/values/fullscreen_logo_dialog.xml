<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenLogoDialog">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_callWatermarkStyle" format="reference" />
        <attr name="android:horizontalScrollViewStyle" />
        <attr name="kaleyra_participantsStyle" />
        <attr name="linearProgressIndicatorStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="kaleyra_subtitleStyle" />
        <attr name="kaleyra_counterStyle" />
        <attr name="bottomNavigationStyle" />
    </declare-styleable>

    <!-- FULL SCREEN LOGO DIALOG FRAGMENT -->
    <style name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.Logo" parent="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog">
        <item name="kaleyra_callWatermarkStyle">@style/KaleyraCollaborationSuiteUI.CallWatermark</item>
        <item name="android:horizontalScrollViewStyle">@style/KaleyraCollaborationSuiteUI.Glass.HorizontalScrollView.FullScreenLogoDialog</item>
        <item name="kaleyra_participantsStyle">@style/KaleyraCollaborationSuiteUI.TextView.Title.FullScreenLogoDialogParticipants</item>
        <item name="linearProgressIndicatorStyle">@style/KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.Logo.ProgressBar</item>
        <item name="kaleyra_titleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Title.FullScreenDialog</item>
        <item name="kaleyra_subtitleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog</item>
        <item name="kaleyra_counterStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog.Counter</item>
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo</item>
    </style>

    <!-- SCROLLVIEW -->
    <style name="KaleyraCollaborationSuiteUI.Glass.HorizontalScrollView.FullScreenLogoDialog" parent="">
        <item name="android:fillViewport">true</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.Title.FullScreenLogoDialogParticipants" parent="KaleyraCollaborationSuiteUI.TextView.Title">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/kaleyra_glass_menu_item_color</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_40sp</item>
        <item name="android:minHeight">@dimen/kaleyra_dimen_space0</item>
        <item name="android:lineSpacingExtra">@dimen/kaleyra_dimen_space0</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space32</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space32</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- PROGRESS BAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.FullScreenDialog.Logo.ProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">?attr/colorSecondary</item>
    </style>

    <!-- COUNTER -->
    <style name="KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog.Counter" parent="KaleyraCollaborationSuiteUI.TextView.Subtitle.FullScreenDialog">
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space16</item>
        <item name="android:layout_marginBottom">@dimen/kaleyra_dimen_space16</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog.Logo" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.FullScreenDialog">
        <item name="kaleyra_firstItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.FullScreenLogoDialog</item>
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.FullScreenLogoDialog</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.FullScreenLogoDialog</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.FullScreenLogoDialog" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.FullScreenLogoDialog</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.FirstItemFullScreenLogoDialog</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.FullScreenLogoDialog" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_browse</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.FirstItemFullScreenLogoDialog" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_browse</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.FullScreenLogoDialog" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.FullScreenLogoDialog</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemFullScreenLogoDialog</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.FullScreenLogoDialog" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemFullScreenLogoDialog" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.FullScreenLogoDialog" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.FullScreenLogoDialog</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemFullScreenLogoDialog</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.FullScreenLogoDialog" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_accept</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemFullScreenLogoDialog" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_accept</item>
    </style>
</resources>