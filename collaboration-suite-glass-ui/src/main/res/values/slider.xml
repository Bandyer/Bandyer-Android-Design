<resources>
    <!-- SLIDER -->
    <style name="KaleyraCollaborationSuiteUI.Glass.Slider" parent="KaleyraCollaborationSuiteUI.Glass">
        <item name="seekBarStyle">@style/KaleyraCollaborationSuiteUI.Glass.Slider.SeekBar</item>
        <item name="android:textViewStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassSlider</item>
    </style>

    <!-- SLIDER SEEKBAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.Slider.SeekBar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:paddingStart">@dimen/kaleyra_dimen_space0</item>
        <item name="android:paddingEnd">@dimen/kaleyra_dimen_space0</item>
        <item name="android:thumb">@null</item>
        <item name="tickMark">@null</item>
        <item name="android:progressDrawable">@drawable/kaleyra_glass_seekbar_track</item>
        <item name="android:background">@null</item>
    </style>

    <!-- SLIDER TEXT -->
    <style name="KaleyraCollaborationSuiteUI.TextView.GlassSlider" parent="KaleyraCollaborationSuiteUI.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_40sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/kaleyra_dimen_space0</item>
    </style>
</resources>