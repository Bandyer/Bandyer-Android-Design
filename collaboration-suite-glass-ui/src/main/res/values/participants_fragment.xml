<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.Participants">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_userInfoStyle" />
        <attr name="recyclerViewStyle" />
        <attr name="kaleyra_recyclerViewItemStyle" />
        <attr name="bottomNavigationStyle" />
    </declare-styleable>

    <!-- PARTICIPANTS FRAGMENT -->
    <style name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.Participants" parent="KaleyraCollaborationSuiteUI.Glass.DarkBackground">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.DarkBackground.RootLayout.Participants</item>
        <item name="kaleyra_userInfoStyle">@style/KaleyraCollaborationSuiteUI.Glass.UserInfo</item>
        <item name="recyclerViewStyle">@style/KaleyraCollaborationSuiteUI.Glass.RecyclerView</item>
        <item name="kaleyra_recyclerViewItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.RecyclerViewItem</item>
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Participants</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.RootLayout.Participants" parent="KaleyraCollaborationSuiteUI.Glass.DarkBackground.RootLayout">
        <item name="android:background">@color/kaleyra_glass_background_color</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Participants" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation">
        <item name="kaleyra_firstItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.Participants</item>
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.Participants</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.Participants</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.Participants" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.Participants</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeParticipants</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.Participants" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_browse</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeParticipants" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_browse</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.Participants" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.Participants</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemParticipants</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.Participants" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemParticipants" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.Participants" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem">
        <item name="android:visibility">gone</item>
    </style>
</resources>