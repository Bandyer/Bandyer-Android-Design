<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.Glass.Zoom">
        <attr name="bottomNavigationStyle" />
        <attr name="sliderStyle" />
    </declare-styleable>

    <!-- ZOOM FRAGMENT -->
    <style name="KaleyraCollaborationSuiteUI.Glass.Zoom" parent="KaleyraCollaborationSuiteUI.Glass">
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Zoom</item>
        <item name="sliderStyle">@style/KaleyraCollaborationSuiteUI.Glass.Slider</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.Zoom" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation">
        <item name="kaleyra_firstItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.Zoom</item>
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.Zoom</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.Zoom</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.Zoom" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.Zoom</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeZoom</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.Zoom" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_decrease</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeZoom" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_decrease</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.Zoom" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.Zoom</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemZoom</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.Zoom" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemZoom" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.Zoom" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.Zoom</item>
        <item name="kaleyra_iconStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.Icon.FirstItem</item>
        <item name="kaleyra_iconTipStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassIconTip.FirstItem</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemZoom</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.Zoom" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_increase</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemZoom" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_increase</item>
    </style>
</resources>