<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="KaleyraCollaborationSuiteUI.Glass.UserDataConsentAgreement">
        <attr name="recyclerViewStyle" tools:ignore="ResourceName" />
        <attr name="kaleyra_recyclerViewItemStyle" />
        <attr name="kaleyra_titleStyle" />
        <attr name="bottomNavigationStyle" tools:ignore="ResourceName" />
    </declare-styleable>

    <!-- USER DATA CONSENT AGREEMENT FRAGMENT -->
    <style name="KaleyraCollaborationSuiteUI.Glass.UserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.Glass">
        <item name="recyclerViewStyle">@style/KaleyraCollaborationSuiteUI.Glass.RecyclerView.UserDataConsentAgreement</item>
        <item name="kaleyra_messageStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.GlassUserDataConsentAgreement</item>
        <item name="kaleyra_recyclerViewItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.UserDataConsentAgreement.RecyclerViewItem</item>
        <item name="kaleyra_titleStyle">@style/KaleyraCollaborationSuiteUI.TextView.Title.GlassUserDataConsentAgreement</item>
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.UserDataConsentAgreement</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.RecyclerView.UserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.Glass.RecyclerView">
        <item name="android:background">@null</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.UserDataConsentAgreement.RecyclerViewItem" parent="">
        <item name="kaleyra_messageStyle">@style/KaleyraCollaborationSuiteUI.TextView.Subtitle.GlassUserDataConsentAgreement</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.Subtitle.GlassUserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.TextView.Subtitle">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_32sp</item>
        <item name="android:layout_marginTop">@dimen/kaleyra_dimen_space12</item>
        <item name="android:layout_marginBottom">@dimen/kaleyra_dimen_space12</item>
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space32</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space32</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.Title.GlassUserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.TextView.Title">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/kaleyra_dimen_text_40sp</item>
        <item name="android:layout_marginStart">@dimen/kaleyra_dimen_space32</item>
        <item name="android:layout_marginEnd">@dimen/kaleyra_dimen_space32</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.UserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation">
        <item name="kaleyra_firstItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.UserDataConsentAgreement</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.UserDataConsentAgreement</item>
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.UserDataConsentAgreement</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.UserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.UserDataConsentAgreement</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeUserDataConsentAgreement</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.UserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_browse</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeUserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_browse</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.UserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.UserDataConsentAgreement</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.UserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem">
        <item name="android:clickable">true</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.UserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.UserDataConsentAgreement</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.UserDataConsentAgreement" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem">
        <item name="android:clickable">true</item>
    </style>
</resources>