<resources>
    <declare-styleable name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.ChatMenu">
        <attr name="kaleyra_rootLayoutStyle" />
        <attr name="kaleyra_userInfoStyle" />
        <attr name="recyclerViewStyle" />
        <attr name="kaleyra_recyclerViewVideoCallItemStyle" format="reference" />
        <attr name="kaleyra_recyclerViewCallItemStyle" format="reference" />
        <attr name="bottomNavigationStyle" />
    </declare-styleable>

    <!-- CONTACT DETAILS FRAGMENT -->
    <style name="KaleyraCollaborationSuiteUI.Glass.DarkBackground.ChatMenu" parent="KaleyraCollaborationSuiteUI.Glass">
        <item name="kaleyra_userInfoStyle">@style/KaleyraCollaborationSuiteUI.Glass.UserInfo</item>
        <item name="recyclerViewStyle">@style/KaleyraCollaborationSuiteUI.Glass.RecyclerView</item>
        <item name="kaleyra_recyclerViewVideoCallItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.RecyclerViewItem.VideoCall</item>
        <item name="kaleyra_recyclerViewCallItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.RecyclerViewItem.Call</item>
        <item name="bottomNavigationStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomNavigation.ChatMenu</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.RecyclerViewItem.VideoCall" parent="KaleyraCollaborationSuiteUI.Glass.RecyclerViewItem">
        <item name="android:textViewStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassRecyclerViewItem.VideoCall</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassRecyclerViewItem.VideoCall" parent="KaleyraCollaborationSuiteUI.TextView.GlassRecyclerViewItem">
        <item name="android:text">@string/kaleyra_glass_videocall</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.RecyclerViewItem.Call" parent="KaleyraCollaborationSuiteUI.Glass.RecyclerViewItem">
        <item name="android:textViewStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassRecyclerViewItem.Call</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassRecyclerViewItem.Call" parent="KaleyraCollaborationSuiteUI.TextView.GlassRecyclerViewItem">
        <item name="android:text">@string/kaleyra_glass_call</item>
    </style>

    <!-- BOTTOM NAVIGATION BAR -->
    <style name="KaleyraCollaborationSuiteUI.Glass.BottomNavigation.ChatMenu" parent="KaleyraCollaborationSuiteUI.Glass.BottomNavigation">
        <item name="kaleyra_firstItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.ChatMenu</item>
        <item name="kaleyra_thirdItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.ChatMenu</item>
        <item name="kaleyra_secondItemStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.ChatMenu</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem.ChatMenu" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.FirstItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.ChatMenu</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeChatMenu</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem.ChatMenu" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.FirstItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_browse</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SwipeChatMenu" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_browse</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem.ChatMenu" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.ThirdItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.ChatMenu</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemChatMenu</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem.ChatMenu" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.ThirdItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.ThirdItemChatMenu" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_close</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem.ChatMenu" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.SecondItem">
        <item name="kaleyra_rootLayoutStyle">@style/KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.ChatMenu</item>
        <item name="kaleyra_labelStyle">@style/KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemChatMenu</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem.ChatMenu" parent="KaleyraCollaborationSuiteUI.Glass.BottomActionItem.RootLayout.SecondItem">
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/kaleyra_glass_select</item>
    </style>

    <style name="KaleyraCollaborationSuiteUI.TextView.GlassLabel.SecondItemChatMenu" parent="KaleyraCollaborationSuiteUI.TextView.GlassLabel">
        <item name="android:text">@string/kaleyra_glass_select</item>
    </style>
</resources>