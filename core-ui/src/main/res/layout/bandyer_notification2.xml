<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="#282e31">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layerType="hardware"
        android:src="@drawable/avatar"
        tools:src="#0004FF" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignRight="@+id/photo"
        android:layout_alignBottom="@+id/photo"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="-2dp" />

    <LinearLayout
        android:id="@+id/text_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/photo"
        android:layout_alignTop="@+id/photo"
        android:layout_alignBottom="@+id/photo"
        android:layout_marginTop="-12dp"
        android:layout_marginBottom="-12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#FFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            tools:text="Mario Rossi"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#FFF"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="left"
            tools:text="title"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#6BFFFFFF"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="left"
            tools:text="subtitle"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="48.3dp"
        android:paddingTop=".3dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
<!--        android:background="@drawable/call_notification_line"-->


        <FrameLayout
            android:id="@+id/decline_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">
<!--        android:background="@drawable/bar_selector_white"-->

            <TextView
                android:id="@+id/decline_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#ef5050"
                android:fontFamily="sans-serif-medium"
                android:drawableLeft="@drawable/bandyer_z_end_call"
                android:drawablePadding="12dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/answer_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">
<!--            android:background="@drawable/bar_selector_white"-->

            <TextView
                android:id="@+id/answer_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#5ee067"
                android:fontFamily="sans-serif-medium"
                android:drawableLeft="@drawable/bandyer_z_audio_only"
                android:drawablePadding="12dp" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>